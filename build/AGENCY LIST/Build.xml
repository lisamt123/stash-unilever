      <runTest>AR_Test_FaqsComponentController.cls</runTest>
      <runTest>AR_Test_FinancialsController.cls</runTest>
      <runTest>AR_Test_FixedDescriptionsHandler.cls</runTest>
      <runTest>AR_Test_FixedRateCard.cls</runTest>
