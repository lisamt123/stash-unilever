<!--    Build Script in Ant for Unilever Salesforce Projects - BEGIN                                               -->
<!--    ******************************************************************************************************************* -->
<project name="salesforce" default="validate" basedir="." xmlns:sf="antlib:com.salesforce">

  <!-- *************************************************************** -->
  <!--   Properties for Salesforce ANT targets                         -->
  <!-- *************************************************************** -->
  <property file="${basedir}/build.properties"/>
  <property environment="env"/>
  <!-- Properties for salesforce dataloader CLI for IPM NG-->
  <property name="dataLoaderAPIVersion" value="35.0.0-uber" />
  <!-- *************************************************************** -->
  <!--   Set-Up of Salesforce Ant / CLI Jar Classpath for Agency List       -->
  <!-- *************************************************************** -->
  <!-- Define required jars for salesforce dataloder CLI-->
  <path id="taskDependencies">
    <pathelement location="${basedir}/lib/ant.jar"/>
    <pathelement location="${basedir}/lib/antutils.jar"/>
    <pathelement location="${basedir}/lib/commons-io-2.4.jar"/>
    <pathelement location="${basedir}/lib/commons-lang-2.6.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.1.3.jar"/>
    <pathelement location="${basedir}/lib/gson-2.2.4.jar"/>
    <pathelement location="${basedir}/lib/httpclient-4.3.5.jar"/>
    <pathelement location="${basedir}/lib/httpcore-4.3.2.jar"/>
    <pathelement location="${basedir}/lib/json-20080701.jar"/>
  </path>
  <!-- Define salesforce Ant Jar-->
  <taskdef resource="com/salesforce/antlib.xml" uri="antlib:com.salesforce">
    <classpath>
      <pathelement location="${basedir}/lib/ant-salesforce.jar" />
    </classpath>
  </taskdef>
  <!-- ***************************************************************************** -->
  <!-- ANT Import Files for invoking APEX inside ANT Scripts                         -->
  <!-- ***************************************************************************** -->
  <import file="${basedir}/lib/exec_anon.xml"/>
  <import file="${basedir}/lib/deploy.xml"/>
  <import file="${basedir}/lib/undeploy.xml"/>
  <import file="${basedir}/lib/run_tests.xml"/>
  <import file="${basedir}/lib/package_generator.xml"/>


<!-- ***************************************************************************** -->
  <!-- Validate the  set of BET meta-data before deployment                          -->
  <!-- ***************************************************************************** -->
  <target name="validate">
    <echo level="info">Testing the deployment of BET</echo>
    <sf:deploy username="${sf.username}"
      password="${sf.password}"
      serverurl="${sf.serverurl}"
      checkOnly="true"
      logType="Debugonly"
      testLevel="RunSpecifiedTests"
      allowMissingFiles="true"
      autoUpdatePackage="true"
      ignoreWarnings="true"
      deployRoot="src"
      pollWaitMillis="10000"
      maxPoll="4000">
	   <runTest>CommunitiesLandingControllerTest</runTest>
      <runTest>CommunitiesLoginControllerTest</runTest>
      <runTest>CommunitiesSelfRegConfirmControllerTest</runTest>
      <runTest>CommunitiesSelfRegControllerTest</runTest>
      <runTest>ExceptionLoggingHelper_Test</runTest>
      <runTest>ExceptionsTest</runTest>
      <runTest>TriggerFactoryTest</runTest>
      <runTest>TestDataFactory</runTest>
      <runTest>UserTestUtil</runTest>
      <runTest>UserTrigger_Test</runTest>
      <runTest>AR_CaptchaHttpMock</runTest>
      <runTest>AR_Test_AgencyDetail</runTest>
      <runTest>AR_Test_AgencyExpAndExperienceController</runTest>
      <runTest>AR_Test_AgencyGridView</runTest>
      <runTest>AR_Test_AgencyMyProfile</runTest>
      <runTest>AR_Test_AgencyMyProfileEdit</runTest>
      <runTest>AR_Test_AgencyMyProfileEditGeography</runTest>
      <runTest>AR_Test_AgencyMyProfileEditProjects</runTest>
      <runTest>AR_Test_AgencyPortfolioAndInformation</runTest>
      <runTest>AR_Test_AgencyProfileController</runTest>
      <runTest>AR_Test_Application_Trigger_Handler</runTest>
      <runTest>AR_Test_AttachmentTransferClass</runTest>
      <runTest>AR_Test_BusinessBreakdownController</runTest>
      <runTest>AR_Test_CaptchaHelper</runTest>
      <runTest>AR_Test_CMSData</runTest>
      <runTest>AR_Test_DatePicker</runTest>
      <runTest>AR_Test_FaqsComponentController</runTest>
      <runTest>AR_Test_FinancialsController</runTest>
      <runTest>AR_Test_FixedDescriptionsHandler</runTest>
      <runTest>AR_Test_FixedRateCard</runTest>
      <runTest>AR_Test_ForgotPasswordController</runTest>
      <runTest>AR_Test_GeneralInformationController</runTest>
      <runTest>AR_Test_GeographyController</runTest>
      <runTest>AR_Test_InsuranceTradeRegsAndPolicyCtrl</runTest>
      <runTest>AR_Test_LandingPage</runTest>
      <runTest>AR_Test_Login</runTest>
      <runTest>AR_Test_PortfolioPopup</runTest>
      <runTest>AR_Test_ProgressBarComponentController</runTest>
      <runTest>AR_Test_RateCardController</runTest>
      <runTest>AR_Test_RateReviewPopup</runTest>
      <runTest>AR_Test_RegistrationController</runTest>
      <runTest>AR_Test_ResumeApplication</runTest>
      <runTest>AR_Test_SessionHandler</runTest>
      <runTest>AR_Test_SObjectHolder</runTest>
      <runTest>AR_Test_SupplierInfoController</runTest>
      <runTest>AR_Test_UniNonUniExperienceController</runTest>
      <runTest>AR_Test_UploadHelper</runTest>
  </sf:deploy>
  <!--<antcall target="generatePackage"/>-->
  </target>
</project>