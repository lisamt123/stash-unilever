<apex:page standardController="IPM_Task__c" extensions="IPM_NewTask,IPM_GetHelpDoc"  sidebar="false" standardStylesheets="true" showHeader="false">      
    <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/bootstrap.css?frameX')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_Buttons.css?frameX')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'assets/font-awesome/css/font-awesome.min.css?frameX')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_AddTaskNew.css')}"/>  
    <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_HomePage.css')}"/>
    <div class="">
        <div class="" id="EditTask">
            <apex:form id="form">
                <div class="panelScroll">
                    <div class="col-xs-12 marginTop">
                    
                        <!-- To place the help symbol in the top right hand corner of page -->
                        <div>
                        <apex:outputPanel layout="block" styleClass="SecButtonSet delete pull-right" >
                            <apex:outputLink value="{!URL}" id="theLink" styleClass="icoButton question" target="_blank" title="{!$Label.IPM_Help}">?</apex:outputLink>
	                        </apex:outputPanel> 
                        </div>
                    	<div>
	                    	<apex:outputPanel id="errMassage2" styleClass="errorBlock" layout="block" >
	                                    <div><span ><apex:pagemessages ></apex:pagemessages></span></div>
                        </apex:outputPanel> 
                        </div>        
                        <div class=""><apex:outputLabel value="To-do" styleClass="fieldLabel fieldFont" /></div>
                        <div class="inputField"><apex:inputField value="{!tasks.IPM_Task_Name__c}" styleClass="fieldFont" /></div> 
                    </div>
                    <div class="col-xs-12 middlePanel">
                        <div class=""><apex:outputLabel value="Gate document & Phase" styleClass="fieldLabel fieldFont"/></div>
                        <div class="gatedocModal">
                            <div class="inputField"><apex:inputText value="{!tasks.IPM_Type_of_Gate__c}" styleClass="fieldFont"  disabled="true">
                                </apex:inputText>
                            </div>
                        </div>
                        <div class="phaseModal">
                            <div class="inputField">
                                <apex:inputText value="{!tasks.IPM_Phase__c}" styleClass="fieldFont" disabled="true">
                                </apex:inputText>    
                            </div>
                        </div>
                    </div>  
                    
                    <apex:outputPanel layout="block" styleClass="col-xs-12" rendered="{!redirectToGateDocument}">
                        <div class=""><apex:outputLabel value="Functional Role" styleClass="fieldLabel fieldFont" /></div>
                        <div class="inputField">
                            <apex:outputText value="{!tasks.IPM_Function__c}" />
                        </div>
                    </apex:outputPanel>
                    <apex:outputPanel layout="block" styleClass="col-xs-12" rendered="{!!redirectToGateDocument}">
                        <div class=""><apex:outputLabel value="Functional Role" styleClass="fieldLabel fieldFont" /></div>
                        <apex:actionRegion >
                        <div class="functionError inputField">
                            <div class="inputField">
                                <apex:selectList size="1" value="{!tasks.IPM_Function__c}">
                                    <apex:selectOptions value="{!FuntionalRolelist}" /> 
                                    <apex:actionSupport event="onchange" rerender="blockToRerender,scriptToRerender" action="{!getSections}"/>
                                </apex:selectList>
                            </div>
                        </div>
                        </apex:actionRegion>
                     </apex:outputPanel> 
                    
                    <apex:outputPanel id="blockSectionPresent" rendered="{!redirectToGateDocument}">
                        <div class="col-xs-12" style="display:{!if(displayDueDate,'block','none')};"> 
                            <div class=""><apex:outputLabel value="Section" styleClass="fieldLabel fieldFont"/></div>
                            <div class="inputField"><apex:outputText value="{!sectionValue}"/>
                            </div>
                            <div class=""><apex:outputLabel value="Assignee" styleClass="fieldLabel fieldFont"/></div>
                            <div class="inputField"><apex:outputText value="{!userIdName[tasks.IPM_Assignee__c]}" rendered="{!if(tasks.IPM_Assignee__c != null,true,false)}"/></div>
                            <div class=""><apex:outputLabel value="Due date" styleClass="fieldLabel fieldFont"/> <i>{!$Label.IPM_OptionalLabel}</i></div>
                            <div class="inputField"><!--class='input-group date'>-->
                                <apex:inputField value="{!tasks.IPM_Due_Date1__c}" styleClass="dateInputBox calendar">
                                </apex:inputField> 
               
                            </div>
                        </div>           
                    </apex:outputPanel>
                    
                    <apex:outputPanel id="blockToRerender" rendered="{!!redirectToGateDocument}" >
                        <div class="col-xs-12" style="display:{!if(displayDueDate,'block','none')};"> 
                            <div class=""><apex:outputLabel value="Section" styleClass="fieldLabel fieldFont"/></div>
                            <div class="inputField">
                                <apex:selectList size="1" value="{!docSecList}">
                                    <apex:selectOptions value="{!Sectionlist}" /> 
                                </apex:selectList>
                            </div>
                            <div class=""><apex:outputLabel value="Assignee" styleClass="fieldLabel fieldFont"/></div>
                            <div class="inputField"><apex:outputText value="{!userIdName[tasks.IPM_Assignee__c]}" rendered="{!if(tasks.IPM_Assignee__c != null,true,false)}"/></div>
                            <div class=""><apex:outputLabel value="Due date" styleClass="fieldLabel fieldFont"/> <i>{!$Label.IPM_OptionalLabel}</i></div>
                            <div class="inputField"><!--class='input-group date'>-->
                                <apex:inputField value="{!tasks.IPM_Due_Date1__c}" styleClass="dateInputBox calendar">
                                </apex:inputField> 
                  
                            </div>
                        </div>           
                    </apex:outputPanel>
                    </div> 
                    <div class="buttonMarginRight marginTop ipmButtonGroup pull-right">               
                        <apex:commandLink action="{!doSaveTasks}" value="Add" styleClass="ipmButton green" rendered="{!if(taskId == null,true,false)}" reRender="form, scriptToRerender" onComplete="{!if(AND(validate),'pagecloseNewTask()','')};"/>
                        <apex:commandLink action="{!doSaveTasks}" value="Save" styleClass="ipmButton green" rendered="{!if(taskId != null,true,false)}" onComplete="pagecloseNewTask();"/>
                    </div>
                               
            </apex:form>
            
            <apex:form >
                <apex:outputPanel id="popup">
                    <apex:outputPanel styleClass="popupBg" layout="block" rendered="{!displayPopUp}"/>
                    <apex:outputPanel styleClass="popup" layout="block" rendered="{!displayPopUp}">
                        <div class="popupContent">{!$Label.IPM_NoResource}</div>
                        <div class="ipmButtonGroup pull-center">
                        </div>
                    </apex:outputPanel>
                </apex:outputPanel>
            </apex:form>
        </div>
    </div>    
    <script src="{!URLFOR($Resource.IPM_Resource, 'js/jquery.js')}" type="text/javascript"></script>
    <script src="{!URLFOR($Resource.IPM_Resource, 'js/bootstrap.min.js')}" type="text/javascript"></script>
    <script src="{!URLFOR($Resource.IPM_Resource, 'js/IPM_AddTaskWizard.js')}" type="text/javascript"></script>
</apex:page>