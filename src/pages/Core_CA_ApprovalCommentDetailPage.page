<apex:page docType="html-5.0" showHeader="false" standardStylesheets="false" sidebar="false" >
    <meta http-equiv="content-type" content="text/html; charset=UTF8" />
    <div class="iPhoneHomeScreenHeight">
        <div class="headerBarBackground" name="top" id="pageTop">
            <table class="headerBarWidth">
                <tr>
                    <td class="headerBarRowAlign" >
                        <img src="{!URLFOR($Resource.MyApprovalsSR, 'img/back.svg')}" ng-click='gotoDetailPage()'  alt="back" class="homePageFilter" />
                    </td>
                </tr>
            </table>
        </div>
        <br/>
        <div ng-repeat="approvalHistory in approvalRequestData.ApprovalHistory" ng-if="approvalHistory.Comment !=null">
        <div class="template" ng-init="DocumentHistoryPanelDisplay=false">
            <div class="defaultBottomBorder" ng-click="DocumentHistoryPanelDisplay = (DocumentHistoryPanelDisplay=='true' ? 'false' : 'true')">
                <span>
                    <label class="detailSectionHeader" >{{approvalHistory.ApprovedDate}} </label>
                </span>
                <span class="alignRight">
                    <img class="arrowButtonStyle" ng-hide="DocumentHistoryPanelDisplay" src="{!URLFOR($Resource.MyApprovalsSR, 'img/showArrow.svg')}" alt="showArrow"/>
                    <img class="arrowButtonStyle" ng-show="DocumentHistoryPanelDisplay" src="{!URLFOR($Resource.MyApprovalsSR, 'img/hideArrow.svg')}" alt="hideArrow"/>
                </span>
            </div>
            <div ng-hide="DocumentHistoryPanelDisplay" id="responsiveDetailSectionwrapper">
                <div class="row fixed-nav-bar-padding">
                    <div class="responsiveDetailSectionTableRowLabel">Performed By</div>
                    <div class="fieldValue">{{approvalHistory.ApproverName}}</div>
                </div>
                <div class="row fixed-nav-bar-padding">
                    <div class="responsiveDetailSectionTableRowLabel">Last Comment</div>
                    <div class="fieldValue">{{approvalHistory.Comment}} </div>
                </div>
            </div>
        </div>
        <br/>
    </div>
    </div>
</apex:page>