<apex:page controller="IPM_ProjectTaskController" sidebar="false" standardStylesheets="false" >
    <!-- Begin Default Content REMOVE THIS -->  
    <h1>Task Details</h1> 
    <apex:repeat value="{!ipmProjectTasks}" var="c">
        {!c.IPM_Assignee__c}
        {!c.IPM_Completed__c}
        {!c.IPM_Function__c}        
        {!c.IPM_Phase__c}
        {!c.IPM_Section_Number__c}
        {!c.IPM_Task_Complexity__c}
        {!c.IPM_Task_Name__c}
        {!c.IPM_Task_Type__c}
        {!c.IPM_Type_of_Gate__c}
        {!c.IPM_Version_Number__c}
    </apex:repeat>
    
    <h1>Project Templates</h1>  
    
    <apex:repeat value="{!ipmProjectTemplates}" var="c">
        {!c.IPM_Category__c}
        {!c.IPM_Template_Complexity__c}                
        {!c.IPM_Template_Name__c}
    </apex:repeat>
    
    <h1>Project document sections</h1>     
    
    <apex:repeat value="{!ipmProjectDocumentSections}" var="c">
        {!c.IPM_Gate_Document_Summary__c}
        {!c.IPM_Section_Status__c}
        {!c.IPM_Project_Document__c}
        {!c.IPM_Project_Section__c}
        {!c.IPM_Section__c}              
        {!c.IPM_Negotiable__c}
        {!c.IPM_PDP_Document_Summary__c}
        {!c.IPM_Section_Help_Text_Long__c}
        {!c.IPM_Section_Name__c}
        {!c.IPM_Section_Owner__c}
        {!c.IPM_Section_Type__c}           
    </apex:repeat>    
    
    <script type="text/javascript">
        window.onload = function() { 
            window.print();  
            parent.location.href="/apex/IPM_Tasklist?id={!projectId}"; 
        }
    </script>
</apex:page>