<apex:page docType="html-5.0" showHeader="false" sidebar="false" standardStylesheets="false" controller="HRO_ManagerOverview_CX">
<html>
    <head>
           <c:HRO_HeaderScripts />
           <link href="/apex/HRO_HeadstartCss" rel="stylesheet" />
            
            <script>
                
     
            </script>
    </head>
     <style>
            @font-face {
                font-family: 'unileverFont';
                src:  url('{!URLFOR($Resource.HROResources,'/fonts/DEDINProFont')}');
            }
            @font-face {
                font-family: 'unileverFont-bold';
                src:  url('{!URLFOR($Resource.HROResources,'/fonts/DEDINProFontBold')}');
            }


            .overviewHeader {
                font-family: 'unileverFont-bold';
            }

            .overviewColVal{
                font-family: 'unileverFont';
                border-top: 1px solid grey;
            }
    </style>

    <c:HRO_NavMenu id="navMenu" isAdmin="true" componentUserId="{!profileUserId}"/>

    <div class="row bodyRow">
        <div class="col-xs-12 bodyDiv">
            <div class="bodyWrapper">
                <div class="bodyContent">
                    <img id="recordHeader-small" class="centerImage width-80 margin-10" src="{!URLFOR($Resource.HROResources, '/SEUnileverResources/onboarding-progress-small.png')}" />

                    <img id="recordHeader" class="width-80" src="{!URLFOR($Resource.HROResources, '/SEUnileverResources/onboarding-progress-large.png')}" />
                    <div class="recordArea">
                        <div class="row bodyRow">
                            <div class="col-xs-3 overviewHeader" >
                                Name
                            </div>
                            <div class="col-xs-3 overviewHeader">
                                Phase
                            </div>
                            <div class="col-xs-3 overviewHeader">
                                %complete
                            </div>
                            <div class="col-xs-3 overviewHeader">
                                Overdue?
                            </div>
                        </div>
                        <apex:repeat value="{!mangerOverviewList}" var="leaderRow">
                            <div class="row bodyRow" style="cursor: pointer;" id="leaderOnboarding">
                                <div class="col-xs-3 overviewColVal" >
                                    <apex:outputText value="{!leaderRow.name}"/>
                                   
                                </div>
                                <div class="col-xs-3 overviewColVal">
                                    <apex:outputText value="{!leaderRow.phase}"/>
                                </div>
                                <div class="col-xs-3 overviewColVal">
                                    <apex:outputText value="{0,number,0}%">
                                        <apex:param value="{!leaderRow.pecentOfCompletion}"/>
                                    </apex:outputText>
                                </div>
                                <div class="col-xs-3 overviewColVal">
                                    <apex:outputText rendered="{!leaderRow.hasOverduedTasks}" value="Yes"/>
                                    <apex:outputText rendered="{!NOT(leaderRow.hasOverduedTasks)}" value="No"/>
                                </div>
                            </div>
                                            
                        </apex:repeat>
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </div>    

    <div class="row bodyRow">
        <div class="col-xs-12 footer">
            Unilever 2015
        </div>
    </div>
    
    <script src="{!URLFOR($Resource.HROResources, '/DEElasticMenu/js/classie.js')}"></script>
    <script src="{!URLFOR($Resource.HROResources, '/DEElasticMenu/js/main3.js')}"></script>
</html>    
</apex:page>