<apex:page controller="ChatterUIController" docType="html-5.0" standardStylesheets="false" sidebar="false" showHeader="false">
<style>
<!--@font-face {
    font-family: "DINProFont";
    src: url('{!URLFOR($Resource.DINProFont)}');    
}-->

@font-face
{
font-family:"DINProFont";
src: url('{!URLFOR($Resource.TestDINProFontEOT,'FF_DIN_Regular/FF_DIN_Regular.eot')}'); 
