    <apex:composition template="Template">
        <apex:define name="pageTitle">Pre-Work Tasks</apex:define>

        <apex:define name="headSection">
                <link rel="stylesheet" type="text/css" href="{! URLFOR($Resource.css_app_chatterui)}"/>
                <link rel="stylesheet" type="text/css" href="{! URLFOR($Resource.css_app_chatterui_profile)}"/>
                <link rel="stylesheet" type="text/css" href="{! URLFOR($Resource.css_app_chatterui_people)}"/>
                <link rel="stylesheet" type="text/css" href="{! URLFOR($Resource.css_app_chatterui_groups)}"/>
                
               

                <script src="{! URLFOR($Resource.js_plugins_jqueryHashChange_min)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_templates)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_profile_templates)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_groups_templates)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_people_templates)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_chatterpage)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_filemanager)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_profilebuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_feedbuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_feeditembuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_postbuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_peoplelistbuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_searchmanager)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_groupbuilder)}"></script>
                <script src="{! URLFOR($Resource.js_app_chatterui_service)}"></script>
                
             <!--Section add to include the JQuery Mobile Resources -->
                   
                 <meta name="viewport" content="width=device-width, initial-scale=1"> </meta>
                 <link rel="stylesheet" type="text/css" href="{!URLFOR($Resource.JQuery_Mobile,'jquery.mobile-1.3.0.min.css')}"/>
                 <script src="{!URLFOR($Resource.JQuery_Mobile,'jquery.mobile-1.3.0.min.js')}" />  
                 
                 <script type="text/javascript">  
                  // to setup the theme for the select menu
                      $(document).bind('mobileinit',function(){
                           $.mobile.selectmenu.prototype.options.nativeMenu = false;
                        });
                     $(document).ready(function() {                        
                        $=$.noConflict(); 
                       $('div.sidebar').css("display","none");                
                         }) ;
                       //validation to select the Programme
                       $('#btnGiveFB').click(function() {
                          alert('Handler for .click() called.');
                        });
                   

                  </script>
             <!--End of the JQuery Mobile section -->

            <!--[if lt IE 9]>
                <link rel="stylesheet" type="text/css" href="{! URLFOR($Resource.css_app_chatterui_iefixes)}"/>
            <![endif]-->
        </apex:define>     
        <apex:define name="sidebar">
            <c:Sidebar />
        </apex:define>
        
        <apex:define name="panels">
            <div class="panels" id="panels">
                <apex:form id="formFeedback"> 
                   <div class="uiScroller forceScroller" id="panelScroller" data-scroller='{"enableRefresh":"true"}'>
                   
              <!--   <div id="pullDown">
                        <span class="pullDownIcon"></span>
                      <span class="pullDownLabel">{!$Label.pull_to_refresh_text}</span>
                    </div> -->
                    
                   
                   <div data-role="page" id="ProgrammesListForFeedback" style="background:#ffffff;">
                      <div data-role="header" id="ProgrammeLogisticsHeader">
                                        <a data-theme="a" data-role="button" href="#" onclick="window.history.back();" target="_self" data-icon="back">Back</a>
                                     
                                        <h1 style="font-family:DINProFont;">Pre-Work Task Details</h1>  
                                                                      
                                </div><!-- /header -->
                                
                   <apex:outputPanel rendered="{!(fetchPreWorkTasks.empty)}">
                   <div data-role="content" class="scrollable" style="padding:40px;background: #ffffff;margin-left:30px;margin-right:30px;border-radius: 9px 9px 9px 9px;border-style:solid;border-width:2px;border-color: #006699;margin-top:30px;margin-bottom:30px;">
                    
                   <apex:outputText value="There are no Pre-Work Tasks for this Programme !!" rendered="{!(fetchPreWorkTasks.empty)}" style="font-family:DINProFont;font-weight:bold;"/>
                   </div>
                   </apex:outputPanel>
                   
                   <apex:outputPanel rendered="{!!(fetchPreWorkTasks.empty)}">  
                   <div data-role="content" class="scrollable" style="padding:40px;background: #ffffff;margin-left:30px;margin-right:30px;border-radius: 9px 9px 9px 9px;border-style:solid;border-width:2px;border-color: #006699;margin-top:30px;margin-bottom:30px;">
                   
                    
                                   
                       <div class="ui-grid-d" >
                             
                          <div class="ui-block-a" style="width: 5%;">
                          
                           
                             
                          </div>
                          
                           <div class="ui-block-b" style="width: 32%;">
                               <b> <p style="font-size:16px;font-family:DINProFont;">Task</p></b>        
                                                                            
                           </div>
                                    
                                     
                            <div class="ui-block-c" style="width: 19%;">
                               <b> <p style="font-size:16px;font-family:DINProFont;">Due Date</p></b>            
                            </div> 
                                  
                            <div class="ui-block-d" style="width: 25%;">
                                  <b> <p style="font-size:16px;font-family:DINProFont;">File</p></b>  
                                     
                             </div> 
                                  
                            <div class="ui-block-e" style="width: 19%;">
                                  <b> <p style="font-size:16px;font-family:DINProFont;">Status</p></b> 
                                  
                            </div>
                             
                         </div><!--/grid-->
                                                          
                             
                             <apex:repeat value="{!fetchPreWorkTasks}" var="c" id="course-listc">
                               
                                 <div class="ui-grid-d" > 
                                 
                                   <div class="ui-block-a" style="width: 5%;">
                                   
                                   <b> <p style="font-size:16px;font-family:DINProFont;">{!c.serialNumber}</p></b>
                                   
                                   </div>
                                        <div class="ui-block-b" style="width: 32%;">
                                            
                                                
                                              
                                               <b> <p style="font-size:16px;font-family:DINProFont;">{!c.preWorkTask.FA_Task_Name__c}</p></b>
                                                 <apex:outputField value="{!c.preWorkTask.FA_Task_Description__c}" style="font-family:DINProFont;font-size:16px;"/>     
                                                                            
                                        </div>
                                    
                                     
                                   <div class="ui-block-c" style="width: 19%;">
                                            
                                             <apex:outputText value="{0,date,MMMM dd, yyyy}">
                                                          <apex:param value="{!c.preWorkTask.FA_Due_Date__c}" />
                                             </apex:outputText>
                                  </div> 
                                  
                                   <div class="ui-block-d" style="width: 25%;" title="click here to download">
                                   
                                     
                                      <apex:repeat value="{!c.preWorkTaskAssignmentAttaches}" var="a" id="attach-lista">
                                            
                                       <a href="/servlet/servlet.FileDownload?file={!a.Id}" style="width:50%;" target="_blank" data-theme="b" data-mini="true" >{!a.name}</a>
                                                  
                                       </apex:repeat>           
                                             
                                  </div> 
                                   <div class="ui-block-e" style="width: 19%;">
                                   
                                  
                                     <apex:outputPanel rendered="{!!c.preWorkTask.FA_Mark_Completed__c}">  
                                                                                      
                                                     <!-- <p style="font-family:DINProFont;font-size:14px;">Mark Complete:</p> -->
                                                     <apex:outputLabel for="status" value="Mark Complete" style="font-family:DINProFont;background:#ffffff;font-size:6px;height:40px;width:195px;"/> 
                                                     <apex:inputCheckbox id="status" value="{!c.preWorkTask.FA_Mark_Completed__c}" style="width:15px; height:15px;background:#ffffff;" disabled="{!c.preWorkTask.FA_Mark_Completed__c}"/>
                                                     <br/><br/>
                                                 
                                                  
                                    </apex:outputPanel>
                                    
                                    <apex:outputPanel rendered="{!c.preWorkTask.FA_Mark_Completed__c}">
                                             <div class="item-name" style="padding-top:9px">                                                                                                          
                                               <div class="item-date"><span class="meta-text">                                                    
                                                <apex:inputCheckbox value="{!c.preWorkTask.FA_Mark_Completed__c}" style="margin-top:-10px;" rendered="{!!c.preWorkTask.FA_Mark_Completed__c}"/>
                                                <apex:outputText value="Completed" style="font-size:14px;" rendered="{!c.preWorkTask.FA_Mark_Completed__c}"/>
                                                </span>   
                                                </div>
                                           </div>
                                   </apex:outputPanel>
                                            
                                  </div>  
                           
                           </div> <!--/grid-->
                             
                           <br/>   
                       </apex:repeat>
                                             
                     </div> 
                    
                     
                     <div data-role="content" style="width:50%;margin-left:auto;margin-right:auto;background:white;font-family:DINProFont;font-size:18px;" data-theme="a">
                           <div class="ui-grid-a">    
                             
                                 <div class="ui-block-a">
                                  <a href="{!PrivateHubURL}" target="_self" data-role="button" data-theme="a">Upload Assignments</a>                                          
                                </div>
                            
                                <div class="ui-block-b">
                                  <apex:commandbutton value="Save" action="{!saveTheTasks}" />
                                </div>
                          </div>   
                            
                      </div> 
                     
                     </apex:outputPanel>  
                     <br/><br/><br/><br/><br/>                  
                    </div> 
                                 
                    <script type="text/javascript">
                        ChatterUI.UserContext = {
                            userId: '{!$User.Id}',
                            sessionId: '{!GETSESSIONID()}',
                            usingMobile: {!usingMobile},
                            userObjectPrefix: '{!userObjectPrefix}',
                            feedObjectPrefix: '{!feedObjectPrefix}'
                            
                        }
                         var AllFourAcreGroupID='{!AllFourAcreGroupID}';
                    </script> 
                    </div> <!-- end .uiScroller -->   
                     </apex:form>                         
            </div>
        </apex:define>

        <apex:define name="overlayContent">
            <div id="overlayContent"></div>
        </apex:define>
    </apex:composition>
    
</apex:page>