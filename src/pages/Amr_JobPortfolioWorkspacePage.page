<apex:page controller="Amr_JobPortfolioWorkspaceController">
    <style>
        .only-alert-label {
            width:80px;
            margin-top:8px;
        }
        .alert-desc-input{
            width:690px;
            margin-left:10px;
            margin-right: 25px;
        }
        .alert-desc-input input[type="text"] {
            width:690px;            
        }
        
        .dateOnlyInput input[type="text"] {
            width:130px !important;         
        }
        
        td {
            font-family: 'dinOffPro',sans-serif !important;
        }
        .alert-content td.data2Col {
             padding-left: 0px !important;
        }
        tr.dataRow td {
             border-width: 1px !important;
        }
    </style>    
   
    <apex:form Id="formId">
        <div class="subcontainer">
            <div class="filter_section width30">
                <div class="filters width20">
                    <div style="">
                        <div class="filter_section">
                            <h4>Job Alerts
                                
                                <!--  <span><img src="/resource/1451457838000/Ad_Manager/Ad-Manager/images/Subtract.png" class="addlicon" data-id="alert-section-id" alt="number"/></span> -->
                                <div class="minusclass commonall" data-id="alert-section-id">                                       
                                </div>
                                
                                </h4>
                        </div>
                    </div>
                    <div class="alert-content alert-section-id">
                        <apex:outputPanel id="MainpgblockForAlert">                     
                        <div>
                            <div class="alert_date alert-sub" style="">
                                <div class="only-alert-label alert-left">
                                New Alert
                                </div>
                                <div class="alert-input alert-left">
                                    <apex:inputField value="{!alertobj.New_Alert__c}" id="newAlertId" html-placeholder="DD/MM/YYYY"/>
                                </div>
                                <div class="alert-desc-input alert-left">
                                    <apex:inputField value="{!alertobj.Alert_Message__c}" id="messageId"/>
                                </div>
                                <div class="alert-input alert-left" style="width:125px;">
                                    <apex:commandButton value="Add" styleClass="allocationbtn btn1 acceptedLike applybtn" style="width: 100px;" action="{!addNewAlert}"  reRender="MainpgblockForAlert,pgblockForAlert,msgs,actStatusId" status="actStatusId" />                                    
                                    <apex:actionStatus id="actStatusId" >
                                        <apex:facet name="start" >
                                          <img src="/img/loading.gif" />                    
                                        </apex:facet>
                                    </apex:actionStatus>
                                </div>
                                <div class="clear"> 
                                </div>
                            </div>                          
                        </div>
                        </apex:outputPanel>
                        
                        <apex:pageBlock id="pgblockForAlert">
                            <apex:pageBlockSection title="Job Alerts" columns="1">
                                <apex:pageBlockTable value="{!alertRecordList}" var="alert" id="text" rendered="{!if(alertRecordList.size>0,true,false)}" columnswidth="100px,100px,500px,100px">
                                    <apex:column value="{!alert.New_Alert__c}" headerValue="Date"/>
                                    <apex:column value="{!alert.Job_Id__r.AdManagerText__c}" headerValue="AD-ID"/>
                                    <apex:column value="{!alert.Alert_Message__c}" headerValue="Alert Message" style="width:300px" />
                                    <apex:column headerValue="Action">
                                        <apex:commandLink value="Remove"  action="{!deleteAlert}" reRender="pgblockForAlert" >
                                            <apex:param name="recordId"  assignTo="{!chosenId}" value="{!alert.id}"/>
                                        </apex:commandLink>
                                    </apex:column>
                                </apex:pageBlockTable>
                            </apex:pageBlockSection>
                        </apex:pageBlock>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="subcontainer">
            <div class="filter_section width30">
                <div class="filters width20">
                    <div style="">
                        <div class="filter_section">
                            <h4>Comments
                            <!--  <span><img src="/resource/1451457838000/Ad_Manager/Ad-Manager/images/Subtract.png" class="addlicon" data-id="comment-section-id" alt="number"/></span>
                            -->
                            <div class="minusclass commonall" data-id="comment-section-id">                                     
                            </div>
                            </h4>
                        </div>
                    </div>
                    <div class="alert-content comment-section-id">
                        <div style="width:635px;">
                            <div class="alert_desc alert-sub" style="">
                                <div class="alert-label alert-left">
                                    New comment
                                </div>
                                <div class="alert-input alert-left">
                                    <apex:inputField value="{!commentObj.new_Comment__c}"/>
                                </div>
                                <div class="clear">
                                </div>
                            </div>
                            <div class="alert-sub" style="float:right;">
                                <apex:commandButton action="{!addNewComment}" value="Add" styleClass="allocationbtn btn1 acceptedLike applybtn" style="width: 100px;" reRender="pgblockForComment,msgs" status="actStatusIdComment"/>
                            <apex:actionStatus id="actStatusIdComment" >
                                        <apex:facet name="start" >
                                          <img src="/img/loading.gif" />                    
                                        </apex:facet>
                                    </apex:actionStatus>
                            </div>
                            <div class="clear">                     
                            </div>
                        </div>
                        <apex:pageBlock id="pgblockForComment">
                            <apex:pageBlockSection title="Comments" columns="1">
                                <apex:pageBlockTable value="{!commentRecordList}" var="comm" rendered="{!if(commentRecordList.size>0,true,false)}" columnswidth="400px,100px,100px">
                                    <apex:column value="{!comm.new_Comment__c}" headerValue="Comment"/>
                                    <apex:column headerValue="Date">
                                        <apex:outputText value="{0,date,MM/dd/yy}">
                                            <apex:param value="{!comm.createdDate}" />
                                        </apex:outputText>
                                    </apex:column>
                                    <apex:column headerValue="Remove">
                                        <apex:commandLink value="Remove"  action="{!deleteComment}" reRender="pgblockForComment" >
                                            <apex:param name="recordIdComm"  assignTo="{!chosenIdForComment}" value="{!comm.id}"/>
                                        </apex:commandLink>
                                    </apex:column>
                                </apex:pageBlockTable>
                            </apex:pageBlockSection>
                        </apex:pageBlock>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </apex:form>
    <apex:form >
        <div class="subcontainer">
            <div class="filter_section width30">
                <div class="filters width20">
                    <div style="">
                        <div class="filter_section">
                            <h4>Creative Docs
                            <!--  <span><img src="/resource/1451457838000/Ad_Manager/Ad-Manager/images/Subtract.png" class="addlicon" data-id="creative-section-id" alt="number"/></span>
                            -->
                            <div class="minusclass commonall" data-id="creative-section-id">                                        
                            </div>
                            </h4>
                        </div>
                    </div>
                    <div class="alert-content creative-section-id">
                        <div style="margin-bottom:10px;">
                            <div class="floatleft">
                                <apex:inputFile value="{!document.body}"  filename="{!document.name}" />
                            </div>
                            <div class="floatright">
                                <apex:commandButton action="{!uploadDocument}" value="Upload" styleClass="allocationbtn btn1 acceptedLike applybtn" style="width: 100px;" status="actStatusIdDoc"/>
                           <apex:actionStatus id="actStatusIdDoc" >
                                        <apex:facet name="start" >
                                          <img src="/img/loading.gif" />                    
                                        </apex:facet>
                                    </apex:actionStatus>
                            </div>
                            <div class="clear">
                            </div>
                        </div>
                        <apex:pageBlock >
                            <apex:pageBlockSection title="Creative Docs" columns="1">                               
                                <apex:pageBlockTable value="{!documentList}" var="doc" rendered="{!if(documentList.size>0,true,false)}" columnswidth="500px,100px">
                                    <apex:column value="{!doc.ContentFileName}" headerValue="File Name"/>
                                    <apex:column headerValue="Date">
                                        <apex:outputText value="{0,date,MM/dd/yy}">
                                            <apex:param value="{!doc.createdDate}" />
                                        </apex:outputText>
                                    </apex:column>
                                </apex:pageBlockTable>
                            </apex:pageBlockSection>
                        </apex:pageBlock>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
