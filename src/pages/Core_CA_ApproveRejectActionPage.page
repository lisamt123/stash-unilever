<apex:page docType="html-5.0" showHeader="false" standardStylesheets="false" sidebar="false">
<meta http-equiv="content-type" content="text/html; charset=UTF8" />
        <div class="headerBarBackground" id="pageTop">
            <table class="headerBarWidth">
                <tr>
                    <td class="headerBarRowAlign"><button type="button" class="headerBarButton"  ng-click='gotoApprovalDetailPage()'>{{'LBL_CANCEL' | translate}}</button> </td>
                </tr>
           </table>
       </div>               
                
       <!--<table class="headerBarBackground" > 
            <tr>
                <td class="approvalDetailsTableRow"> <button type="button" class="button"  ng-click='gotoApprovalDetailPage()'>Cancel</button> </td>
            </tr>
       </table>-->
       <br/>
       
       <div class="iPhoneScreenHeight" >          
            <span class="Subtext2">
               {{'LBL_APPREJ_REQUIRED_PLACEHOLDER_MSG1' | translate}} <span class="noteText" ng-if="!(actionTakenonpage == 'Approve' && approvalRequestData.RequestType =='Expense')">{{'LBL_APPREJ_REQUIRED_PLACEHOLDER_MSG2' | translate}} </span><br/>
               {{'LBL_APPREJ_REQUIRED_PLACEHOLDER_MSG3' | translate}} 
           </span>    
           
           <form name="myForm">           
               <!--{{approvalRequestData.RequestType =='Purchase Request'}} ? {{'LBL_APPREJ_REQUIRED_PLACEHOLDER' | translate}} : {{'LBL_APPREJ_PLACEHOLDER' | translate}}-->                             
              <textarea  name="lastName" class="action-text-area" ng-class="{true:'action-text-area-error'}[myForm.submitted && (myForm.lastName.$error.required || myForm.lastName.$error.maxlength) ]" rows="5" cols="30" ng-required="!(actionTakenonpage == 'Approve' && approvalRequestData.RequestType =='Expense')" ng-model="myTextBox"  ng-focus='myForm.submitted=false' ng-maxlength="255" >
              </textarea>
                            
              <div class="errorMessage" ng-show="myForm.lastName.$error.required && myForm.submitted">
                  {{'LBL_APPREJ_REQUIRED_VALUE_MESSAGE' | translate}}
              </div>
              <div class="errorMessage" ng-show="myForm.lastName.$error.maxlength && myForm.submitted">
                   {{'LBL_APPREJ_MAXIMUM_LENGTH_MESSAGE' | translate}}
              </div>
              
              <div ng-if="approvalRequestData.RequestType =='Purchase Request' && actionTakenonpage == 'Approve'">                                
                  <span class="noteText"> {{'LBL_PUR_VISIBLE_TO_SUPPLIER' | translate}} </span>
                  <span ng-init="isFalse=true;myForm.isVisibleToSupplier=false">&nbsp;&nbsp;&nbsp;&nbsp;
                      <img  src="{!URLFOR($Resource.MyApprovalsSR, 'img/false.png')}" class="checkBoxStyle" ng-show="isFalse" ng-click="isFalse=false;myForm.isVisibleToSupplier=true" /> 
                      <img  src="{!URLFOR($Resource.MyApprovalsSR, 'img/true.png')}"  class="checkBoxStyle" ng-hide="isFalse"  ng-click="isFalse=true;myForm.isVisibleToSupplier=false" />
                  </span>
              </div>
             
              <div class="noteText" ng-if="approvalRequestData.RequestType =='Expense'">                  
                  <span> {{'LBL_APPREJ_LEGAL_DISCLAIMER' | translate}}</span>
              </div>
            
             <br/>          
              <label class="action-label" ng-click='gotoApprovalAction(myTextBox,myForm.isVisibleToSupplier)'> 
                <span ng-if="actionTakenonpage == 'Approve'">
                  <img src="{!URLFOR($Resource.MyApprovalsSR, 'img/Approve.svg')}" class="apprvoeReturnImageStyle" />
                  <span class="action-label-Approve"> {{'LBL_APPREJ_APPR_BTN' | translate}} </span> 
                </span>
                <span  ng-if="actionTakenonpage == 'Reject'">
                    <img src="{!URLFOR($Resource.MyApprovalsSR, 'img/Return.svg')}" class="apprvoeReturnImageStyle" />
                    <span class="action-label-Reject"> {{'LBL_APPREJ_REJC_BTN' | translate}} </span> 
                </span>  
             </label>
             
            <br /><br/>
            
          </form>
       </div>  
</apex:page>