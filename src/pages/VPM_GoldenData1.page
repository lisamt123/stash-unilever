<apex:page standardController="VPM_PurchasingRequests__c" standardStylesheets="true"
           sidebar="false" extensions="VPM_GoldenDataController">
   <apex:form >
    <apex:pageBlock title="Golden Data Screen 1" id="thePageBlock">
        <apex:pageBlockButtons >    
            <apex:commandButton action="{!backToFlow}" value="Back" immediate="true"/>    
            <apex:commandButton action="{!saveMethod}" value="Next"/>
            
        </apex:pageBlockButtons>
           <apex:pageBlockSection columns="1">                
                  <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_CountryRequestingVendor__c}" required="true"/>
                  <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_ECC__c}" required="true"/>
                 <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_VendorName1__c}" required="true"/>  
                 <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_Street1__c}" required="true"/>                 
               <!--<apex:inputField value="{!VPM_PurchasingRequests__c.VPM_PostalCode2__c}" required="{!isRequiredField}" /> -->
                <apex:pageBlockSectionItem >
          <apex:outputLabel >Postal Code</apex:outputLabel>
          <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_ZIPPostcode__c}" required="{!isRequiredField}"/>
               </apex:pageBlockSectionItem>
   
                  <apex:pageBlockSectionItem >
                  <apex:outputLabel value="{!$ObjectType.VPM_PurchasingRequests__c.fields.VPM_Country__c .label}" 
                        for="stage"/>
                
                <apex:actionRegion >                  
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_Country__c }" required="true">
                    <apex:actionSupport event="onchange" action="{!newMethod}"  reRender="thePageBlock" />
                </apex:inputField> 
                 </apex:actionRegion>
                </apex:pageBlockSectionItem>               
                       
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_Region__c }" required="{!isRequiredField}" />
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_City__c }" required="true" />
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_TaxNumber1__c }" required="{!isRequiredField}" />
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_TaxNumber3__c }" required="{!isRequiredField}"/>
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_TaxJurisdictionCode__c}" required="{!isRequiredField}"/>
                <apex:inputField value="{!VPM_PurchasingRequests__c.VPM_Commodity__c}" required="true"/>
                </apex:pageBlockSection>  
         </apex:pageBlock>     
   </apex:form>
    
</apex:page>