<apex:page standardController="AF_Category_Brand__c" 

extensions="Category_Brands">
<apex:sectionHeader title="Category/Brand Edit" subtitle="New Category/Brand"/>
    <apex:form ><br/>
        <apex:pageMessages />
         
        <br/>
        <apex:pageBlock title="Category - Brands Detail">
            <apex:pageBlockSection columns="2">
                <apex:pageblockSectionItem >
                <apex:outputLabel >Type</apex:outputLabel>
                <apex:selectList value="{!RecTypeValue}" multiselect="false" size="1">
                    <apex:selectOptions value="{!RecTypes}"/>
                    <apex:actionSupport action="{!OnchangeType}" event="onchange"/>
                </apex:selectList>
                </apex:pageblockSectionItem>
            <apex:outputLabel ></apex:outputLabel>
            <apex:pageBlockSectionItem rendered="{!if(RecTypeValue=='Category',true,false)}">
                <apex:outputLabel >Category</apex:outputLabel>
               <!-- <apex:outputPanel >
                    <div class="requiredInput">
                        <div class="requiredBlock"></div>-->
                <apex:inputText value="{!CategoryValue}"/>
                <!--</div>
                </apex:outputPanel>-->
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem rendered="{!if(RecTypeValue=='Brand',true,false)}">
                <apex:outputLabel >Brand</apex:outputLabel>
                
                <apex:inputText value="{!BrandValue}"/>
                
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem rendered="{!if(RecTypeValue=='Brand',true,false)}">
                <apex:outputLabel >Category List</apex:outputLabel>
                <apex:inputField value="{!category.AF_Category_Brands__c}"/>
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem rendered="{!if(RecTypeValue=='Category',true,false)}">
                <apex:outputLabel >Super category</apex:outputLabel>
                <apex:inputField value="{!category.AF_Super_category__c}"/>
            </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >
                <apex:outputLabel >Description</apex:outputLabel>
                <apex:inputField value="{!category.AF_Description__c}"/>
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem rendered="{!if(RecTypeValue=='Brand',true,false)}">
                <apex:outputLabel >Brand Logo</apex:outputLabel>
                <apex:inputField value="{!category.AF_Brand_Logo__c}"/>
            </apex:pageBlockSectionItem>
            
        </apex:pageBlockSection>
        <apex:pageblockButtons location="bottom">
            <apex:commandButton value="Save" action="{!Save_Record}"/>
             <apex:commandButton value="cancel" action="{!cancel}"/>
        </apex:pageblockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>