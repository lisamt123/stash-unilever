<apex:page controller="AF_AttachmentUploadController" showHeader="false" sidebar="false" >

<style>
  .browseStyle{
  background:#FF00FF;
   }
  .ui-dialog .ui-dialog-title {
   font-size: 20px;
    }
.heading_main{
   margin-left: 0;
margin-right: 0;
margin-top: 1px;
padding-bottom: 3px;
padding-left: 0;
padding-right: 0;
width: 100%;
    }
.heading_text{
    color: black;
font-size: 22px;
margin-right: 20px;
padding: 7px 1px 8px 8px;
}
</style>
   
 <script>
     function closeAndRefresh()
     {    
         
         parent.location.reload(); // or opener.location.href = opener.location.href;
     }
 </script>
 
 <apex:form enctype="multipart/form-data" id="Theform">
  <div class="row">           
        <div class="col-lg-12 charttable1">         
            <apex:image url="{!$Resource.header_new}" style="width:100%;height:37px;" />            
        </div>          
    </div>
    <apex:pageMessages id="TheMessage"/>
   
    <div class="heading_main">
       <h1 class="heading_text"> Upload Document </h1>
      </div>
    <apex:pageBlock id="ThePB" >
        <apex:pageBlockSection showHeader="false" id="block1" columns="1">
        <apex:pageBlockSectionItem > 
          <apex:outputLabel value="Type" for="Type" style="font-size:14px;"  />
          <apex:selectList id="chooseColor"  size="1" value="{!attachment.ContentType}"  style="border: 2px solid #74AE00;border-radius: 5px;height: 28px;">
            <apex:selectOptions value="{!CtTypes}"/>
          </apex:selectList> 
        </apex:pageBlockSectionItem>
        
         <apex:pageBlockSectionItem >
          <apex:outputLabel value="File" for="file" style="font-size:14px;"/>
          <apex:outputPanel layout="block" styleClass="requiredInput">
          <apex:outputPanel layout="block" styleClass="requiredBlock" />
          <apex:inputFile value="{!attachment.body}" filename="{!attachment.name}" id="file"  style="background: wheat;"/>
          </apex:outputPanel>
        </apex:pageBlockSectionItem> 
        
       <!-- <apex:outputPanel >
        <apex:pageBlockSectionItem >
        <apex:iframe src="AF_InputFile"/>
        </apex:pageBlockSectionItem>
         </apex:outputPanel> -->
         
        <apex:pageBlockSectionItem >
          <apex:outputLabel value="Add Comments" for="description" style="font-size:14px;" />
          <apex:outputPanel layout="block" styleClass="requiredInput">
          <apex:outputPanel layout="block" styleClass="requiredBlock" />
          <apex:inputTextarea value="{!attachment.description}" id="description" cols="100"  style="width:511px;border: 2px solid #74AE00;border-radius:5px;height: 50px;"/>
          </apex:outputPanel>
        </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
        
        </apex:pageBlock>
        <apex:actionRegion >
        <apex:outputPanel id="ThePanel">
        <apex:pageBlock >
        
        <apex:pageBlockButtons location="bottom">
        
        <apex:commandButton value="Upload Document" style=" background: #004976;border-radius: 4px;color: white;font-weight: bold;font-size: 14px;height: 30px;width: 147px;padding: 0px;float: right;margin-right: 23px;font-family: arial;"  action="{!uploadFile}"  />
       
       
        </apex:pageBlockButtons>
        
         </apex:pageBlock>
         </apex:outputPanel>
         </apex:actionRegion>
        
 </apex:form>
</apex:page>