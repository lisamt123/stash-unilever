<apex:page controller="UL_AddNewCustomer" action="{!doPageLoad}">
<style>
.setComponent {
width:100%
}

.noData{
 font-size:14px;
 color:red;
}

.headerRow {
 display:none !important; 
}

.tableStyle{
    background-color:#CEE3F6;
    padding-top:5px;
    font-weight:bold;
}
</style>
<apex:form >
<apex:pageBlock title="{!$Label.UL_ADD_CUSTOMER_TO} {!setName}">
<apex:pageMessages ></apex:pageMessages>
    <apex:pageBlockButtons >
            <apex:commandButton action="{!Submit}" value="{!$Label.ACCL__SAVE}" rendered="{!customerList.size > 0}"/>
            <apex:commandButton action="{!backToParent}" value="{!$Label.ACCL__BACK}"/>
    </apex:pageBlockButtons>
    
    <table class="setComponent" style="padding-bottom:20px"><tr>
            <td style='20%'><apex:outputLabel value="{!$Label.UL_CUSTOMER_GROUP}:" for="field1"/>&nbsp;<apex:inputText value="{!field1}"/> </td>
            <td style='20%'><apex:outputLabel value="{!$Label.UL_MARKET_CHANNEL}:" for="field2"/>&nbsp;<apex:inputText value="{!field2}"/></td>
            <td style='20%'><apex:outputLabel value="{!$Label.UL_MARKET}:" for="field3"/>&nbsp;<apex:inputText value="{!field3}"/></td> 
            <td style='40%'><apex:inputCheckbox value="{!isInclusive}"/><apex:outputLabel value="{!$Label.INCLUSIVE}"/>&nbsp;&nbsp;&nbsp;<apex:commandButton action="{!doSearch}" value="{!$Label.ACCL__SEARCH}"/>&nbsp;<apex:commandButton action="{!doClearFilter}" rendered="{!isFltApplied}" value="{!$Label.CLEAR_FILTER}"/></td>
   </tr></table>
            
            <apex:outputText value="{!$Label.ACCL__NO_REC_TO_DISPLAY}" rendered="{!customerList.size==0}" styleClass="noData" />
            <table width="99%" class="tableStyle"><tr><td width="2%"><apex:inputCheckbox id="selAllChkBox" onchange="checkAll(this)"></apex:inputCheckbox></td><td width="10%">{!$Label.UL_CUSTOMER_NAME}</td><td width="29%">{!$Label.UL_CUSTOMER_GROUP}</td><td width="29%">{!$Label.UL_MARKET_CHANNEL}</td><td width="30%">{!$Label.UL_MARKET}</td></tr></table>
            <div style="width:100%; overflow-y:scroll;height:400px">
                <apex:pageBlockTable id="customerBlockTable" value="{!customerList}" var="item" rendered="{!customerList.size > 0}" columns="5"  columnsWidth="2%,10%,29%,29%,30%">       
                    <apex:column ><apex:inputCheckbox value="{!item.selected}" id="checkedone" onchange="uncheckAll(this)"/></apex:column>
                    <apex:column value="{!item.acc.Name}" headerValue=""/>
                    <apex:column value="{!item.acc.UL_Customer_Group_Description__c}" headerValue=""/>
                    <apex:column value="{!item.acc.UL_Market_Channel_Description__c}" headerValue=""/>
                    <apex:column value="{!item.acc.UL_Market_Description__c}" headerValue=""/> 
                </apex:pageBlockTable>
            </div>
</apex:pageBlock> 
</apex:form>
<script>
        
        function checkAll(cb)
        {
            var inputElem = document.getElementsByTagName("input");
            for(var i=0; i<inputElem.length; i++)
            {
                if(inputElem[i].id.indexOf("checkedone")!=-1)
                inputElem[i].checked = cb.checked;
            }
        }
        
        function uncheckAll(cb)
        {
           if(!cb.checked){
           var inputElem = document.getElementsByTagName("input");
           for(var i=0; i<inputElem.length; i++)
            {
               if(inputElem[i].id.indexOf("selAllChkBox")!=-1){
                 inputElem[i].checked = cb.checked;
                 return;
               }
            }
           }
        }
        
    </script>
</apex:page>