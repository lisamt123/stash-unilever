<script>
function refreshdata(){
var losstype = j$('[id$="lossT"]').val();
    if(losstype == 'MRP Compliance'){
    j$('[id$="myTable"]').dataTable({
        "paging":   true,
        "ordering": true,
        "info":     false,
        "bFilter": false,        
        "bSearchable":false,
        "bLengthChange": false,
        "order": [[ 5, "desc"]],
        "columnDefs": [ { "orderable": false, "targets": [0,8,9,10]}]          
     });     
     }    
     if(losstype == 'Output Reliability' || losstype == 'Dispatch Compliance'){
    j$('[id$="myTable"]').dataTable({
        "paging":   true,
        "ordering": true,
        "info":     false,
        "bFilter": false,
        "bSearchable":false,
        "bLengthChange": false,
        "order": [[ 4, "desc"]],
        "columnDefs": [ { "orderable": false, "targets": [0,7,8,9,10]} ]           
     });     
     }
}
</script>
