<apex:page controller="PC_ContainerController_CC" sidebar="false" showHeader="true" standardStylesheets="false">
    <!-- javascript -->
    <apex:includeScript value="{!URLFOR($Resource.PCResources, '/js/jquery-1.12.0.min.js')}" />
