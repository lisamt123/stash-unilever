<apex:page standardController="VPM_PurchasingRequests__c" standardStylesheets="true"
           sidebar="false" extensions="VPM_SubController" language="{!userlang}">
           <chatter:feedWithFollowers entityid="{!VPM_PurchasingRequests__c.Id}" id="ChatterBlock"  />
    <apex:form >

        <apex:pageBlock title="{!$Label.VPM_UnBlockUnDeleteTitle}" id="thePageBlock1" rendered="{!isUnBlockUnDeleted}" >
                 <apex:pagemessages id="pageMessages"/>
         <apex:pageBlockButtons >    
                 <apex:commandButton action="{!backToFlow}" Value="{!$Label.VPM_Back}"  immediate="true" reRender="hiddenBlock"  status="actStatusId"/>       
                 <apex:commandButton action="{!Save}" value="{!$Label.VPM_SaveButton}" reRender="hiddenBlock,pageMessages"  status="actStatusId"/>    
                 <apex:commandButton action="{!SaveAndExit}" value="{!$Label.VPM_SaveExitButton}" reRender="hiddenBlock,pageMessages"  status="actStatusId"/>   
                    
                            
          </apex:pageBlockButtons>
            <apex:pageBlock id="hiddenBlock" rendered="false"></apex:pageBlock> 
            <apex:pageBlockSection columns="1" id="thePageBlock1">                
                <apex:outputText Value="{!$Label.VPM_BlockDeleteUnblockUnDleteInfo}" ></apex:outputText>  
                <apex:pageBlockSectionItem >  
                    <apex:outputLabel value="{!$Label.VPM_SelectAction}" for="options"/>
                    <apex:outputPanel styleClass="requiredInput" layout="block">
                        <apex:outputPanel styleClass="requiredBlock" layout="block"/> 
                        <apex:selectRadio id="options"  label="{!$Label.VPM_SelectAction}" value="{!options}" required="true">
                            <apex:selectoption itemLabel="UnBlock" itemValue="MDM Ops Review - Unblock"/>  
                            <apex:selectoption itemLabel="UnDelete" itemValue="MDM Ops Review - Undelete"/>
                            
                        </apex:selectRadio>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem> 
          </apex:pageBlockSection>  
         </apex:pageBlock>
         <apex:pageBlock title="{!$Label.VPM_BlockDeleteTitle}" id="thePageBlock2" rendered="{!isBlockDeleted}">
                 <apex:pagemessages id="pageMessages"/>
             <apex:pageBlockButtons >   
             <apex:commandButton action="{!backToFlow}" immediate="true"  Value="{!$Label.VPM_Back}" reRender="hiddenBlock"  status="actStatusId"/>     
                 <apex:commandButton action="{!Save}" value="{!$Label.VPM_SaveButton}" reRender="hiddenBlock,pageMessages"  status="actStatusId"/>    
                 <apex:commandButton action="{!SaveAndExit}" value="{!$Label.VPM_SaveExitButton}" reRender="hiddenBlock,pageMessages"  status="actStatusId"/>     
                 
          </apex:pageBlockButtons>
             <apex:pageBlock id="hiddenBlock" rendered="false"></apex:pageBlock> 
               <apex:pageBlockSection columns="1" id="thePageBlock1">                
               <apex:outputText Value="{!$Label.VPM_BlockDeleteUnblockUnDleteInfo}" ></apex:outputText>  
                  <apex:pageBlockSectionItem >  
    <apex:outputLabel value="{!$Label.VPM_SelectAction}" for="options"/>
    <apex:outputPanel styleClass="requiredInput" layout="block">
    <apex:outputPanel styleClass="requiredBlock" layout="block"/> 
   <apex:selectRadio id="options"  Label="{!$Label.VPM_SelectAction}"  value="{!options}" required="true">
                     <apex:selectoption itemLabel="Block" itemValue="MDM Ops Review - Block"/>  
                    <apex:selectoption itemLabel="Delete" itemValue="MDM Ops Review - Delete"/>

          
       </apex:selectRadio>
   </apex:outputPanel>
</apex:pageBlockSectionItem> 
          </apex:pageBlockSection> 
         </apex:pageBlock>   
  </apex:form>
   <c:VPM_LoadingComponent />  
    
</apex:page>