<apex:page sidebar="false" standardStylesheets="false" showHeader="false" controller="DMS_Dashboards_CC">
    
    <html>
        <head>
            <apex:stylesheet value="{!URLFOR($Resource.DMS_SLDS0102, '/assets/styles/salesforce-lightning-design-system.css')}"/> 
        </head>
        
        <body>
            <apex:form >
                <div class="slds-page-header" role="banner">
                    <div class="slds-grid slds-wrap">
                        <div class="slds-grid slds-wrap slds-grid--align-spread">
                            <apex:image title="{!$Label.DMS_Community_LogoUnilever}" url="{!$Resource.DMS_UNILEVER_LOGO}" width="40px" height="40px"/>
                        </div>
                        <div class="slds-media__body--regular slds-container--left">
                            <h1 style="font-size: 1.5rem; line-height: 1.25;" class="slds-truncate slds-align-middle" title="Record Title">{!$Label.DMS_Community_Reports}</h1>
                            <p class="slds-text-heading--label">{!$Label.DMS_Community_Reports_Header}</p>
                        </div>
                    </div>
                    <div> </div>
                    <div class="slds-button-group" role="group">
                            <apex:commandButton styleClass="slds-button slds-button--neutral" action="{!changeDashboard}" value="Effective Coverage" rendered="{!exibirImpac}"/>
                            <apex:commandButton styleClass="slds-button slds-button--neutral" action="{!changeDashboard}" value="Clientes No Compradores" rendered="{!exibirEco}"/>     
                            <apex:commandButton styleClass="slds-button slds-button--neutral" action="/home/home.jsp" value="Exit"/>              
                        </div>
                </div>
            </apex:form>
        </body>
    </html>
    <wave:dashboard rendered="{!exibirImpac}"  showTitle="true" height="700" width="100%" dashboardId="0FK190000004CZLGA2"></wave:dashboard> 
    <wave:dashboard rendered="{!exibirEco}"  showTitle="true" height="700" width="1000" dashboardId="0FK190000004CZuGAM"></wave:dashboard>
</apex:page>