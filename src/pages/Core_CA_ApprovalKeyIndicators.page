<apex:page docType="html-5.0" showHeader="false" standardStylesheets="false" sidebar="false">
    <meta http-equiv="content-type" content="text/html; charset=UTF8" />
    <div class="iPhoneHomeScreenHeight" id="pageTop">
        <div id="homePage1" class="headerBarBackground">
            <table class="headerBarWidth">
                <tr>
                    <td class="headerBarRowAlign" >
                        <img src="{!URLFOR($Resource.MyApprovalsSR, 'img/back.svg')}" ng-click="gotoDetailPage()" alt="back" class="homePageFilter" />
                    </td>
                </tr>
            </table>
        </div>
        <br/>
        <div class="template" ng-init="KeyIndicatorsPanelDisplay=false">
            <div class="defaultBottomBorder" ng-click="KeyIndicatorsPanelDisplay = (KeyIndicatorsPanelDisplay=='true' ? 'false' : 'true')">
                <span>
                    <label class="detailSectionHeader" >{{'LBL_KEY_INDICATORS' | translate}}</label>
                </span>
                <span class="alignRight">
                    <img class="arrowButtonStyle" ng-hide="KeyIndicatorsPanelDisplay" src="{!URLFOR($Resource.MyApprovalsSR, 'img/showArrow.svg')}" alt="showArrow" />
                    <img class="arrowButtonStyle" ng-show="KeyIndicatorsPanelDisplay" src="{!URLFOR($Resource.MyApprovalsSR, 'img/hideArrow.svg')}" alt="hideArrow" />
                </span>
            </div>
            <div ng-hide="KeyIndicatorsPanelDisplay" id="responsiveDetailSectionwrapper">
                <div class="row">
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_DCF_CONSTANT_PRICE_FIVE_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[0] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_DCF_CONSTANT_PRICE_SEVEN_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[1] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_DCF_CONSTANT_PRICE_TEN_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[2] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_NPV_FIVE_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[3] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_NPV_SEVEN_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[4] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_DCF_NPV_TEN_YEARS' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[5] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel">{{'LBL_PAYBACK_PERIOD' | translate}}</td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue">{{approvalRequestData.RequestedByLang.split(',')[6] | replaceNullValue}}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="responsiveDetailSectionData">
                        <table class="responsiveDetailSectionTable">
                            <tr>
                                <td class="responsiveDetailSectionTableRowLabel"></td>
                            </tr>
                            <tr>
                                <td class="responsiveDetailSectionTableRowValue"></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br/>
    </div>
</apex:page>