                 <apex:commandButton value="Confirm" id="theUpdate" onclick="this.disabled=true;" action="{!saveBrandEstimate}" styleClass="continue_btn" reRender="pb1"/>
                <!-- <apex:commandButton value="X" styleClass="closeButton" action="{!closePopup}" rerender="ContinuePopup"/>-->
                <apex:actionFunction name="CallClose" action="{!closePopup}" reRender="ContinuePopup"/>
                <apex:image url="{!$Resource.fancy_close}" styleClass="closeButton2" onclick="callclosepopup();" />
            </apex:outputPanel>
        </apex:outputPanel>
    </apex:pageBlock>
