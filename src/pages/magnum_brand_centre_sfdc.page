<link rel="stylesheet" href="{!URLFOR($Resource.magnum_brand_centre_resources, 'grid.css')}" type="text/css" media="screen, projection" />
<link rel="stylesheet" href="{!URLFOR($Resource.shared_brand_centre_resources, 'brand_centers_structure.css')}" type="text/css" media="screen, projection" />
    <link rel="stylesheet" href="{!URLFOR($Resource.magnum_brand_centre_resources, 'style.css')}" type="text/css" media="screen, projection" />
    <link rel="stylesheet" href="{!URLFOR($Resource.magnum_brand_centre_resources, 'jquery.tipsy.css')}" type="text/css" media="screen, projection" />
    
    <script src="https://www.google.com/jsapi" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>

    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'jquery.corner.js')}"></script>
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'jquery.tipsy.js')}"></script>
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'jquery.tabify.js')}"></script>
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'vallenato.js')}"></script>
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'jcarousellite_1.0.1.min.js')}"></script>
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'jquery.colorbox-min.js')}"></script>
    
    <script src="{!URLFOR($Resource.magnum_brand_centre_resources, 'scripts.js')}"></script>
    
    <div id="contentPage"><div id="innerPage">
        <div class="container_12">

           
                        <div class="alpha grid_3">
                
                <div id="logo"><img src="{!URLFOR($Resource.magnum_brand_centre_resources, 'logo.png')}" /></div>
                
                <div class="accordion">
                    <div id="accordion-container-1">
                        <div class="accordion-element">
                        <h2 class="rounded accordion-header whoiswho"><span id="who_is_who"></span><strong>Who is who</strong></h2>
                            
                              <div class="accordion-content">
                                <div class="chatter-links">
                                <div class="linkslistwrapper">
                                    
                                    <ul class="linkslist">
                                           <apex:repeat value="{!whoswholinks}" var="ww">                
                                    <li> 
                                        <!-- CR-0133- Nikhil More. IDC-  Added Target=-blank since link needs to open in new window  -->
                                         <apex:outputlink value="{!ww.Link_Output__c}" target="_blank" >{!ww.Link_Name__c}</apex:outputlink>

                                        </li>
                                        </apex:repeat>
                                   </ul>
                                </div>
                                
                                
                                </div>
                                
                                <div class="chatter-faces">
                                   <chatter:followers entityId="{!uw_Brand__c.id}"/>
                                </div>
                               
                            </div>
                        </div>
                        
                        
                        <div class="accordion-element default-open">
                            <h2 class="rounded accordion-header axesocialmedia"><span id="social_media"></span><strong>Social media world</strong></h2>
                            <div id="feeds" class="accordion-content clearfix">
                                <div id="feeds_menu">
                                    <strong>Feed filter</strong>
                                    <ul class="clearfix">
                                                                            
                                        <li class="active"><a class="twitter-posts-content-link" href="#twitter-posts-content" rel="https://search.twitter.com/search.json?q=from%3A{!uw_Brand__c.twitter_url__c}&rpp=3">Twitter</a></li>

                                    <li><a class="youtube-posts-content-link" href="#youtube-posts-content" rel="https://gdata.youtube.com/feeds/api/users/{!uw_Brand__c.you_tube_url__c}/uploads?alt=json&max-results=4">Youtube</a></li>
                                        
    
                                    </ul>
                                </div>
                              
                                <div id="youtube-posts-content" class="clearfix tab-content">
                                    Loading...
                                </div>
                                <div id="twitter-posts-content" class="clearfix tab-content">
                                    Loading...
                                </div>
                                <div id="seeBrand">
                                    <span>See Magnum:</span> 
                                    <a href="{!uw_Brand__c.Facebook__c}" title="Find on Facebook" class="link fb" target="_blank">Facebook</a> <strong>|</strong> 
                                    <a href="{!uw_Brand__c.Twitter__c}" title="Follow on Twitter" class="link twitter" target="_blank">Twitter</a> <strong>|</strong> 
                                    <a href="{!uw_Brand__c.Youtube__c}" title="Youtube channel" class="link youtube_link" target="_blank">Youtube</a> <strong>|</strong>
                                    <a href="{!uw_Brand__c.Website__c}" title="Open"  class="link com" target="_blank">.com</a>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>

            <div class="grid_6">              
                
                <div id="chatter-accordion">
                    <div class="user-info"><div class="profile-pic">
                   
                      <apex:outputlink value="/{!Profileid}"> <apex:image value="{!Photolink}" width="60"/></apex:outputlink></div><div class="text-information"><div class="user-name"><apex:outputlink value="/{!Profileid}">{!Profilename}</apex:outputlink></div></div></div>
                    <div class="accordion-element">
                        <h2 class="accordion-header">Join the conversation</h2>
                        <div class="accordion-content">
                            <div class="conversations-wrapper">
                                <a id="follow"/>
                                <chatter:follow entityId="{!uw_Brand__c.id}"/> 
                                <chatter:feed entityId="{!uw_Brand__c.id}"/>
                            </div>
                        </div>
                    </div>
                    
                </div>                
                
                
                <div class="carousel-accordion" id="imagesNews">

                    <div class="inner">
                        <div class="carousel carousel_1">
                           
                            
                            <apex:variable value="{!1}" var="rowNum"/>
                                
                              <ul>
                                <li>
                                      <div class="slide">
                                <apex:repeat value="{!articlelist}" var="item">
                                 
                                     
                                    <apex:outputpanel rendered="{!FLOOR(rowNum)==1}">
                                        <a href="/apex/magnum_brand_centre_single_sfdc?id={!item.Id}&bid={!uw_brand__c.id}" class="bigbox">
                                            <img src="/sfc/servlet.shepherd/version/download/{!item.Picture_ID__c}" alt="" />
                                            <span><span>{!item.Name}</span></span>
                                        </a>
                                        </apex:outputpanel>
                                        
                                        <apex:outputpanel rendered="{!FLOOR(rowNum)==2 || FLOOR(rowNum)==3}">
                                        <a href="/apex/magnum_brand_centre_single_sfdc?id={!item.Id}&bid={!uw_brand__c.id}" class="smallbox smallbox_top">
                                            <img src="/sfc/servlet.shepherd/version/download/{!item.Picture_ID__c}" width="165" alt="" />
                                            <span><span>{!item.Name}</span></span>
                                        </a>
                                        </apex:outputpanel>
                                      <apex:variable var="rowNum" value="{!rowNum + 1}"/> 
                                                                
                                </apex:repeat>
                                    </div>
                                 </li>
                                 
                                    <apex:variable value="{!1}" var="rowNum"/>
                                  <li>
                                      <div class="slide">
                                <apex:repeat value="{!articlelist}" var="item">
                                 
                                     
                                    <apex:outputpanel rendered="{!FLOOR(rowNum)==4}">
                                        <a href="/apex/magnum_brand_centre_single_sfdc?id={!item.Id}&bid={!uw_brand__c.id}" class="bigbox">
                                            <img src="/sfc/servlet.shepherd/version/download/{!item.Picture_ID__c}" alt="" />
                                            <span><span>{!item.Name}</span></span>
                                        </a>
                                        </apex:outputpanel>
                                        
                                        <apex:outputpanel rendered="{!FLOOR(rowNum)==5 || FLOOR(rowNum)==6}">
                                        <a href="/apex/magnum_brand_centre_single_sfdc?id={!item.Id}&bid={!uw_brand__c.id}" class="smallbox smallbox_top">
                                            <img src="/sfc/servlet.shepherd/version/download/{!item.Picture_ID__c}" width="165" alt="" />
                                            <span><span>{!item.Name}</span></span>
                                        </a>
                                        </apex:outputpanel>
                                      <apex:variable var="rowNum" value="{!rowNum + 1}"/> 
                                                                
                                </apex:repeat>
                                    </div>
                                 </li>
                                 
                                 
                                              
                            </ul>
                        </div>
                        <a href="/apex/magnum_brand_centre_articles_sfdc?bid={!uw_brand__c.id}" class="seeall" title="See all">See all</a>
                        <a href="#" class="fold" title="Reduce">Reduce</a>
                        <a href="#previous" class="prev disabled prev_1" title="Previous">Previous</a>
                        <strong class="carousel_title">Latest <span class="gold">Magnum</span> Stories</strong>
                        <a href="#next" class="next next_1" title="Next">Next</a>
                    </div>
                    <a href="#" class="extend" title="See latest Axe Stories">Latest <span class="gold">Magnum</span> Stories</a>
                </div>
                
                <apex:outputPanel rendered="{!NOT(ISNULL(uw_Brand__c.You_Tube_2_URL__c))}">
                    <div class="carousel-accordion" id="imagesNews">
    
                        <div class="inner">
                            <div class="carousel carousel_2" rel="{!uw_brand__c.You_Tube_2_URL__c}">
                                <ul></ul>
                            </div>
                            <a href="#" class="fold" title="Reduce">Reduce</a>
                            <a href="#previous" class="prev disabled prev_2" title="Previous">Previous</a>
                            <strong class="carousel_title">Recent <span class="gold">Magnum</span> &amp; <span class="orange">Competitor</span> Work</strong>
                            <a href="#next" class="next next_2" title="Next">Next</a>
    
                        </div>
                        <a href="#" class="extend" title="See more"> Recent <span class="gold">Magnum</span> &amp; <span class="orange">Competitor</span> Work</a>
                    </div>
                </apex:outputPanel>
                
                

            </div><!--  end content  -->

           <div class="omega grid_3">
                <div class="accordion">
                   
                    <div id="accordion-container-2"><div class="inner1"><div class="inner2">
                     <apex:repeat value="{!linksSections}" var="linksec" >
                     <apex:outputpanel rendered="{!linksec.Position__c == 'Vertical Menu'}">
                      <div class="accordion-element"><h2 class="accordion-header"><span></span><strong><apex:outputtext value="{!linksec.Name}" /></strong></h2>
                        <!-- <div class="{!linksec.Style_Class__c}"> -->
                        <div class="accordion-content">
                            <p><a href="#">  <apex:image value="/sfc/servlet.shepherd/version/download/{!linksec.Section_Image_ID__c}" rendered="{!linksec.Section_Image_ID__c <> null}" /></a></p>
                            <div class="linkslistwrapper"><ul class="linkslist"><apex:repeat value="{!brandlinks}"  var="bl">
                            <apex:outputtext value="<li>" escape="false"  rendered="{!bl.Brand_Link_Sections__c == linksec.id}"  />
                            
                            <apex:outputpanel rendered="{!bl.Brand_Link_Sections__c == linksec.id}" >
                               <apex:outputLink value="{!bl.Link_Output__c}"  target="_blank">{!bl.Link_Name__c}</apex:outputLink>
                            </apex:outputpanel>
                            <apex:outputtext value="</li>" escape="false" rendered="{!bl.Brand_Link_Sections__c == linksec.id}"  />
                            
                            </apex:repeat></ul></div>                            
                       </div></div>
                       </apex:outputpanel>
                       </apex:repeat>      
                    </div></div></div>
                </div>
                    </div>
                </div>

       
        
        <div style="clear:both"></div>
        
    </div>
    </div>

</apex:page>