<apex:page Controller="FS_ContactDetail_CC" tabStyle="Contact" >
    
    <script>
function isNumberKey(evt)
       {
        
          var charCode = (evt.which) ? evt.which : evt.keyCode;
          
           if (charCode != 46 && (charCode == 8 || charCode >31) 
            && ((charCode == 40) || (charCode == 41)  || charCode == 8 || (charCode == 45) || (charCode > 47 && charCode < 58) || (charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 122)))
             return true;
          
          return false;
       }
</script>
    
