<apex:page standardController="CPA_project_work_order__c" extensions="CPA_PwoCnfTnf_ReturnReasonController" sidebar="false" showHeader="false" >

 <style>
    input {
        padding-top: 0;
        width: 100%;
    }
    table.detailList {
        width: 50% !important;
        text-align: center;
        margin: 0 auto;
    }
    h1 {
        display: table-cell;
        vertical-align: middle;
        text-align:center;
    }
    </style>

<apex:form >
    <apex:pageBlock >
        <apex:pageMessages />
        <apex:pageBlockSection columns="2">
            <div style="text-align: center; width: 300px "><h1>
                <span style="text-align:left; margin-right: 10px;  width: 150px">Reason for Return of {!HTMLENCODE($CurrentPage.parameters.recordType)} :
                    <apex:inputTextarea id="cancelReson"  value="{!strReason}" label=" " required="true" style="margin-right: 10px;  width: 450px; height: 150px" />
                </span ></h1>
            </div>
        </apex:pageBlockSection>
        <apex:pageBlockSection >
            <apex:commandButton value="Save" action="{!SaveCancelReason}" style="margin-right: 10px; align:left; width: 120px"/> 
            <apex:commandButton value="Cancel" action="{!CancelReason}" immediate="true" html-formnovalidate="formnovalidate" style="margin-right: 10px; align:right; width: 120px" />
        </apex:pageBlockSection>
    </apex:pageBlock>
</apex:form>
</apex:page>