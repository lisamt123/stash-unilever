<apex:page standardController="HRO_Onboarding_Plan__c" recordSetVar="onboardingTemplates" standardStylesheets="true" showHeader="true" extensions="HRO_BoardingAction_CX">
	 <apex:sectionHeader title="Assign Post-Boarding Tasks"/>
    
    <apex:form >
        <apex:pageMessages />
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton action="{!savePostBoarding}" value="Continue"/>  
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">
               <apex:inputField required="true" value="{!planInfo.Manager__c}" ></apex:inputField>
               <apex:inputField required="true" value="{!planInfo.New_LeaderLookup__c}" ></apex:inputField>
               <apex:inputField required="true" value="{!planInfo.Start_Date__c}" ></apex:inputField>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Task to be Post-Boarded">
                <apex:PageBlockTable value="{!postBoardingTasks}" var="template">
                    <apex:column value="{!template.Phase__c}"/>   
                    <apex:column value="{!template.Task_Description__c}"/>
                    <apex:column value="{!template.Due__c}"/>  
                    <apex:column value="{!template.Task_for__c}"/>   
                    <apex:column value="{!template.Task_type__c}"/>        
                </apex:PageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
	
</apex:page>