        <script type="text/javascript">
        $(document).ready(function(){
            if($.browser.msie){
                $.getScript("{!URLFOR($Resource.ulw_brief_2_resources, 'js/PIE.js')}").done(function(){
                    if (window.PIE) {
                        $('.rounded').each(function() {
                            PIE.attach(this);
