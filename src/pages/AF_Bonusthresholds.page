<apex:page controller="AF_Bonusthresholds"  showHeader="false" sidebar="false">
 <apex:form id="frm1">
 <apex:pageMessages id="pm1">
 </apex:pageMessages>
  <apex:pageblock >
  <Div style="margin-left: 20px;margin-bottom: 10px;" >
  <b>Bonus Measure:</b>
   <apex:selectList id="Measure" value="{!Measure_val}" size="1" style="border: 2px solid #74AE00;border-radius: 3px; color: #000000;height: 30px;margin-left: 0.5px;padding-bottom: 3px;padding-top: 5px;width: 150px;">
      <apex:selectOptions value="{!measure_criteria}"/>
   </apex:selectList>
 </div>
  <apex:pageBlockTable value="{!BonusThresholds}" var="BT" id="pbt">
  <apex:column headerValue="Country">
  <apex:selectList id="Countryname" value="{!BT.bonusthresholds.AF_Country__c}" size="1" style="border: 2px solid #74AE00;border-radius: 3px; color: #000000;height: 30px;margin-left: 0.5px;padding-bottom: 3px;padding-top: 5px;width: 150px;">
      <apex:selectOptions value="{!Countrynames}"/>
   </apex:selectList>
  </apex:Column>
  <apex:column headerValue="Minimum">
  <apex:inputText id="minimum" value="{!BT.bonusthresholds.AF_Minimum__c}" style="width: 100px;"/>
  </apex:column>
  <apex:column headerValue="Stretching">
  <apex:inputText id="Stretch" value="{!BT.bonusthresholds.AF_Stretching__c}" style="width: 100px;"/>
  </apex:column>
  <apex:column headerValue="Outstanding">
  <apex:inputText id="Outstanding" value="{!BT.bonusthresholds.AF_Outstanding__c}" style="width: 100px;"/>
  </apex:column>
   <apex:column headerValue="Digital">
  <apex:inputcheckbox id="Digital" value="{!BT.bonusthresholds.AF_Digital__c}" style="width: 50px;"/>
  </apex:column>
  <apex:column headerValue="Traditional">
  <apex:inputcheckbox id="Traditional" value="{!BT.bonusthresholds.AF_Traditional__c}" style="width: 50px;"/>
  </apex:column>  
  </apex:pageBlockTable>
  
  </apex:pageblock>  
    
  <apex:commandButton value="Add" action="{!createBonusThreshold}" styleClass="submit_btn_basefee1" reRender="pbt"/>   
  <apex:commandButton value="Save" action="{!SaveBonusThresholds}" styleClass="submit_btn_basefee2" reRender="pbt,pm1" />             
</apex:form>
</apex:page>