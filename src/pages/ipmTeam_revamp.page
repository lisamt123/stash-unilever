         .expandMarginTop{margin-top: 20px;}
         .infoMarTop{margin-top:6px;}
         .tooltip.bottom .tooltip-arrow{border-bottom-color:#00b1a5!important;} 
         .custPosition{position:static !important;width:190px;float:left;}
         img[data-lead='true']{border:4px solid #E2DB67;}   
                     
       /* Modal Styles */
         #ipmAddMemberModal .modal-header button.close{bottom:0 !important;}
         #ipmAddMemberModal .modal-header{height:60px;}
         .nav{position:relative;top:0px;}
