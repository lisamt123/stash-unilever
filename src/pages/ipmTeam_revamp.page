         .leaderRadioButton label{margin-right:5px;}
        
        /* Accordion styles */ 
        .ipmAccordion{margin-bottom:20px;}
       .teamHead{color: #334255;font-weight: bold;border-right: 1px solid #A7A7A7;padding: 0px 10px;margin-right: 10px;}
