<apex:page standardController="CPA_project_work_order__c" extensions="CPA_ContractInformationController">
 <apex:form >
   <apex:pageBlock >
      <apex:pageMessages />
      <apex:pageBlock rendered="{!mandatoryStringFlag != null}">
        <apex:pageMessage summary="{!SUBSTITUTE(JSENCODE(mandatoryStringFlag), '\n', '<br/>')}"
                      severity="warning"
                      strength="3"
                     rendered="{!mandatoryStringFlag != null}" escape="false"/>
            <apex:pageBlockTable value="{!RequiredFieldMap}" var="listItem" rendered="{!tableformat != null}">
                <apex:column value="{!listItem}"  headerValue="Field Name"/>
                <apex:column value="{!RequiredFieldMap[listItem]}" headerValue="Criteria"/>
            </apex:pageBlockTable>
        </apex:pageBlock>    
    </apex:pageBlock>     
 </apex:form>
</apex:page>