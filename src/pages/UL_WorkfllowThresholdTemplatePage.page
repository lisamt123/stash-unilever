        <apex:pageBlockButtons >
            <apex:commandButton action="{!editClick}" value="{!$Label.UL_EDIT}">
           
            </apex:commandButton>
          <apex:commandButton action="{!delete}" value="{!$Label.UL_DELETE}"/> 
        <!-- <button type="button" onclick="location.reload()">Delete</button> -->
           
        </apex:pageBlockButtons>
        <apex:pageBlockSection >
            
            <apex:outputField value="{!UL_Workflow_Threshold_Template__c.UL_Active__c}"/>
