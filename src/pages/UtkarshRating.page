<script>
   $(function(){

      
      
      $('.holder-class span.common').click(function(){
           var num = $(this).attr('rel');  
         //  $(this).removeClass('changeColor');
           $(this).parent().find('span').removeClass('changeColor');
           
           var jq;
           for(var i = 1; i<=num; i++){
                     
            jq = $(this).parent().children('span[rel='+i+']');
            jq.addClass('changeColor');                
           }
           $('.hel').text(num);
           var data_id = $(this).closest('.holder-class').attr('data-id');    
          
            var fnstring = data_id;
            var fnparams = [num];
        
            var fn = window[fnstring];
        
            if (typeof fn === "function") 
                fn.apply(null, fnparams);
               
       });
       
       
       
       $(".holder-class span").hover(function(){
        var num = $(this).attr('rel');
        $(this).parent().find('span').removeClass('changeColorHover');
        var jq;
        for(var i = 1; i<=num; i++){
            jq = $(this).parent().children('span[rel='+i+']');
            jq.addClass('changeColorHover'); 
        }
           
       });
       
       $('.holder-class div').mouseleave(function() {          
           $(this).find('span').removeClass('changeColorHover');       
       });
       
      
      //end modified
      
       
   }); 
</script>
