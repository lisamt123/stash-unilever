<!-- 
************************************************************************************
*@Author: Cognizant
*@Created Date: 02/06/2015
*@Description: This Page gives a grid where users will be able to Copy and Paste the 
*@Data from Excel sheet.
************************************************************************************    
-->
<apex:page sidebar="false" showHeader="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0" controller="IPM_FinancialCopyPasteGrid" extensions="IPM_GetHelpDoc">
<html>    
  <head>      
     <link href="{!URLFOR($Resource.IPM_FinancialGrid, 'NewGridDemo/main.css')}" rel="stylesheet"/>
     <link href="{!URLFOR($Resource.IPM_FinancialGrid, 'NewGridDemo/handsontable.full.min.css')}" rel="stylesheet"/>       
     <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_Modal1.css')}"/>
     <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_Header-new.css')}"/>
     <apex:stylesheet value="{!URLFOR($Resource.IPM_Resource, 'css/IPM_Financial.css')}"/>  
     </head>   
    <body>
    <apex:composition template="IPM_TemplateRevamp">
        <apex:define name="body">
              <apex:form id="Fom">                
                <div class="gradientbg">
                    <div class="row">
                     <c:IPM_ProjectDetails project="{!project}" activeItem="rolloutPlan"/>
                    </div>                    
                </div>
                <!-- Page Head & Toolbar -->
                <div class="row finwrapper">
                    <div class="col-sm-12">
                        <div class="panel-group pageHeadToolbar clearfix">
                            <div class="row">
                            	<!-- To place the help symbol in the top right hand corner of page -->
                                <apex:outputPanel layout="block" styleClass="SecButtonSet delete pull-right" >
                                    <apex:outputLink value="{!URL}" id="theLink" styleClass="icoButton question" target="_blank" title="{!$Label.IPM_Help}">?</apex:outputLink>
                                </apex:outputPanel>
                                <div class="finTitle pull-left">
                                    <h2 class="pageTitle">{!$Label.IPM_FINANCIALS}</h2>                                        
                                </div>                                                           
                            </div>
                        </div>
                    </div>
                </div>                
              <!--/ Page Head & Toolbar -->
              <apex:outputpanel id="message">  
              <apex:pageMessages />  
              </apex:outputpanel>
            <apex:outputPanel rendered="{!isEditable}">                   
            <table style="IPM_Table" class="ipmTable table">
              <tr>
                <td class="TDwidth1">
                   <div class="divStyle" Id = "div1">
                     <apex:outputLabel value="{!$Label.IPM_FinancialGrid_MCO} " style="MCOStyle" id="outlabel">
                           <apex:outputpanel id="C">
                               <apex:selectList id="selist" value="{!ListCountries}" size="1" title="IPM Country"  styleclass="drpfield">
                                    <apex:selectOptions value="{!CountryValue}"  id="CValue"></apex:selectOptions>                  
                               </apex:selectList>
                               <div Id = "DivButton" Style="display: none;">
                                  <apex:commandButton value="{!$Label.IPM_FinancialGrid_Submit}" action="{!submit}" id="SubBtn" styleclass="ipmButton green" disabled="{!flag}" reRender="C,outdata,CValue,message" oncomplete="chdropdown('{!ListCountries}');"/> 
                               </div>    
                                <apex:commandButton value="{!$Label.IPM_FinancialGrid_goBack}" action="{!goBack}"  id="bckbtn"  styleclass="ipmButton green"  /> 
                                <button onclick="clearAll();"  id="Clrbtn" class="ipmButton green" >{!$Label.IPM_FinancialGrid_Clear}</button> 
                                 <button onclick="openWin();"  id="Upbtn" class="ipmButton green" >{!$Label.IPM_FinancialGrid_Upload}</button>
                                <apex:outputLabel value="{!$Label.IPM_FinancialGrid_MSG2}" rendered="{!flag}" />
                            </apex:outputpanel>                                 
                        </apex:outputLabel>  
                       <apex:outputLabel value="{!$Label.IPM_FinancialGrid_MSG1}" />
                      </div> 
    <apex:outputpanel id="grid">
    <div id="FinancialGrid">
    </div>
   </apex:outputpanel>   
</td>            
<td class="TDwidth2">
      <apex:outputpanel id="outdata">
         <apex:dataTable value="{!submittedList}" rendered="{!showdata}" var="c" title="{!$Label.IPM_FinancialGrid_Tableheader}" Id="datatbl" headerClass="headerRenderer" >
              <apex:facet name="header" >{!$Label.IPM_FinancialGrid_Tableheader}</apex:facet>
                    <apex:column value="{!c}"/> 
             </apex:dataTable>
         </apex:outputpanel>  
     </td>                
  </tr>
</table>
</apex:outputPanel>   
<script> 
var IPMAppFin = {projectId:'{!projectId}',projectType: '{!projectType}', Sustainability:'{!Sustainability}', FinancialGrid_MSG3:'{!$Label.IPM_FinancialGrid_MSG3}', FinancialGrid_MSG4:'{!$Label.IPM_FinancialGrid_MSG4}', IPM_AandP: '{!$Label.IPM_AandP}', IPM_AdvertisingCP: '{!$Label.IPM_AdvertisingCP}',IPM_ITOCalValidation:'{!$Label.IPM_ITOCalValidation}',IPM_GMCP:'{!$Label.IPM_GMCP}',IPM_GrossProfitCP:'{!$Label.IPM_GrossProfitCP}',IPM_ITOValidation: '{!$Label.IPM_ITOValidation}',IPM_PBOPCP: '{!$Label.IPM_PBOPCP}', IPM_PBOCP: '{!$Label.IPM_PBOCP}', IPM_TurnOverCP: '{!$Label.IPM_TurnOverCP}', GetFinancialYearRA:'{!$RemoteAction.IPM_FinancialCopyPasteGrid.GetFinancialYear}', span:'{!span}', UploadBusinessCase:'{!URLFOR($Page.IPM_UploadBusinessCase)}'};

</script>
<script src="{!URLFOR($Resource.IPM_Resource, 'js/jquery.js')}"></script> 
<script src="{!URLFOR($Resource.IPM_FinancialGrid, 'NewGridDemo/handsontable.full.min.js')}"></script>
<script src="{!URLFOR($Resource.IPM_FinancialGrid, 'NewGridDemo/ruleJS/dist/full/ruleJS.all.full.js')}"></script>
<script src="{!URLFOR($Resource.IPM_FinancialGrid, 'NewGridDemo/handsontable.formula.js')}"></script> 
<script src="{!URLFOR($Resource.IPM_Resource, 'js/IPM_FinancialGrid.js')}"></script>            
         </apex:form>  
        </apex:define>
    </apex:composition>
</body>
</html>  
</apex:page>