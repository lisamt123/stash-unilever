<apex:page Controller="Amr_JobAllocation" >

<apex:pageMessages />
<html>
    <head>
    <title>
        Job Allocation
    </title>
    <style>
        .header {
        font-size:17px;
        font-weight:bold;
        color: #214278;
        }
        .allocation-main {
        margin:100px;
        }
        .allocation-sub{
        padding:8px;
        }
    </style>
    </head>
    <body>
    <apex:form >
    <apex:pageBlock >
        <div class='allocation-main'>
            <div class='allocation-sub'>
                <span class='header'>Job Allocation</span>
            </div>
            <div class='allocation-sub' style="color:#214278;">
                Allocate responsibility for this job to a RAP by selecting a name from the list.
            </div>
            <div class='allocation-sub'>
                An Automated email notification will be sent to the appointed RAP requesting their acceptance.
            </div>
            <div class='allocation-sub'>
                <apex:selectList value="{!selectedOptionValue}" size="1" rendered="true">
                  <apex:selectOptions value="{!lstUser}">         
                  </apex:selectOptions>     
              </apex:selectList> 
            </div>
            <div class='allocation-sub'>
              
                <apex:commandButton value="SUBMIT" action="{!allocateJob}" style="background:LightBlue;width:100px;height:40px;" />
                
            </div>
            <div class='allocation-sub' style='margin-top:30px;'>
                <input type='checkbox'/>
                Click to confirm that the production activity has been checked and is correct for the scope of the project.
            </div>
        </div>
        </apex:pageBlock>
         </apex:form>
    </body>
</html>


    
    
    
    
        
       

            
               
            
                   
   
</apex:page>