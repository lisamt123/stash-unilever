<apex:page standardStylesheets="false" sidebar="false" docType="html-5.0" tabStyle="Sustainable_Living_Lab__tab" standardcontroller="Event__c" 
        extensions="isll_EventDetailExtention" action="{!createUniqueVisit}">
        
        
<apex:includeScript value="{!URLFOR($Resource.ISLL_Sustainable_Living_Lab, 'Java Script(ISLL)/isll_EventsDetail_Page1.js')}" />

<apex:includeScript value="{!URLFOR($Resource.ISLL_Sustainable_Living_Lab, 'Java Script(ISLL)/isll_EventsDetail_Page2.js')}" />
 

<style type="text/css">
    #firstColumn {
        margin-bottom: 20px;
        width: 45% !important;
        float: left;
    }
            
    #secondColumn {
        margin-bottom: 20px;
        width: 30% !important;
        float: left;
        margin-left: 22px;
    }

    #thirdColumn {
        margin-bottom: 20px;
        width: 20% !important;
        float: left;
    }

    .hearderImage{
        width : 99%;
        height: 150px;
    }
/*chatter*/
    div.feedrightbar{
        visibility : hidden;
    }
    div#chatterDiv {height:400px;}
    
    .publishercontainer {width:400px;}
    
    .feedcontainer {width: 450px; height:400px; overflow-y : scroll;  overflow-x : hidden; }
    
    .feeditem div.feeditemaux {width: 230px; }
    
    .view {width: 200px;}
    
    .feeditemActionMenuButton {margin-right : 50px;}

    .feedpage .feedmain {width :400px;}
    
    .viewLink {
        clear:both;
     }
     
     .viewLink a{ 
        color : #6e6cb8;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 11px;
     }

     .joinDiv{
        height: 15px;
        width: 80px;
        overflow: hidden;
        display: block;
     }
     
     div.jcarousel-skin-tango .jcarousel-container-horizontal, div.jcarousel-skin-tango .jcarousel-clip-horizontal {
        width: 345px;
    }
    .feedcontainer {width:400px;}
    .btn-refresh.active {color:red;}
    
    .membersAmount {font-size: 16px; color: #767676;}

    .right { text-align: right; }
    
    .theStartBtn
    {
        visibility: hidden;
    }
    
    .theStopBtn
    {
        visibility: hidden;
    }
</style>

