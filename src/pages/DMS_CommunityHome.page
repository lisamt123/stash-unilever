<apex:page controller="DMS_Home_CC" docType="html-5.0"  sidebar="false" showHeader="false">
    
    <apex:includeScript value="{!URLFOR($Resource.DMS_CommunityCSS, '/dist/js/jquery-1.11.3.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.DMS_CommunityCSS, '/dist/js/app.js')}"/>
    
    <head>
        <title>Unilever Community</title>
        <meta charset="utf-8"/>
        
        
