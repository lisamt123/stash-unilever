<apex:page controller="BEN_Matrix_Print_VF_Controller" standardStylesheets="false" showHeader="false" sidebar="false" renderAs="PDF" >
    
    <apex:stylesheet value="{!URLFOR($Resource.BEN_styles, 'BEN_Matrix_styles.css')}" />

    <div>
        Benchmarking Report <h3>
           <u> Overall Opinion vs Key Attributes </u>
        </h3>
    </div>
    
    <div align="right" style="font-weight: 500">  Generated By:  {!$User.FirstName} {!$User.LastName}</div>
    <div align="right" style="font-weight: 500">  Date:  {!DAY(Today())} {!CASE(MONTH(Today()), 1, 'January', 2, 'February', 3, 'March', 4, 'April', 5, 'May', 6, 'June', 7, 'July', 8, 'August', 9, 'September', 10, 'October', 11, 'November', 12, 'December', 'Unknown')} {!YEAR(Today())}</div>
    <div align="left" style="font-weight: 600">Period:  {!fromQuarterVal}-{!fromYearVal} to {!toQuarterVal}-{!toYearVal} </div>
    <div align="left" style="font-weight: 600">Products Categories:   {!productCat}</div>
    
    <div>
        
        <div style="max-width: 60px;	float: left; font-weight: 800; margin: 13% 0 0 0;">Overall Opinion</div> 
        
        <div style="margin: 7% 0 0 10%;">
            <table class="Matrix" id='matrixtable'>
                <thead>
                </thead>
                
                <tbody>
                    <tr><td colspan="5" style="font-weight:700;">{!totalRecCount} products Tested</td></tr>
                    <tr>                       
                        <td>Superior</td>
                        <td style="background-color: yellow">{!winLoss_00}</td>
                        <td style="background-color: green">{!winParity_01}</td>
                        <td style="background-color: green">{!winWin_02}</td>
                    </tr>
                    <tr>
                        <td>Parity</td>
                        <td style="background-color: #f00">{!parityLoss_10}</td>
                        <td style="background-color: yellow">{!parityParity_11}</td>
                        <td style="background-color: green">{!parityWin_12}</td>
                    </tr>
                    <tr>
                        <td>Inferior</td>
                        <td style="background-color: #f00">{!lossLoss_20}</td>
                        <td style="background-color: #f00">{!lossParity_21}</td>
                        <td style="background-color: yellow">{!lossWin_22}</td>                
                    </tr>
                    <tr>                       
                        <td></td>
                        <td>Inferior</td>
                        <td>Parity</td>
                        <td>Superior</td>
                    </tr>
                    
                    <tr><td colspan="5" style="font-weight: 800">Key Attributes</td></tr>	
                </tbody>
            </table>
        </div>
    </div>
</apex:page>