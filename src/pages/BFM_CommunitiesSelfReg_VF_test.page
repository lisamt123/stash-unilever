<apex:page id="communitiesSelfRegPage" showHeader="true" controller="BFM_CommunitiesSelfRegController_test_CC" title="{!$Label.site.user_registration}" doctype="HTML-5.0"  cache="false">
     <apex:define name="body">  
      
<style>
form { margin: 0px 10px; }

