    <script>
    var jq= jQuery.noConflict();
    jq(document).on('click', '#resetFilterBtn', function(){ jq(".docFilter").find("input[type=checkbox]").prop("checked",true);jq(".docFilter").find("label").addClass("selected");});
    jq(".docFilter").find("input[type=checkbox]").prop("checked",true); 
    jq(".docFilter").find("label").addClass("selected"); 
    jq(document).on('mouseover','.ipmTable tr:odd', function(){jq(this).find('.proTitle').addClass('proTitle_hover');jq(this).next('tr').addClass('tr_hover');});
    jq(document).on('mouseout','.ipmTable tr:odd', function(){jq(this).find('.proTitle').removeClass('proTitle_hover'); jq(this).next('tr').removeClass('tr_hover');});
    
    jq(document).on('mouseover','.ipmTable tr:even', function(){jq(this).prev('tr').addClass('tr_hover');jq(this).prev('tr').find('.proTitle').addClass('proTitle_hover');});
    jq(document).on('mouseout','.ipmTable tr:even', function(){jq(this).prev('tr').removeClass('tr_hover');jq(this).prev('tr').find('.proTitle').removeClass('proTitle_hover');});
    jq("input.disable").prop("disabled", true);
    </script>
