        <body class="flat-blue">               
                <div class="panel-body">
            <form class="form-wrapper">
                <!--input type="submit" value="Search SES" id="submit"/--->
                <!---input id="pac-input" class="controls" type="searchWord" placeholder="Search..."/--->
                <apex:inputText value="{!searchWord}"/> 
                <!--input id="pac-input" class="controls" type="searchWord" placeholder="Search..."/--->
                <apex:commandButton action="{!searchSES}" value="Search SES"/>
                <apex:commandButton action="{!redirectPage}" value="Clear"/>                     
            </form>           
           </div>
              
              <table id="myTable" class="table table-striped" border="1" cellpadding="1" cellspacing="1" >
                <thead align="center">  
                    <tr class="headerRow" > 
                        <th class="headerRow" align="center">SES</th> 
                        <th class="headerRow" align="center">Origin</th>
                        <th class="headerRow" align="center">Destination</th>
                        <th class="headerRow" align="center">Pricing Calculation Date</th>    
                        <th class="headerRow" align="center">Gross value</th>  
                        <!--<th class="headerRow" align="center">File Upload</th>-->  
                        <th class="headerRow" align="center">Link</th>
                        <th class="headerRow" align="center">Validation</th>
                        <th class="headerRow" align="center">POD</th>
                        <th class="headerRow" align="center">Payment</th>
                    </tr>  
                 </thead>
                 <apex:repeat value="{!wrapper}" var="w"> 
                    <tr class="dataRow">
                     <td class="dataCell"><apex:outputlink target="_blank" value="/{!w.ses.id}">{!w.ses.Name}</apex:outputlink></td>                            
                     <td class="dataCell">{!w.ses.stage__r.Origin_city__c}</td>
                     <td class="dataCell">{!w.ses.stage__r.Destination_City__c}</td> 
                     <td class="dataCell">{!w.ses.stage__r.Shipment__r.Pricing_Calculation_Date__c}</td> 
                     <td class="dataCell">{!w.ses.Gross_Value_net_tax__c }</td>
                     <!--<td align="center"><apex:commandButton style="width:25px;height:25px;" value="File Upload" image="{!$Resource.BFM_FileUpload}" onclick="window.open('/apex/BFM_Fileupload_VF');"/></td>-->
                     <!--<td align="center"><apex:commandButton style="width:25px;height:25px;" value="File Upload" image="{!$Resource.BFM_FileUpload}" onclick="window.open('$Site.Prefix+/apex/BFM_Fileupload_VF')"/></td>-->
                     <td align="center"><apex:image id="theImage1" value="{!If(w.linkStatus == 'OK', $Resource.BFM_Green, If(w.linkStatus =='NOTOK', $Resource.BFM_Red, $Resource.BFM_White))}"/></td>
                     <td align="center"><apex:image id="theImage2" value="{!If(w.validationStatus== 'OK', $Resource.BFM_Green, If(w.validationStatus=='NOTOK', $Resource.BFM_Red, $Resource.BFM_White))}"/></td>
                     <td align="center"><apex:image id="theImage3" value="{!If(w.PODStatus == 'OK', $Resource.BFM_Green, If(w.PODStatus =='NOTOK', $Resource.BFM_Red, $Resource.BFM_White))}"/></td>
                     <td align="center"><apex:image id="theImag4" value="{!If(w.PaymentStatus == 'OK', $Resource.BFM_Green, If(w.PaymentStatus =='NOTOK', $Resource.BFM_Red, $Resource.BFM_White))}"/></td>
                  </tr>
                 </apex:repeat>
             </table>             
  </body>
    </apex:form>
