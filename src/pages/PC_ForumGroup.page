<apex:page controller="PC_ForumGroupController_CC" docType="html-5.0" sidebar="false" showHeader="true" standardStylesheets="false" action="{!loadData}">
    <!-- sylesheets -->
    <apex:stylesheet value="{!URLFOR($Resource.PCResources, '/css/bootstrap.min.css')}" />
    <apex:stylesheet value="{!URLFOR($Resource.PCResources, '/css/PCContainer.css')}" />
    
    <apex:composition template="PBS_Header_Template" />
    <div class="row bodyRow">
        <div class=" col-xs-4"><div class="home-title">WELCOME TO </div><div class="home-title-bold">PLANCRAFT</div></div>
        <div class="col-xs-4 home-detail">
            <ul>
            <li>{!$User.FirstName} {!$User.LastName}&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="{!$Page.PBS_EditProfile}" target="_self">EDIT PROFILE</a></li>
            </ul>
        </div>
        </div>
    <div class="wrapper">
    <div class="subnav">
        <div class="row topRow">
            <div class="col-md-12 col-lg-12">
                <a href="{!$Page.PC_Forum}" title="Go back to Forum Page">&laquo; Go Back to Forum Page</a>
            </div>
        </div>

        <apex:outputPanel layout="none" rendered="{!hasMessages}">
            <div class="row topRow">
                <div class="col-md-12 col-lg-12">
                    <apex:pageMessages ></apex:pageMessages>
                </div>
            </div>
        </apex:outputPanel>

        <apex:outputPanel layout="none" rendered="{!NOT(ISBLANK(pcGroup))}">
            <div class="row topRow">
                <div class="col-md-2 col-lg-2">
                    <apex:variable var="img" value="{!IF(ISBLANK(pcGroup.Image_ID__c), URLFOR($Resource.PCResources, '/img/noImage.png'), '/servlet/servlet.FileDownload?file=' + pcGroup.Image_ID__c)}" />
                    <apex:image value="{!img}" alt="{!pcGroup.Title__c}" styleClass="img-thumbnail" />
                </div>
                <div class="col-md-10 col-lg-10">
                    <div class="heading">
                        {!pcGroup.Title__c}
                        <apex:outputPanel layout="none" rendered="{!NOT(ISBLANK(groupObj))}">
                            &nbsp;<span class="badge">{!groupObj.MemberCount}</span>
                        </apex:outputPanel>
                    </div>
                    <div class="subheading">
                        {!pcGroup.Summary__c}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 col-lg-5 leftNav">
                    <div class="box">
                        <div class="headerBox">
                            TOP 10 FAQs
                        </div>
                        <ul>
                            <apex:repeat value="{!faqList}" var="article">
                                <li><a href="/articles/{!language}/{!SUBSTITUTE(article.ArticleType,'__kav','')}/{!article.UrlName}" target="_self">{!article.title}</a></li>
                            </apex:repeat>
                        </ul>
                        <div class="right">
                            <a  onclick="window.parent.postMessage({itemId: 'pbs'}, '*');" href="{!$Page.PBS_Library}">View Library to see more &raquo;</a>
                        </div>
                    </div>

                    <div class="box">
                        <div class="headerBox">
                            TOP 10 Wiki
                        </div>
                        <ul>
                            <apex:repeat value="{!wikiList}" var="article">
                                <li><a href="/articles/{!language}/{!SUBSTITUTE(article.ArticleType,'__kav','')}/{!article.UrlName}" target="_self">{!article.title}</a></li>
                            </apex:repeat>
                        </ul>
                        <div class="right">
                            <a  onclick="window.parent.postMessage({itemId: 'pbs'}, '*');" href="{!$Page.PBS_Library}">View Library to see more &raquo;</a>
                        </div>
                    </div>

                </div>
                <div class="col-md-7 col-lg-7">
                    <div class="headerBox noExtraPadding">Feed</div>
                    <div class="chatterWrapper zen" rendered="{!NOT(ISBLANK(groupObj))}">
                        <chatter:feed entityId="{!groupObj.Id}" />
                    </div>
                </div>
            </div>
        </apex:outputPanel>
        </div>
    </div>
</apex:page>