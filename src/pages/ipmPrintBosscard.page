<apex:page controller="IPM_PrintBosscardPDFController" applyHtmlTag="false" showHeader="false" applyBodyTag="false">
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <link rel="stylesheet" media="print" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <style type="text/css" media="print">
        @page {
             margin-top: 20mm;
             margin-bottom: 20mm;
             @top-right {
                 content: "Page " counter(page) " of " counter(pages);
                 font-size:11px;
                 font-family:Arial Unicode MS;
                 border-bottom:1px solid #00B389;
             }
             @top-center{
                 content: element(header); 
                 border-bottom:1px solid #00B389;                              
             }
             @top-left{
                 border-bottom:1px solid #00B389;
             }
             @bottom-center{
                 content: element(footer);
             }
        }
         body, table{font-family:Arial Unicode MS; font-size:14px;}
         table td {text-align:left; vertical-align:top;}
        .width50{width:70%;}
        .width30{width:30%;}
        .headerBlock {display:inline-block;}
        h5 {font-size:13px!important;}        
        .projLogo{width:30%!important;}
        .projLogo img {width:200px}
        .floatLeft{float:left;}
        .floatRight{float:right;}
        .full-width{width:100%;}
         .terques{background: #00B389 !important; color:#fff;overflow-wrap: break-word !important;}
        .tblData{color: #00B389 !important;}
        .panel-title{padding:10px;}
        .marginTop{margin-top:10px;}
        .panel-data .panel-body{overflow-wrap: break-word; word-wrap:break-word; color:red; white-space: pre-wrap;}      
        .fieldLabel{font-weight:bold;}  
        div.footer{position: running(footer); font-size:11px; text-align:center;}
        div.header{position: running(header); font-size:16px;}
        
    </style>
     <script type="text/javascript">
 window.onload = function() { window.print();  parent.location.href="/apex/ipmBosscard?id={!Bosscard.Id}"; }
</script>
</head>
<apex:stylesheet value="{!URLFOR($Resource.styles,'pdf.css')}"/>
<body>
<apex:define name="header">
<div class="header">
   <center><div class="headerBlock"><apex:outputText value="{!Bosscard.IPM_BosscardName__c}" styleClass="fieldLabel"/></div>
   <div class="headerBlock"><c:ipmHeader heading="BOSSCARD"/></div></center>
   </div>
</apex:define>
<div class="row full-width" style="margin-top:30px;">
    <div class="col-sm-3 col-lg-3 projLogo floatLeft" >
        <div class="panel">
            <div class="panel-body">
            
             <!--  <apex:outputField value="{!Bosscard.IPM_Bosscard_Logo__c}" />    -->
           <span><apex:image width="60%" value="/servlet/servlet.FileDownload?file={!Bosscard.IPM_Bosscard_Logo_Id__c}"/>
            </span></div>
        </div>
    </div>
    <div class="col-sm-9 col-lg-9 floatRight" style="width:70%;">
    <table width="100%" border="0" cellpadding="4" cellspacing="0">
    <tr>
    <td width="25%"><apex:outputLabel value="Category:" styleClass="fieldLabel marginRight"/></td>
    <td width="25%" class="tblData"><apex:outputText value="{!usr.IPM_Category__c}"/></td>
    <td width="25%"><apex:outputLabel value="BOSSCARD Approver:" styleClass="fieldLabel marginRight" /></td>
    <td width="25%" class="tblData"><apex:outputText value="{!Bosscard.IPM_Gate_Keeper__r.Name}"/></td>
    </tr>
    <tr>
    <td><apex:outputLabel value="Brand:" styleClass="fieldLabel marginRight" /></td>
    <td class="tblData"><apex:outputText value="{!Bosscard.IPM_Brand__c}"/></td>
    <td><apex:outputLabel value="Project Leader:" styleClass="fieldLabel marginRight"/></td>
    <td class="tblData"><apex:outputText value="{!usr.Name}"/></td>
    </tr>
    <tr>
    <td><apex:outputLabel value="Brand Positioning:" styleClass="fieldLabel marginRight" /></td>
    <td class="tblData"><apex:outputText value="{!Bosscard.IPM_Brand_Positioning__c}"/></td>
    <td><apex:outputLabel value="Target Launch Period:" styleClass="fieldLabel marginRight" /></td>
    <td class="tblData"><apex:outputText value="{!Bosscard.IPM_Target_Launch_Date__c}"/></td>
    </tr>  
    </table>    
    </div>
</div>
<div style="clear:both;"></div>
<div class="row full-width">
    <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Background
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Background__c}"/></div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Opportunity
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body">
                <h5>Consumer Need</h5>
                <div><apex:outputText value="{!Bosscard.IPM_Consumer_Need__c}"/></div>
                <h5>Potential Business Opportunity</h5>
                <div><apex:outputText value="{!Bosscard.IPM_Potential_Business_Opportunity__c}"/></div>
            </div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Scope
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Scope__c}"/></div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Sustainability
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Sustainibility__c}"/></div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Constraints
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Constraints__c}"/></div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Assumptions
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Assumptions__c}"/></div>
        </div>
    </div>
     <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Resources
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Resources__c}"/></div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading active terques">
            <h4 class="panel-title">
                Deliverables
            </h4>
        </div>
        <div class="panel-data">
            <div class="panel-body"><apex:outputText value="{!Bosscard.IPM_Deliverables__c}"/></div>
        </div>
    </div>
    </div>
    <div class="footer">
          Â© UNILEVER HIGHLY CONFIDENTIAL AND PROPRIETARY INFORMATION - REPRODUCTION AND DISTRIBUTION IS PROHIBITED
    </div>
   </body>
</html>   
</apex:page>