<apex:page standardController="CPA_LOI__c" extensions="CPA_LOI_InformationController">
 <apex:form >
   <apex:pageBlock >
      <apex:pageMessages />
      <apex:pageBlock rendered="{!mandatoryStringFlag != null}">
        <apex:pageMessage summary="{!mandatoryStringFlag}"
                      severity="warning"
                      strength="3"
                     rendered="{!mandatoryStringFlag != null}" />
            <apex:pageBlockTable value="{!RequiredFieldMap}" var="listItem" rendered="{!mandatoryStringFlag != null}">
                <apex:column value="{!listItem}"  headerValue="Field Name"/>
                <apex:column value="{!RequiredFieldMap[listItem]}" headerValue="Criteria"/>
            </apex:pageBlockTable>
        </apex:pageBlock>    
    </apex:pageBlock>     
 </apex:form>
</apex:page>