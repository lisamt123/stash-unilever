<apex:page standardController="IPM_Bosscard__c" extensions="IPM_BosscardController" renderAs="PDF" applyHtmlTag="false" showHeader="false" applyBodyTag="false">
<html>
<head>   
    <style type="text/css" media="print">
    
        @page { 
            margin-top: 25mm; 
            margin-bottom: 30mm;          
            margin-left: 0mm; 
            margin-right: 0mm;     
            background-image: url('{!URLFOR($Resource.ipmResourceRevamp, 'images/pebbleline.png')}');
            background-repeat: repeat-y;
            background-position: -5px 0;
            @top-center{
                 content: element(header); 
                 width:100%;                                   
                 overflow:visible;                 
             }
            @top-right {                 
                 content: element(secProd); 
            }
            /*@top-left{
                  content: element(secLogo); 
             }*/
             @bottom-center{
                 content: element(footer);
                 color:#666666!important;
             }
             @bottom-left{                
                content: "Page " counter(page) " / " counter(pages);
                font-family:Arial;
                font-size:10pt;
                color:#666666;
                text-indent:10mm;
                 background-image: url('{!URLFOR($Resource.ipmResourceRevamp, 'images/printFooter.png')}');
                 background-repeat: no-repeat;
                 background-position: left bottom;
                 height:100mm;
             }
             @bottom-right{                                                   
                 background-image: url('{!URLFOR($Resource.ipmResourceRevamp, 'images/fooLogo.png')}');
                 background-repeat: no-repeat;
                 background-position: 20px 40px;
             }
        }
         body, table{font-family:Arial Unicode MS; font-size:14px;}
         table td {text-align:left; vertical-align:top;}
         .bold {font-weight: bold; font-family: sans-serif;}
         .header {margin-left:5mm!important; margin-right:5mm!important; margin-top:5mm!important; margin-bottom:5mm!important;}
        .secLogo{width:80%;float:left; height:40px; overflow:hidden;}
        .secProd{width:20%;float:right; color:#253b78; text-align:left; display:block;}
        .secProd .subText {color:#666666; font-size:8pt!important; display:block;}
        .secCategory {padding-right:5px; vertical-align:top; font-size:15pt;}
        .secCategory img {max-width:100%; width:100%;}
        .spacer{padding:0!important;  height:20px; border-bottom:0.5pt solid #e6e533; clear:both; }
         .bossName{color:#007dbb; font-size:15pt; padding-right:8px; padding-left:8px; margin:0; line-height:30px; font-weight: bold; font-family: sans-serif;}         
        .dataTable {padding:35px 20px 10px 15px; background-image:url('{!URLFOR($Resource.ipmResourceRevamp, 'images/Pebble_bosscard_big.png')}'); background-repeat:no-repeat;height:130px;}
        .dataTable tr.lastchild td {border:none!important;}
        .dataTable td {font-family: sans-serif; font-size:9pt!important; color:#000000; vertical-align:middle; border-bottom:0.25pt solid #a2b868; padding-top:5px;padding-bottom:5px; }
        .dataTable td.label {color:#000000!important; text-align:right; padding-right:3px;  font-weight: bold; font-family: sans-serif; }
        .dataTable td span.ps {font-size:7pt;font-weight:normal!important;}
        #wrapper {margin-left:5mm!important; margin-right:5mm!important;}
        .headSecBlock {display:inline-block; padding-left:8px; text-transform:uppercase; padding-right:8px; margin-top:6px; color:#555555!important; border-left:0.25pt solid #a8a8a8!important; }        
        .headSecBlock.smallText {font-size:9pt!important;font-weight:normal;} 
        .headSecBlock.global{font-size:9pt!important; padding-left:30px!important; background-image:url('{!URLFOR($Resource.ipmResourceRevamp, 'images/globe.png')}'); background-repeat:no-repeat;background-position:10px 3px;} 
         h5 {font-size:13px!important;}        
        .projLogo{width:100%!important;}        
        .floatLeft{float:left;}
        .floatRight{float:right;}
        .full-width{width:100%;}
        .terques{background: #00B389 !important; color:#fff;overflow-wrap: break-word !important;}
        .tblData{color: #00B389 !important;}
        .panel-title{padding:10px;}
        .marginTop{margin-top:10px;}
        .panel-data .panel-body span{overflow-wrap: break-word; word-wrap:break-word; color:#000; white-space: pre-wrap;}        
        .fieldLabel{font-weight:bold;}  
        div.footer{position: running(footer); font-size:8pt; text-align:right; color:#434343!important;}
        div.header{position: running(header); font-size:16px;}
        .Iwidth{width:30%;}
        .heading2, .heading3, .heading4, .bdText {display:block; padding-top:8px; padding-bottom:8px; }
        .bdText {font-size:11pt; color:#666666!important; text-indent:initial;}
        .heading2 {color:#253b78!important; font-size:17pt; display:block; border-bottom:0.25pt solid #7fa19e;}
        .heading3 {color:#0f81bb!important; font-size:13pt; display:block; border-bottom:0.25pt solid #ccd9d8;}
        .heading4 {color:#0f81bb!important; font-size:11pt; display:block; border-bottom:0.25pt solid #ccd9d8;} 
        .waterMark {position: fixed; top:20%; left:50%; z-index:0; margin-left:-200px; margin-top:-172px;}      
        
    </style>
</head>
<body class="docBody">
        <apex:outPutpanel rendered="{!IF(bosscard.IPM_Bosscard_Status__c='Approved', 'false', 'true')}">
            <img src="{!URLFOR($Resource.ipmResourceRevamp, 'images/draft-wm.png')}" class="waterMark"/>
        </apex:outPutpanel>
        <!-- Header Start -->
        <div class="header">
        <div class="secLogo">
        <table>
        <tr>
        <td width="10%">
        <apex:image value="/servlet/servlet.FileDownload?file={!pdfRecord.IPM_Bosscard_Logo_Id__c}" styleClass="projLogo"/>
        </td>
        <td width="35%" align="center" >
        <div class="bossName">{!pdfRecord.IPM_BosscardName__c}</div>
        </td>
        <td width="65%">        
        <div class="headSecBlock bold">Bosscard</div>
        <apex:outputText value="GLOBAL" styleClass="headSecBlock global"/>  
        <apex:outPutpanel rendered="{!IF(bosscard.IPM_Bosscard_Status__c='Approved', 'true', 'false')}">
            <div class="headSecBlock bold">Approved</div>   
        </apex:outPutpanel>
        </td>       
        </tr>
        </table>
        </div>
        <div class="secProd">
        <table width="100%">
        <tr>
        <td width="18%" class="secCategory">
        <img src="{!URLFOR($Resource.ipmResourceRevamp, 'images/categoryIcons/Clothes.png')}"/>
        </td>
        <td width="82%">        
        <apex:outputText value="{!pdfRecord.IPM_Category__c}" styleClass="secCategory"/>
        <apex:outputText value="HOME CARE" styleClass="subText"/>
        </td>
        </tr>
        </table>
        </div>
        <div class="spacer"></div>        
        </div>
        <!--/ Header End-->
        
        <!-- Footer Start -->
        <div class="footer">
        <apex:outputText value="Â© Unilever Highly Confidential and Proprietary Information - Production and Distribution is Prohibited."></apex:outputText><br/>
       
        </div>
        <!--/ Footer Start -->
        
        <!-- Content Start -->
        <div id="wrapper">
        <div class="dataTable">
        <table width="100%" cellpadding="0" cellspacing="0" border="0">            
            <tr>
                <td class="label" width="20%">
                  Category:
                </td>      
                <td width="10%">
                   {!pdfRecord.IPM_Category__c}
                </td> 
                <td class="label" width="20%">
                   Brand Positioning:
                </td>      
                <td width="15%">                    
                    {!pdfRecord.IPM_Brand_Positioning__c}
                </td> 
                <td class="label" width="20%">
                    BOSSCARD Creator:
                </td>      
                <td width="20%">
                    {!pdfRecord.CreatedBy.Name}
                </td>
            </tr>
            <tr>     
               <!-- <td class="label" width="20%">
                    Brand:
                </td>      
                <td width="10%">
                    {!pdfRecord.IPM_Brand__c}
                </td>-->
                <td class="label">
                    Target Launch Date:
                </td>      
                <td>                    
                    {!pdfRecord.IPM_Target_Launch_Date__c}
                </td>
                <td class="label">
                    Approver:
                </td>      
                <td>
                    {!pdfRecord.IPM_Gate_Keeper__r.Name}
                </td>                
            </tr>
        </table>
        </div>
        <div>
            <div class="heading2 bold">
                1.Background
            </div>
            <div class="bdText">
                <apex:outputField value="{!pdfRecord.IPM_Background__c}" />
            </div>
            <div class="heading2 bold"> 
                2.Opportunity
            </div>
            <div class="bdText">
                 <div class="label">
                     <u>Consumer Need</u>
                 </div>
                 <apex:outputField value="{!pdfRecord.IPM_Consumer_Need__c}" />
            </div>
            <div class="bdText">
                <div class="label">
                      <u>Potential Business Opportunity</u>
                 </div>
                 <apex:outputField value="{!pdfRecord.IPM_Potential_Business_Opportunity__c}" />
            </div>
            <div class="heading2 bold">
                3.Scope
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Scope__c}" />
            </div>
            <div class="heading2 bold">
                4.Sustainability
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Sustainibility__c}" />
            </div>
             <div class="heading2 bold">
                5.Constraints
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Constraints__c}" />
            </div>
             <div class="heading2 bold">
                6.Assumptions
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Assumptions__c}" />
            </div>
             <div class="heading2 bold">
                7.Resources
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Resources__c}" />
            </div>
            <div class="heading2 bold">
                8.Deliverables
            </div>
            <div class="bdText">
                 <apex:outputField value="{!pdfRecord.IPM_Deliverables__c}" />
            </div>
            
        </div>
        
    </div>
    <!--/ Content End -->    
</body>
</html> 
</apex:page>