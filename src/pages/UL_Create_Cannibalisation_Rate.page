<apex:page standardController="UL_Cannibalisation_Rate__c" extensions="UL_CannibalisationRateController" 
    title="{!$ObjectType.UL_Cannibalisation_Rate__c.label} {!$Label.UL_EDIT}: {!$Label.UL_NEW}  {!$ObjectType.UL_Cannibalisation_Rate__c.label}" id="d_prof_page">
