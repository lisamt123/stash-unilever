<apex:page standardController="UL_Cannibalisation_Rate__c" extensions="UL_CannibalisationRateController">
    <apex:form >
        <apex:pageBlock title="Cannibalisation Rate Edit">
            <apex:pagemessages ></apex:pagemessages>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" title="Save" value="Save"/>
                <apex:commandButton action="{!cancel}" title="Save" value="Cancel"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Information" columns="1" collapsible="false">
                <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Sales_Organization__c}"/>
                <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Planning_Level__c}" label="{!$ObjectType.UL_Cannibalisation_Rate__c.fields.UL_Customer__c.Label}"/>
                <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Product__c}"/>
                <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Feature__c}"/>
                <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Cannibalisation_Rate__c}"/>
                <apex:pageblocksectionItem >
                    <apex:outputLabel value="{!$ObjectType.UL_Cannibalisation_Rate__c.fields.UL_Valid_From__c.Label}"></apex:outputLabel>
                    <apex:actionRegion >
                        <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Valid_From__c}">
                            <apex:actionSupport event="onchange" rerender="ThruDate" action="{!updateThruDate}"/>
                    </apex:inputField>
                    </apex:actionRegion>
                </apex:pageblocksectionItem>
                <apex:pageblocksectionItem >
                    <apex:outputLabel value="{!$ObjectType.UL_Cannibalisation_Rate__c.fields.UL_Valid_Thru__c.Label}"></apex:outputLabel>
                    <apex:outputpanel id="ThruDate">
                        <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Valid_Thru__c}"/>
                    </apex:outputpanel>
                </apex:pageblocksectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>