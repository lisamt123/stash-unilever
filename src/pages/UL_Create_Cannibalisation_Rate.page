                </apex:pageblocksectionItem>
                <apex:pageblocksectionItem >
                    <apex:outputLabel value="{!$ObjectType.UL_Cannibalisation_Rate__c.fields.UL_Valid_Thru__c.Label}"></apex:outputLabel>
                    <apex:outputpanel id="ThruDate">
                        <apex:inputField value="{!UL_Cannibalisation_Rate__c.UL_Valid_Thru__c}"/>
                    </apex:outputpanel>
                </apex:pageblocksectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
