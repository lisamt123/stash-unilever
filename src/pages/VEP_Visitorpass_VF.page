      <div class="header">
        <img height="75px" widht="100px" src="{!$Resource.VEP_UnileverLogo}" alt="Unilever Logo"/>
          <h1>Factory Visit Request</h1>
       </div>

                                                 
      <div class="content">
        <div class = "panel panel-primary">
             <div class = "panel-heading">Factory Visit Request : {!Vep_Visitor_Pass__c.name}</div>
              <div class="panel-body">
                  <div class="form-group">
                   <div class="clearfix" style="height: 20px;clear: both;"></div>
                      <label class="col-lg-2 control-label">Hello: </label>
                      <div class="col-lg-4">{!Vep_Visitor_Pass__c.visitor__r.name}</div>                     
                  </div>
                  <div class="clearfix" style="height: 20px;clear: both;"></div>
                 <div class="form-group">
                     <label class="col-lg-2 control-label">Factory To Visit: </label>
                      <div class="col-lg-4">{!Vep_Visitor_Pass__c.visitor__r.Factory_to_Visit__c}</div>                      
                  </div>                  
                  <div class="clearfix" style="height: 20px;clear: both;"></div>                  
                 <div class="form-group">
                      <label class="col-lg-2 control-label">Date: </label>
                      <label class="col-lg-1">From</label>
                      
                      <apex:outputText styleclass="col-lg-2" value="{0,date,MM/dd/yy}"> <apex:param value="{!Vep_Visitor_Pass__c.visitor__r.Date_From__c}" /> </apex:outputText>
                     
                      <label class="col-lg-1">To</label>
                      <apex:outputText styleclass="col-lg-2" value="{0,date,MM/dd/yy}"> <apex:param value="{!Vep_Visitor_Pass__c.visitor__r.Date_To__c}" /> </apex:outputText>                                         
                  </div>
                  <div class="clearfix" style="height: 20px;clear: both;"></div>
                  <div class="form-group">
                      <label class="col-lg-3 control-label">Purpose of Visit: </label>
                      
                      <div class="col-lg-4">{!Vep_Visitor_Pass__c.visitor__r.Reason_for_Visit__c}</div>
                      
                  </div>
                  <div class="clearfix" style="height: 10px;clear: both;"></div>
                  <div class="form-group">
                      <label class="col-lg-3 control-label">Approved By: </label>
                      
                      <div class="col-lg-4">{!Vep_Visitor_Pass__c.visitor__r.Person_to_meet__c}</div>
                      
                  </div>
                  <div class="clearfix" style="height: 10px;clear: both;"></div>
             </div>
            </div>
        </div>
                                                  
</apex:page>