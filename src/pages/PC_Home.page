<apex:page html-class="noBgImage" readOnly="true" docType="html-5.0" sidebar="false" showHeader="false" standardStylesheets="true">
    <!-- sylesheets -->
    <apex:stylesheet value="{!URLFOR($Resource.PCResources, '/css/bootstrap.min.css')}" />
    <apex:stylesheet value="{!URLFOR($Resource.PCResources, '/css/PCContainer.css')}" />

    <div class="wrapper">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="heading">
                    PlanCraft
                </div>
            </div>
            <div class="col-md-12 col-lg-12">
                <div class="subheading">
                    Welcome to PlanCraft. This portal brings together knowledge and best practise from across the Planning Community.
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="profileArea group">
                    <div class="headerBox">
                        Overview
                    </div>

                    <div class="headerBox left">
                        Coming Soon
                    </div>

                    <div class="row">
                        <div class="col-md-5 col-lg-5">
                            <apex:image value="{!URLFOR($Resource.PCResources, 'img/DEInfoArea.png')}" />
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <apex:image value="{!URLFOR($Resource.PCResources, 'img/badges.png')}" />
                        </div>

                        <div class="col-md-4 col-lg-4">
                            <!-- delete this page if not needed anymore -->
                            <apex:include pageName="PC_RankingTable" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- body -->
        <div class="row">
            <div class="col-md-3 col-lg-3 leftNav">
                <div class="box center">
                    <a onclick="window.parent.postMessage({itemId: 'pbs'}, '*');" title="PBS" href="{!$Page.PBS_WelcomePage}" target="innerFrame">
                        <apex:image title="PBS" value="{!URLFOR($Resource.PCResources, 'img/pbs.png')}" />
                    </a>
                </div>

                <div class="box center">
                    <a onclick="window.parent.postMessage({itemId: 'forum'}, '*');" title="Forum" href="{!$Page.PC_Forum}" target="innerFrame">
                        <apex:image title="Forum" value="{!URLFOR($Resource.PCResources, 'img/forum.png')}" />
                    </a>
                </div>

                <div class="box center">
                    <a onclick="window.parent.postMessage({itemId: 'pbs'}, '*');" title="PlanWiki" href="{!$Page.PBS_Library}" target="innerFrame">
                    	<apex:image title="Library" value="{!URLFOR($Resource.PCResources, 'img/Library.ico')}" />
                    </a>
                </div>

                <div class="box center">
                    <div class="headerBox">
                        Coming Soon
                    </div>
                    <!--<a onclick="window.parent.postMessage({itemId: 'pbs'}, '*');" title="Calendar" href="{!$Page.PBS_Calendar}" target="innerFrame"> -->
                        <apex:image title="Calendar" value="{!URLFOR($Resource.PCResources, 'img/calendar2.ico')}" />
                    <!--</a>-->
                </div>

                <div class="box center">
                    <div class="headerBox">
                        Coming Soon
                    </div>
                    <apex:image title="Quiz UP" value="{!URLFOR($Resource.PCResources, 'img/quiz.jpg')}" />
                </div>

            </div>
            <div class="col-md-9 col-lg-9">
                <div class="headerBox noExtraPadding">Feed</div>
                <div class="chatterWrapper zen">
                    <chatter:newsfeed />
                </div>
            </div>
        </div>
    </div>

</apex:page>