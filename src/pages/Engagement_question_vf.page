    <style>
    #spinner{
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        text-align:center;
        padding:10px;
        font:normal 16px Tahoma, Geneva, sans-serif;
        z-index:2;
        z-index:100;
        padding:5px;
        line-height:20px;
}

.loader {
    border: 6px solid #b3b3b3; /* Light grey */
    border-top: 6px solid #0066ff; /* Blue */
    border-radius: 50%;
    width:40px;
    height: 40px;
    animation: spin 2s linear infinite;
}
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

     #opaque {
       position: fixed;
         top: 0px;
         left: 0px;
         width: 100%;
         height: 100%;
         z-index: 1;
         display: none;
         background-color: black;
         filter: alpha(opacity=40);
         opacity: 0.5;
         -moz-opacity:0.3;
         -khtml-opacity:0.3;
     }
     * html #opaque {
         position: absolute;
     }
  </style>
 
