    <script>
    function showdet(){    
    var value1 = '';
    var value2 = '';
    if (document.getElementById('rad1').checked) { value1 = "{!ans.Answer1__c}";value2 = 9;   }
    if (document.getElementById('rad2').checked) { value1 = "{!ans.Answer2__c}";value2 = 7;   }
    if (document.getElementById('rad3').checked) { value1 = "{!ans.Answer3__c}";value2 = 5;   }
    if (document.getElementById('rad4').checked) { value1 = "{!ans.Answer4__c}";value2 = 3;   }
    if (document.getElementById('rad5').checked) { value1 = "{!ans.Answer5__c}";value2 = 1;   }
    if(value1==''){
    document.getElementById('opaque').style.display='block';
       var popUp = document.getElementById('spinner');    
       popUp.style.display = 'block';
    return null;    }
    else   {
    jQuery('[id$=myHiddenField]').val(value1);
    jQuery('[id$=myHiddenField1]').val(value2);
    }
    document.getElementById('opaque').style.display='block';
       var popUp = document.getElementById('spinner');     
       popUp.style.display = 'block';
     }
    </script>
    </apex:repeat>
    
    
