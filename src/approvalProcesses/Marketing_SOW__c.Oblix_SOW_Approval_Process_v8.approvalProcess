    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_SOW_Status_Awaiting_Agency</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Unilever_SOW_Approver_Name__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Marketing_SOW__c.SOW_Status__c</field>
                <operation>equals</operation>
                <value>Awaiting Unilever Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>UL to review</label>
        <name>UL_to_review</name>
        <rejectionActions>
            <action>
                <name>GBVP_return_SOW</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_SOW_Status_to_Returned_ByApprover</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_SOW_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Agency_SOW_Approver_Name__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Agency to review - initial approval then stamp SOW_Status with Approved</description>
        <entryCriteria>
            <criteriaItems>
                <field>Marketing_SOW__c.Initial_Approval_Complete__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>AG to review (Initial Approval)</label>
        <name>AG_to_review_Initial_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>SOW_Returned_by_Agency</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_SOW_Status_Returned_by_Agency</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_SOW_Status_to_Finalised</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Agency_SOW_Approver_Name__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Agency to review - If already completed initial approval then stamp SOW_Status with Finalise</description>
        <entryCriteria>
            <criteriaItems>
                <field>Marketing_SOW__c.Initial_Approval_Complete__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>AG to review (EOY approval)</label>
        <name>AG_to_review_EOY_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>SOW_Returned_by_Agency_Fin</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_SOW_Status_Returned_by_Agency_Fin</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Oblix_SOW_Email/SOW_for_Unilever_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR (2 AND 3)</booleanFilter>
        <criteriaItems>
            <field>Marketing_SOW__c.SOW_Status__c</field>
