VPM_ProvidedUnblockUndelete__c  || VPM_ProvidedBlockDelete__c  || VPM_ProvidedPaymentTerms__c  || VPM_ProvidedBankDetails__c  || VPM_ProvidedFinancialSensitive__c  
)), 
/* Freight,SCS Log*/ 
