&amp;&amp; 
VPM_Commodity_Family__c == &quot;Out of Scope Procurement&quot; 
&amp;&amp; 
(RecordType.DeveloperName = &apos;VPM_VendorReqCreate&apos; || RecordType.DeveloperName = &apos;VPM_VendorReqExtend&apos; || 
AND 
