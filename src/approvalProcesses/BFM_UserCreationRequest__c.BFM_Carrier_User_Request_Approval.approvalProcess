            <name>BFM_Rejection_email_alert_to_carrier_user</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <label>BFM Carrier User Request Approval</label>
    <nextAutomatedApprover>
