    <rules>
        <fullName>Confirm Terms and Conditions Registration</fullName>
        <actions>
            <name>Send_Registration_Confirmation</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>uw_Terms_Conditions__c.Status__c</field>
            <operation>equals</operation>
            <value>User Enabled</value>
        </criteriaItems>
        <criteriaItems>
            <field>uw_Terms_Conditions__c.InvitefromChatter__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Send Terms %26 Conditions From Chatter</fullName>
        <actions>
