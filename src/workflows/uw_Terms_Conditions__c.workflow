        <active>true</active>
        <criteriaItems>
            <field>uw_Terms_Conditions__c.Status__c</field>
            <operation>equals</operation>
            <value>Send</value>
        </criteriaItems>
        <criteriaItems>
            <field>uw_Terms_Conditions__c.InvitefromChatter__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
