    <apex:actionStatus onstart="startLoading();" onstop="endLoading();" id="actStatusId"/>
    <style>
        .overlay {
            display: none;
            height: 100%;
            left: 0;
            position: fixed;
            top: 0;
            opacity: 0.3;
            -moz-opacity: 0.3;
            width: 100%;
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=30)";
            filter: alpha(opacity=30);
            background: #000;
            -khtml-opacity: 0.3;
            z-index: 1000;
        }
        .loader {
            background: url('/img/loading32.gif') scroll no-repeat 0 0;
            width: 32px;
            height: 32px;
            font-weight:bold;
            font-style:italic;
            font-size:13px;
            text-indent: -1em;
            position: absolute;
            left: 50%;
        }
        .loadingMsg{
            position: relative;
            top: 3em;
        }
    </style>
 
    <div id="load_scrl" class="loadingBox loader" style="display:none">
     <div class="loadingMsg">Processing... </div>
    </div>
    <div class="loadingBox overlay"> </div>
