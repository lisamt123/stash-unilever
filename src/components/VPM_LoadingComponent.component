    <script type="text/javascript">
    var count =0;
        function startLoading(){
        debugger;
            $('#load_scrl').css('top', $(document).scrollTop() + 200);
            $('.loadingBox').show();
            debugger;
                setInterval(
function () {
        debugger;
      
        $('.messageTable').find('li').each(function( index ) 
        {
            if($( this ).text().indexOf('Validation Error:')>-1)
            {
                $( this ).text($( this ).text().replace('Validation Error:',''));
            }
        })

}

, 0);
