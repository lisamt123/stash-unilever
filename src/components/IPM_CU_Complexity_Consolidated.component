<apex:component Controller="IPM_CU_Complexity_Consolidated" allowDML="true">

    <apex:attribute name="getProjId" description="projectId" type="String" assignTo="{!projectId}"/>
    <apex:attribute name="getGateType" description="gateType" type="String" assignTo="{!gateType}"/>
    <apex:attribute name="isGateDoc" description="gateDocument" type="Boolean" assignTo="{!isGateDocument}"/>
    <apex:outputPanel layout="block" styleClass="pull-left cuconsolidated">   
        <apex:repeat value="{!secContentList}" var="secCon"> 
            <apex:outputPanel layout="block" styleClass="cucountryProName">
                <apex:outputField value="{!secCon.IPM_Project_Document_Section__r.IPM_Project_Document__r.IPM_Project__r.IPM_Project_Name__c}" styleClass="countryProName"/>
            </apex:outputPanel>
            <apex:outputText value="{!$Label.IPM_NET_EFFECT_ON_THE_NUM_OF_CU}"></apex:outputText>
            <apex:outputPanel layout="block" styleClass="cuComplexityContent" rendered="{!IF(secCon.IPM_Increased_By__c!=null,true,false)}" >
                <apex:outputPanel layout="block" styleClass="cuLeftBlock">
                    <apex:outputField value="{!secCon.IPM_Project_Effect__c}"/>
                </apex:outputPanel>
                <apex:outputPanel layout="block" styleClass="cuRightBlock">
                    <apex:outputField value=" {!secCon.IPM_Increased_By__c}" />
                </apex:outputPanel>
            </apex:outputPanel>
            <apex:outputPanel layout="block" rendered="{!IF(secCon.IPM_Decreased_By__c!=null,true,false)}" >
                <apex:outputPanel layout="block" styleClass="cuLeftBlock">
                    <apex:outputField value="{!secCon.IPM_Project_Effect__c} "/>
                </apex:outputPanel>
                <apex:outputPanel layout="block" styleClass="cuRightBlock">
                    <apex:outputField value=" {!secCon.IPM_Decreased_By__c}"/>
                </apex:outputPanel>
            </apex:outputPanel>
            <apex:outputPanel layout="block" title="{!$Label.IPM_FUNCTIONAL_SUMMARY}" styleClass="cucountryProName" rendered="{!IF(!isGateDoc,true,false)}" >          
                {!$Label.IPM_FUNCTIONAL_SUMMARY}  
                <apex:outputPanel layout="block" styleClass="cuConsolidatedImage"> 
                    <apex:outputField value="{!secCon.IPM_Project_Document_Section__r.IPM_PDP_Document_Summary__c}"/>
                </apex:outputPanel>  
            </apex:outputPanel>   
       </apex:repeat>
</apex:outputPanel>
</apex:component>