     <div class="Oblix_table" id="Oblix_DashId">
                <table class="table table-striped" id="historyListTable">
                    <thead>
                        <tr>
                            <th>Date and  Time</th>
                            <th>By Who</th>
                            <th>Action Taken</th>
                            <th>On file</th>
                        </tr>
                    </thead>
                    <tbody>
                        <apex:repeat value="{!SowHistory}" var="sowHist">
                                <tr>
                                    <td>{!sowHist.CreatedDate}</td>
                                    <td>{!sowHist.CreatedBy.Name}</td>
                                    <td width="15%">
                                    			<apex:outputPanel rendered="{!sowHist.NewValue<>''}">Changed <b>{!sowHist.Field}</b>  to <b>{!sowHist.NewValue}</b></apex:outputPanel>
                                    			<apex:outputPanel rendered="{!AND(sowHist.OldValue=='', sowHist.NewValue =='')}">{!sowHist.Field} <b> {!sowHist.Parent.Name}</b> </apex:outputPanel>
                                    </td>
                                    <td>{!sowHist.Parent.Name}</td>
                                </tr>
                        </apex:repeat>
                    </tbody>
                </table>
            </div>   
</apex:component>