<apex:component controller="Oblix_Ctrl11AuditTracking_Cmp" selfClosing="false" >
     <apex:componentBody />
     <apex:attribute name="recordId"
        description="Id of the record ParentId to fetch list of tracking"
        type="String" assignTo="{!sObjParentId}" required="true"/>
      <apex:attribute name="objApiName"
        description="Object API Name to construct History Object Name"
        type="String" assignTo="{!sObjApiName}" required="true"/>
     
     
