<aura:component >
    <aura:attribute name="workplaceGroupDetail" type="CollaborationGroup" />  
    <div class="itemPanel" onclick="{!c.navigateToGroupDetailPage}">
        <table width="100%" >
            <tr>
                <td class="groupIcon">
                    <img src="{!v.workplaceGroupDetail.SmallPhotoUrl}" class="groupIcon"></img>
                </td>
                <td class="title">             
                    <div> {!v.workplaceGroupDetail.Name} </div>
                    <aura:if isTrue="{!v.workplaceGroupDetail.MemberCount==1 ? true : false}">
                    	<div> {!v.workplaceGroupDetail.MemberCount}&nbsp;Member </div>  
                        <aura:set attribute="else">
                            <div> {!v.workplaceGroupDetail.MemberCount}&nbsp;Members </div>  
                        </aura:set>
                    </aura:if>
                </td>    
            </tr>
        </table>
        <!--<div style="display:inline-block;float:left;padding-left:10px;">
       		<img src="{!v.workplaceGroupDetail.SmallPhotoUrl}" class="groupIcon"></img> 
        </div>
        <div style="display:inline-block;padding-left:10px;padding-top: 10px;">                    	
            <span class="title">{!v.workplaceGroupDetail.Name} </span><br/>
            <span class="subTitle">{!v.workplaceGroupDetail.MemberCount}</span>
        </div>-->
    </div>     
</aura:component>