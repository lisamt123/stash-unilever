<aura:component controller="OV_KpiController" implements="force:appHostable">
<aura:registerEvent name="OV_NavigationEvent" type="c:OV_NavigationEvent" />
<ltng:require styles="/resource/OV_stylesMerged/styles.css?rev6v" scripts="/resource/OV_jquery, /resource/OV_bootstrap_drilldown" />
<aura:dependency resource="markup://c:OV_KpiTile" />
<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
<aura:handler event="c:OV_DeleteMyKPIEvent" action="{!c.deleteMyKPIElement}"/>
<aura:handler event="c:OV_FiltersEvent" action="{!c.applyFilters}" />
<aura:attribute name="mykpiElements" type="OV_Wrapper.KPIElementWrapper[]"/>

<aura:registerEvent name="OV_WizardSubmitEvent" type="c:OV_WizardSubmitEvent" />
<aura:handler event="c:OV_WizardSubmitEvent" action="{!c.onWizardSubmit}" />

<aura:registerEvent name="OV_WizardOpenModalEvent" type="c:OV_NavigationEvent" />
    <div class="row ">
        <div aura:id="myKpis" class="col-xs-12 myKpis">
            <div class="row">
                <div class="myKpisControls col-xs-12 text-center">
                    <div class="myKpisControlsManage clickable" onclick="{!c.openWizard}">
                        <span>Manage KPIs </span>
                        <span class="s1icon SF1-custom-icon-custom3" ></span>

                    </div>
                    <div class="myKpisControlsTitle">
                        <span>MY KPIs</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <aura:renderIf isTrue="{! v.mykpiElements.length >0}">
                <div class="col-xs-12 myKpisKpiList">
                    <aura:iteration items="{!v.mykpiElements}" var="kpielement">
                    <div tyle="display: inline-block;">
                        <c:OV_KpiTile kpielement="{!kpielement}" />
                    </div>
                    </aura:iteration>
                </div>
                </aura:renderIf>
            </div>
        </div>
    </div>
</aura:component>