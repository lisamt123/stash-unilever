<aura:component controller="Core_IC_IdeaController" >
         <aura:handler name="init" value="{!this}" action="{!c.getUpdatesIdeaDetailData}"/>
         <aura:attribute name="myUpdatesListItem" type="Core_CA_BaseApplicationWrapper"/>
         <aura:attribute name="myUpdatesListItem2" type="Core_CA_BaseApplicationWrapper"/>
         <aura:attribute name="recordType" type="String"/>
         <aura:attribute name="pannelType" type="String"/>
         <aura:attribute name="recordDetail" type="Core_CA_BaseApplicationWrapper"/>
         <aura:attribute name="commentCount" type="boolean" default="false"/>
         <aura:attribute name="showspinner" type="boolean" default="true"/> 
   <style>
       .user{#A7B8D1}
    </style>
  
   <div class="slds-media slds-comment slds-hint-parent updateStyle"> 
         <div class="slds-media__figure">
             <div class="slds-avatar slds-avatar--circle slds-avatar--small avatarIcon">    
                 <img src="{!v.myUpdatesListItem.BackgroundImage}"/>
             </div>
         </div> 
          <div class="slds-media__body">
             <aura:if isTrue="{!v.showspinner=='false'}">
             <div class="slds-grid slds-grid--align-spread slds-has-flexi-truncate"> 
                 <p class="slds-truncate "><span class="user">{!v.myUpdatesListItem.CreatorName}</span>
                   <aura:if isTrue="{!v.myUpdatesListItem.MyUpdatesType == 'Comment'}">
                           commented 
                         <aura:set attribute="else">
                             voted 
                         </aura:set>
                    </aura:if>
                    
                  </p>
              </div>
                 for&nbsp;
                      <a>
                         <span onclick="{!c.gotoIdeaDetailPage}">
                          {!v.myUpdatesListItem2.IdeaTitle}
                         </span>
                     </a>
               <p class="slds-text-body--small">{!v.myUpdatesListItem.CreatedDateTime}...</p>
                 
                  <aura:set attribute="else">
                        <div class="slds-spinner_container">
                             <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                               <div class="slds-spinner__dot-a"></div>
                               <div class="slds-spinner__dot-b"></div>
                             </div>
                      </div>
                 </aura:set>
             </aura:if>
          </div>  
     </div>
  <hr/>      
</aura:component>