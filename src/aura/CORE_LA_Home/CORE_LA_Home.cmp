<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable">
    <ltng:require styles="{!$Resource.Lightning_designing_style + '/assets/styles/salesforce-lightning-design-system.min.css'}" />
    <aura:handler name="init" value="{!this}" action="{!c.defaultPanel}" />
    <!-- <aura:attribute name="showspinner" type="boolean" default="true"/> -->
    <aura:attribute name="isFeedbackPopup" type="boolean"/>
    <aura:attribute name="isFromFeedback" type="boolean"/> 
    <!--aura:attribute name="isCreateEventPopup" type="boolean" default="False" description="Flag to manage create event popup" /-->
    
    <style>
        .slds-tabs--default__item {
        	padding: 0 0rem !important
        }
    </style>
    <div class="parent" aura:id="parentDiv">
        <div class="slds-tabs--default">
            <!--Primary Tabs-->
            <ul class="slds-tabs--default__nav tabUi" role="tablist">
                <li aura:id="tab-profile" class="slds-tabs--default__item slds" title="My Profile" role="presentation"  onclick="{!c.profileDisplay}">
                    <a class="slds-tabs--default__link"  role="tab" tabindex="0" aria-selected="true" aria-controls="tab-default-1" id="tab-default-1__item">MY PROFILE</a>
                </li>
                <li aura:id="tab-default" role="presentation" title="Upcoming Events" class="slds-tabs--default__item slds" onclick="{!c.upcomingDisplay}">
                    <a class="slds-tabs--default__link" href="javascript:void(0);" role="tab" tabindex="-1" aria-selected="false" aria-controls="tab-default-2" id="tab-default-2__item">EVENT LIST</a>
                </li>
                <li aura:id="tab-past" class="slds-tabs--default__item slds" title="Past Events" role="presentation" onclick="{!c.pastDisplay}">
                    <a class="slds-tabs--default__link" href="javascript:void(0);" role="tab" tabindex="-1" aria-selected="false" aria-controls="tab-default-3" id="tab-default-3__item">CREATE EVENT</a>
                </li>
            </ul>
            <!--Primary Tabs-->
            <div id="tab-default-1" class="slds-tabs--default__content slds-hide" role="tabpanel" aria-labelledby="tab-default-1__item" aura:id="profileContent">
                <div class="profile-parent">
                    <c:CORE_LA_Profile />
                </div>
                <c:CORE_LA_EventCardListComponent filterType="Registered" sortType="Date" limitRecords="2" offsetValue="0" eventStatus="null" showMoreStatus="true" />
                
            </div>
            <div id="tab-default-2" class="slds-tabs--default__content slds-hide" role="tabpanel" aria-labelledby="tab-default-2__item" aura:id="upcomingContent">
                <c:CORE_LA_UpcomingTab />
            </div>
            <div id="tab-default-3" class="slds-tabs--default__content slds-hide" role="tabpanel" aria-labelledby="tab-default-3__item" aura:id="pastContent">
                <c:CORE_LA_Past />
            </div>
        </div>
    </div>
    <!-- Feedback Popup -->
    <aura:if isTrue="{!v.isFeedbackPopup}">
        <div class="slds-backdrop slds-backdrop--open">
           <!-- <c:CORE_LA_Feedback ></c:CORE_LA_Feedback> -->
        </div>
    </aura:if>
    <!-- Feedback Popup -->
    
</aura:component>