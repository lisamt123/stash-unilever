<aura:component controller="CORE_Feedback_App_Controller">
    <aura:attribute name="pannelType" type="String"/>
    <aura:attribute name="campaignsListPannel" type="Boolean"/>
    <aura:attribute name="ideasListPannel" type="Boolean"/>
    <aura:attribute name="myUpdatesPannel" type="Boolean"/>
    <aura:handler name="init" value="{!this}" action="{!c.updatePanel}" />
    <style>
    @media screen and (min-width:1024px) and (max-width:1700px){ 
    .loadMoreButton {
        margin-top: 10px;
    }
    }
        </style>
	<div class="fixedNavbar">
    	<table class="homePageMenuWidth">             
             <tr class="alignCenter">                  
                 <td class="alignCenter threeColmnWidth">
                     <div class="slds-text-heading--label" onclick="{!c.campaignsListDisplay}" aura:id="campaignsListPannel">CAMPAIGNS</div>                      
                 </td>
                 <td class="alignCenter threeColmnWidth">
                     <div class="slds-text-heading--label" onclick="{!c.ideasListDisplay}" aura:id="ideasListPannel">IDEAS</div>                     
                 </td>
                 <td class="alignCenter threeColmnWidth">
                     <div class="slds-text-heading--label" onclick="{!c.myUpdatesDisplay}" aura:id="myUpdatesPannel">MY UPDATES</div>                     
                 </td>                     
             </tr>                 
         </table>    
    </div>  
   
    <div class="pageSection"> 
        <aura:if isTrue="{!v.campaignsListPannel}">
            <c:CORE_IC_CampaignsList pannelType="{!v.pannelType}"/>
        </aura:if> 
        <aura:if isTrue="{!v.ideasListPannel}">
            <c:CORE_IC_IdeasList pannelType="{!v.pannelType}"/> 
        </aura:if> 
        <aura:if isTrue="{!v.myUpdatesPannel}">
            <c:CORE_IC_MyUpdatesList pannelType="{!v.pannelType}"/>
        </aura:if> 
    </div>
  
</aura:component>