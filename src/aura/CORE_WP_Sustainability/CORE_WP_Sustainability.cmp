                    <td><div id="firstMonthPannel" class="chartBar"></div></td>
                    <td>{!v.sustainabilityDetail.firstMonthValue}</td>
                </tr>
                <tr>
                	<td class="firstColumn">{!v.sustainabilityDetail.secondMonthLabel}</td>
                    <td style="width:50%"><div id="secondMonthPannel" class="chartBar"></div></td>
                    <td>{!v.sustainabilityDetail.secondMonthValue}</td>
