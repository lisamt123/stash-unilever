<aura:component controller="Core_IC_IdeaController" >        
 	<aura:attribute name="pannelType" type="String"/>
	<aura:attribute name="articleId" type="String"/>    
    <aura:attribute name="leader" type="Core_CA_BaseApplicationWrapper"/>
    <style>
        .leaderBoardBar{
        	display: inline-flex;
		}
        .leftSpaceing{
        	padding-left: 5px;
        }
        .tilePaddingTitle {
            display: block;
            padding-top: 8px;
        }
        .user {
            margin-top: -20px;
            margin-bottom: 12px;
        }
        .voteSection {
            background-color: #061c3f;
            color: #fff;
            border-color: #061c3f;
            border-radius: 15rem;
            height: 25px;
            font-size: .625rem;
            width: 80px;
            position: absolute;
            right: 5px;
            padding: 5px;
            padding-left: 10px;
        }
    </style>
    <div class="leaderBoardBar">
        <div class="leftSpaceing">
            <span class="slds-avatar slds-avatar--circle slds-avatar--small avatarIcon">
                <img class="userImage" src="{!v.leader.BackgroundImage}"  alt="Person"/>
            </span>
        </div>
        <div class="tilePaddingTitle leftSpaceing">
            <h2 class="slds-text-body--regular" onclick="{!c.gotoIdeaDetail}" style="margin-top: -14px"><a> {!v.leader.IdeaTitle}</a></h2><br/>
            <p class="slds-truncate user">by {!v.leader.CreatorName}</p>
        </div>
        <div class="voteSection">
        	<img class="mediumImageHeight" src="/resource/CORE_IC_IdeasLigthtning/img/like_white.svg"/>&nbsp;{!v.leader.VoteCount} VOTES
        </div>
    </div>
    <hr/>
    
</aura:component>