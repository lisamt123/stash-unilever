<aura:component controller="MB_Controller_Charts">
    <ltng:require styles="/resource/EA_StaticResource/slick/slick.css,/resource/EA_StaticResource/slick/slick-theme.css"
                  scripts="/resource/charts/jquery-1.11.1.min.js,/resource/charts/canvasjs-1.8.0/jquery.canvasjs.min.js,
                           /resource/EA_StaticResource/slick/slick.min.js"  afterScriptsLoaded="{!c.doinit}"/>
    <ltng:require styles="/resource/EA_StaticResource/assets/fonts" />
    <aura:attribute name="DataYou" type="Decimal"></aura:attribute>
    <aura:attribute name="DataColleagues" type="Decimal"></aura:attribute>
    <aura:attribute name="CallsYou" type="Decimal"></aura:attribute>
    <aura:attribute name="CallsColleagues" type="Decimal"></aura:attribute>
    <aura:attribute name="SMSYou" type="Decimal"></aura:attribute>
    <aura:attribute name="SMSColleagues" type="Decimal"></aura:attribute>
    <aura:attribute name="iPassYou" type="Decimal"></aura:attribute>
    <aura:attribute name="iPassColleagues" type="Decimal"></aura:attribute>
    <aura:attribute name="deviceName" type="String"/>
    <aura:attribute name="CurrentMonth" type="String"/>
    <aura:attribute name="deviceId" type="String"/>
    <style>
    .Insights{ 
            background: #fff;
            padding: 15px 25px; 
            width: 93%;
            margin: 0 auto;
        	border-radius: 6px;
    }
        .slick-dots {
        	left: -18px;
        	bottom: -30px;
        }
    </style>
    <div class="Insights">
        <div class="slds-text-body--regular">
            <div class="slds-text-body--regular">Total data usage compared with your colleagues</div><br/>
            <div>
                <span class="bar_chart">Yours</span>
                <div class="linechart">
                    <span class="line_bar_data"></span>
                </div>
                <span>{!v.DataYou} MB</span>
            </div><br/>
            <div>
                <span class="bar_chart">Avg</span>
                <div  class="linechart">
                    <span class="line_bars_data"></span>
                </div >
                <span>{!v.DataColleagues} MB</span>
            </div> 
        </div>
         <div class="slds-text-body--regular">
            <div class="slds-text-body--regular">Total Calls usage compared with your colleagues</div><br/>
            <div>
                <span class="bar_chart">Yours</span>
                <div class="linechart">
                    <span class="line_bar_calls"></span>
                </div>
                <span>{!v.CallsYou} Mins</span>
            </div><br/>
            <div>
                <span class="bar_chart">Avg</span>
                <div  class="linechart">
                    <span class="line_bars_calls"></span>
                </div >
                <span>{!v.CallsColleagues} Mins</span>
            </div> 
        </div>
         <div class="slds-text-body--regular">
            <div class="slds-text-body--regular">Total Message usage compared with your colleagues</div><br/>
            <div>
                <span class="bar_chart">Yours.</span>
                <div class="linechart">
                    <span class="line_bar_SMS"></span>
                </div>
                <span>{!v.SMSYou}</span>
            </div><br/>
            <div>
                <span class="bar_chart">Avg</span>
                <div  class="linechart">
                    <span class="line_bars_SMS"></span>
                </div >
                <span>{!v.SMSColleagues}</span>
            </div> 
        </div>
         <div class="slds-text-body--regular">
            <div class="slds-text-body--regular">Total iPass usage compared with your colleagues</div><br/>
            <div>
                <span class="bar_chart">Yours</span>
                <div class="linechart">
                    <span class="line_bar_iPass"></span>
                </div>
                <span>{!v.iPassYou} MB</span>
            </div><br/>
            <div>
                <span class="bar_chart">Avg</span>
                <div  class="linechart">
                    <span class="line_bars_iPass"></span>
                </div >
                <span>{!v.iPassColleagues} MB</span>
            </div> 
        </div>
    </div>
</aura:component>