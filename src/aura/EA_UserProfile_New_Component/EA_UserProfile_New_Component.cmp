<aura:component controller="EA_ControllerClass">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> 
    <aura:attribute name="userDetail" type="EA_Wrapper_Class.EA_UserProfile_Wrapper"/>
    <aura:attribute name="CurrentPoints" type="String"/>
    <aura:attribute name="NewBee" type="String"/>
    <aura:attribute name="Bronze" type="String"/>
    <aura:attribute name="Silver" type="String"/>
    <aura:attribute name="Gold" type="String"/>
    <!-- REQUIRED SLDS WRAPPER -->
    <div class="slds">    
        <div class="dashboard">
            <div aura:id="dash" class="slds-text-heading--medium dashTitle dashTitle">Dashboard</div>
            <div class="slds-box box-dashboard">
                <div class="Profile_Pic_Pints">
                    <aura:iteration items="{!v.userDetail}" var="user">
                        <img  class="home_user_img" id="home_user_img" src="{!user.userPhotoUrl}" ></img> 
                        
                    </aura:iteration>
                    <div class="new"><img src="/resource/EA_StaticResource/images/icon-score-bg.png"></img><span class="currentpoints" id="currentpoints">{!v.CurrentPoints}</span></div>
                </div>
                <div class="points">
                    <div class="point-1" id="point-1">{!v.NewBee}</div>
                    <div class="point-2" id="point-2">{!v.Bronze}</div>
                    <div class="point-3" id="point-3">{!v.Silver}</div>
                    <div class="point-4" id="point-4">{!v.Gold}</div>
                </div>
                <div class="Main_Progress">                    
                    <div class="Defaultprogressbar"></div>
                    <div class="progressbar"></div>
                </div>
                <div class="points-icon">
                    <div class="points-icon-1">
                        <img src="/resource/EA_StaticResource/images/icon-newbee.png"></img>
                    </div>
                    <div class="points-icon-2">
                        <img id="bronze_inactive" src="/resource/EA_StaticResource/images/icon-bronze-inactive.png"></img>
                        <!--<img id="bronze_active" src="/resource/EA_StaticResource/images/icon_bronge.png"></img>-->
                    </div>
                    <div class="points-icon-3">
                        <img id="siver_inactive" src="/resource/EA_StaticResource/images/icon-silver-inactive.png"></img>
                        <!--<img id="silver_active" src="/resource/EA_StaticResource/images/icon_silver.png"></img>-->
                    </div>
                    <div class="points-icon-4">
                        <img id="gold_inactive" src="/resource/EA_StaticResource/images/icon-gold-inactive.png"></img>
                        <!--<img id="gold_active" src="/resource/EA_StaticResource/images/icon_gold.png"></img>-->
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</aura:component>