<aura:component controller="EA_ControllerClass">
    <aura:attribute name="userDetail" type="EA_Wrapper_Class.EA_UserProfile_Wrapper"/>
    <aura:attribute name="badgeTo" type="String" default=""></aura:attribute>
    <aura:attribute name="actualpointsNewbee" type="String" default=""></aura:attribute>
    <aura:attribute name="actualpointsBronze" type="String" default=""></aura:attribute>
    <aura:attribute name="actualpointsSilver" type="String" default=""></aura:attribute>
    <aura:attribute name="actualpointsGold"   type="String" default=""></aura:attribute>
    <aura:attribute name="showpointsN"   type="boolean" default="false"></aura:attribute>
    <aura:attribute name="ShowNextPointKey"   type="boolean" default="true"></aura:attribute>
    <aura:attribute name="netpoints" type="String" default=""></aura:attribute>
    <aura:attribute name="newbee2" type="boolean" default="false"></aura:attribute>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="NewBee_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Bronze_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Silver_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Gold_badge" type="boolean" default="false"></aura:attribute>
    <ltng:require styles="/resource/EA_StaticResource/assets/styles/salesforce-lightning-design-system-vf.css" />
    <aura:attribute name="newbee0" type="boolean" default="false" /> 
    <aura:attribute name="newbee1" type="boolean" default="false" />
    <aura:attribute name="silver3" type="boolean" default="false" />
    <aura:attribute name="bronze0" type="boolean" default="false" />
    <aura:attribute name="bronze1" type="boolean" default="false" />
    <aura:attribute name="bronze3" type="boolean" default="false" />
    <aura:attribute name="silver4" type="boolean" default="false" />
    <aura:attribute name="silver0" type="boolean" default="false" />
    <aura:attribute name="silver2" type="boolean" default="false" />
    <aura:attribute name="silver1" type="boolean" default="false" />
    <aura:attribute name="gold" type="boolean" default="false" />
    <aura:attribute name="bronze2" type="boolean" default="false" />
    <aura:attribute name="newbee_img_pos" type="boolean" default="true" />
    <aura:attribute name="bronze_img_pos" type="boolean" default="false" />
    <aura:attribute name="silver_img_pos" type="boolean" default="false" />
    <aura:attribute name="gold_img_pos" type="boolean" default="false" />
    <!-- style -->
    <style>
        .spacer-pull-to-load-more{
        height:100% !important;
        }
        
        .slds .slds-tabs--scoped__nav a {
        color: white;
        
        
        }
        .slds .slds-tabs--scoped__nav {
        background-color: #005FB2;
        
        }
        .progress_bar img  {
        
        width: 280px;
        }
        .slds .slds-tabs--scoped {
        border: solid;
        border-color: #005FB2;
        }
        .slds .slds-tabs--scoped__nav .slds-tabs__item + .slds-tabs__item {
        margin-left: 22px;
        }
        .slds .slds-tabs--scoped__nav .slds-tabs__item a {
        line-height: 53px;
        }
        .slds .slds-text-body--regular {
        font-size: 14px;
        margin-top: 50px;
        padding-bottom: 20px;
        font-family: sans-serif;
        font-style: inherit;
        color: black;
        margin-left: 20px;
        }
        .space_below{
        margin-top: 50px;
        }
        .slds .slds-box {
        padding:10px 0px;
        border-radius: 4px;
        background-clip: padding-box;
        border: 1px solid #d8dde6;
        width: 94%;
        height: 230px;
        margin:5px auto;
        }
        .slds-box .line{
        height:20px;
        }
        .solid1.active,.solid2.active,.solid.active{
        border-color:green;
        } 
        .progress_bar p.brVal,p.brval {
        font-size: 10px;
        padding: 5px 4px;
        }
        .active p.brval ,.progress_bar .active p.brVal{
        padding: 4px 5px;
        font-size: 15px;
        color: #fff;
        }
        .cEverydayActivity_Detailcard_component .section.cEverydayAction_Activity_Detail {
        padding: 0 24px 24px;
        }
        .profile_Image {
        width: 60px;
        height: 60px;
        }
        .newbee0>span,.newbee1>span,.bronze0>span,.bronze1>span,.silver0>span,.silver1>span,.gold>span{   
        padding: 9px;
        margin-right: 4rem;
        border-radius: 3rem;
        background:#fff;
        font-size: 1.4rem;
        }
        .newbee00{
        background:#4BC076 !important;  
        color:#fff;
        }
        .bronze00{
        background:#A03030 !important;    
        color:#fff;
        }
        .silver00{
        background:#D3CEC8 !important;  
        color:#fff;
        }
        .gold00{
        background:#E0BA22 !important;
        color:#fff;
        }
        .progress_line {
        background: #fff;
        width: 20rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -13px;
        }
        .progress_line_newbee01{
        background: #4BC076;
        width:3rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }    
        .progress_line_newbee02{
        background: #4BC076;
        width:4rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }          
        .progress_line_bronze00{
        background: #A03030;
        width: 6rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }
        .progress_line_bronze01{
        background: #A03030;
        width: 9.4rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }
        .progress_line_bronze02{
        background: #A03030;
        width:10.4rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }
        .progress_line_bronze03{
        background: #A03030;
        width: 11.4rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }
        .progress_line_silver00{
        background: #D3CEC8;
        width: 14rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }
        .progress_line_silver01{
        background: #D3CEC8;
        width: 15.5rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        } 
        .progress_line_silver02{
        background: #D3CEC8;
        width: 16.5rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }  
        .progress_line_silver03{
        background: #D3CEC8;
        width: 17.5rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }     
        .progress_line_silver04{
        background: #D3CEC8;
        width: 18.5rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }          
        .progress_line_gold{
        background: #E0BA22;
        width: 20rem;
        height: 8px;
        margin-left: 24px;
        margin-top: -8px;
        }    
        .newbee01{
        padding: 6px !important;
        }
        body{background:#eee;} 
        .progress_main{
        
        height: 62px;
        width:274px;
        padding: 22px 7px;
        margin: 0 auto;  
        text-align:center;
        }   
        .newbee0 span:last-child {
        margin-right: 0;
        }
        .text-div span:nth-child(1){
        margin-right:3rem;
        font-size: 11px;
        }
        .text-div span:nth-child(2){
        margin-right:4rem;
        font-size: 11px;
        }
        .text-div span:nth-child(3){
        margin-right:5.5rem;
        font-size: 11px;
        }
        .text-div span:nth-child(4){
        margin-right:4rem;
        font-size: 11px;
        }
        .text-div{
        margin-top: 20px;
        margin-left: -5px;
        }
    </style>
    <!-- style -->
    <!-- REQUIRED SLDS WRAPPER -->
    <div class="slds">    
        <div class="dashboard">
            
            <div aura:id="dash" class="dashTitle">My Dashboard</div>
            
            
            <div class="slds-box">
                <aura:if isTrue="{!v.showpointsN}">
                    <div style="font-size:12px;padding-left: 12px;">
                        
                        <aura:if isTrue="{!v.ShowNextPointKey}">
                            You are {!v.netpoints} points away from {!v.badgeTo}
                        </aura:if>
                    </div>
                </aura:if>
                
                <br></br>
                
                
                <div class="main_image_content">
                    <aura:iteration items="{!v.userDetail}" var="user">
                        <div class="main_badge">
                            
                            <aura:if isTrue="{!v.newbee_img_pos}">
                                <div class="main_badge_image main_badge_image_newbee_img_pos">       
                                    <span class="profile_Image" >
                                        
                                        <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                                    </span>
                                    <aura:if isTrue="{!v.NewBee_badge}"><img style="width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Bronze_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Silver_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Gold_badge}"><img 	style="width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>              
                                    
                                </div>
                                
                            </aura:if>       
                            
                            <aura:if isTrue="{!v.bronze_img_pos}">
                                <div class="main_badge_image main_badge_image_bronze_img_pos">       
                                    <span class="profile_Image" >
                                        
                                        <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                                    </span>
                                    <aura:if isTrue="{!v.NewBee_badge}"><img style="width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Bronze_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Silver_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Gold_badge}"><img 	style="width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>              
                                    
                                </div>
                                
                            </aura:if>       
                            <aura:if isTrue="{!v.silver_img_pos}">
                                <div class="main_badge_image main_badge_image_silver_img_pos">       
                                    <span class="profile_Image" >
                                        
                                        <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                                    </span>
                                    <aura:if isTrue="{!v.NewBee_badge}"><img style="width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Bronze_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Silver_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Gold_badge}"><img 	style="width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>              
                                    
                                </div>
                                
                            </aura:if>       
                            <aura:if isTrue="{!v.gold_img_pos}">
                                <div class="main_badge_image main_badge_image_gold_img_pos">       
                                    <span class="profile_Image" >
                                        
                                        <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                                    </span>
                                    <aura:if isTrue="{!v.NewBee_badge}"><img style="width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Bronze_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Silver_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
                                    <aura:if isTrue="{!v.Gold_badge}"><img 	style="width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>              
                                    
                                </div>
                                
                            </aura:if>       
                            
                            
                            
                        </div>
                    </aura:iteration>     
                    <!-- badge code -->
                    <div>
                        <div class="progress_main">  
                            
                            <aura:if isTrue="{!v.newbee0}">
                                
                                <div class="newbee0"><span class="newbee00">{!v.actualpointsNewbee}</span><span class="newbee01">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_newbee00"></div>
                                
                            </aura:if>
                            
                            <aura:if isTrue="{!v.newbee1}">
                                
                                <div class="newbee1"><span class="newbee00">{!v.actualpointsNewbee}</span ><span class="newbee01">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_newbee01"></div>
                            </aura:if>
                            <aura:if isTrue="{!v.newbee2}">
                                
                                <div class="newbee1"><span class="newbee00">{!v.actualpointsNewbee}</span ><span class="newbee01">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_newbee02"></div>
                                
                            </aura:if>
                            
                            <aura:if isTrue="{!v.bronze0}">
                                
                                <div class="bronze0"><span class="bronze00 newbee01">{!v.actualpointsNewbee}</span><span class="bronze00">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_bronze00"></div>
                                
                            </aura:if>
                            
                            <aura:if isTrue="{!v.bronze1}">
                                
                                <div class="bronze1"><span class="bronze00 newbee01">{!v.actualpointsNewbee}</span><span class="bronze00">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_bronze01"></div>
                                
                            </aura:if>
                            <aura:if isTrue="{!v.bronze2}">
                                
                                <div class="bronze1"><span class="bronze00 newbee01">{!v.actualpointsNewbee}</span><span class="bronze00">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_bronze02"></div>
                                
                            </aura:if>
                            <aura:if isTrue="{!v.bronze3}">
                                
                                <div class="bronze1"><span class="bronze00 newbee01">{!v.actualpointsNewbee}</span><span class="bronze00">{!v.actualpointsBronze}</span><span class="newbee01">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_bronze03"></div>
                                
                            </aura:if>
                            <aura:if isTrue="{!v.silver0}">
                                
                                <div class="silver0"><span class="silver00 newbee01">{!v.actualpointsNewbee}</span><span class="silver00 newbee01">{!v.actualpointsBronze}</span><span class="silver00">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_silver00"></div>
                                
                            </aura:if>
                            
                            <aura:if isTrue="{!v.silver1}">
                                
                                <div class="silver1"><span class="silver00 newbee01">{!v.actualpointsNewbee}</span><span class="silver00 newbee01">{!v.actualpointsBronze}</span><span class="silver00">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_silver01"></div>
                                
                            </aura:if>
                            <aura:if isTrue="{!v.silver2}">
                                
                                <div class="silver1"><span class="silver00 newbee01">{!v.actualpointsNewbee}</span><span class="silver00 newbee01">{!v.actualpointsBronze}</span><span class="silver00">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_silver02"></div>
                                
                            </aura:if>   
                            <aura:if isTrue="{!v.silver3}">
                                
                                <div class="silver1"><span class="silver00 newbee01">{!v.actualpointsNewbee}</span><span class="silver00 newbee01">{!v.actualpointsBronze}</span><span class="silver00">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_silver03"></div>
                                
                            </aura:if>
                            <aura:if isTrue="{!v.silver4}">
                                
                                <div class="silver1"><span class="silver00 newbee01">{!v.actualpointsNewbee}</span><span class="silver00 newbee01">{!v.actualpointsBronze}</span><span class="silver00">{!v.actualpointsSilver}</span><span class="newbee01">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_silver04"></div>
                                
                            </aura:if>    
                            <aura:if isTrue="{!v.gold}">
                                
                                <div class="gold"><span class="gold00 newbee01">{!v.actualpointsNewbee}</span ><span class="gold00 newbee01">{!v.actualpointsBronze}</span><span class="gold00 newbee01">{!v.actualpointsSilver}</span><span class="gold00">{!v.actualpointsGold}</span></div>
                                <div class="progress_line"></div> <div class="progress_line_gold"></div>
                                
                            </aura:if>
                            <div class="text-div slds-text-heading--small">
                                <span>Newbee</span>
                                <span>Bronze</span>
                                <span>Silver</span>
                                <span>Gold</span>
                            </div>         </div> </div>   
                </div>
            </div>
        </div>  
        <div class="actionTitle">My Actions</div>
        <div class="act_space"></div>
    </div>
</aura:component>