<aura:component controller="CORE_LA_Controller">
    <aura:attribute name="runningUserInfo" type="User" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="runningUserInfoId" type="String" />
    <style>
    .slds-tabs--default__link:focus {
    border-bottom-width: 2px !important;

     }
        .tabUi li {
    width: 100%;
    margin: 0 auto;
    text-align: left;
   
}
    </style>
  
    <div class="profile-div">
        <div class="trainer">
            <div class="trainer-photo" >
                <img src="{!v.runningUserInfo.MediumPhotoUrl}"></img>
            </div>
            <div class="trainer-detail">
                <p>
                    <span class="slds-text-heading--small">{!v.runningUserInfo.Name}</span><br></br>
                    <div class="slds-text-body--small">{!v.runningUserInfo.Title}</div>
                    <img class="icon-d" src="/resource/Lightning_designing_style/assets/icons/utility/checkin_60.png">
                    </img><span class="icon-font1 slds-text-color--weak">{!v.runningUserInfo.State},{!v.runningUserInfo.Country}</span></p>
                
                <img class="icon-d" src="/resource/Lightning_designing_style/assets/icons/utility/call_60.png">
                </img>
                <span class="icon-font icon-font1" id="mblToDial">{!v.runningUserInfo.MobilePhone}</span>
                <br/>
                <img class="icon-d" src="/resource/Lightning_designing_style/assets/icons/utility/email_60.png">
                </img>
                <span class="icon-font icon-font1" id="toMail">{!v.runningUserInfo.Email}</span>
                <br/>    
            </div>
        </div>
        <div class="about-me line-clamp icon-font1 slds-text-heading--regular">
         {!v.runningUserInfo.AboutMe}
		</div>
		<div>
        <button class="slds-bitton slds-button--neutral button1" onclick="{!c.runningUserStandardDetails}">Full Profile</button>
        </div>
        
    </div>
    
</aura:component>