<aura:component controller="Core_WP_WorkPlaceController" >	
    <!--Calling doInit method to get the default information on page load-->
    <aura:handler name="init" value="{!this}" action="{!c.getWorkplaceDetail}" />
    <aura:attribute name="workplaceLocationId" type="String"/>
    <aura:attribute name="workplaceLocationDetails" type="Workplace__c"/>
    <aura:attribute name="displayWorkplaceDetails" type="Boolean" default="true"/>
    <aura:attribute name="workplaceImage" type="String"/>
    
    <style>       
        .leaflet-control-attribution.leaflet-control {
            display: none;
        }        
    </style>    
    <aura:if isTrue="{!v.displayWorkplaceDetails}">        
        <div class="workplaceBannerPannel">
            <img src="{!v.workplaceImage}" class="workplaceBannerImage"/>
            <h3>Workplace</h3>
        </div>             
        <div class="allPadding">
            <div class="changeLocationBar">
                <div class="changeLocationPlace">{!v.workplaceLocationDetails.Name}</div>
                <div class="changeLocationButton" onclick="{!c.gotoChangeLocation}"><b>></b> Change Location </div>
            </div>
        </div>
        <div>            
            <div class="menuSectionBar">
                <div class="menuSectionIcon" onclick="{!c.gotoWorkplaceChatter}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/workplaceIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Workplace group </div>
                </div>
                <div class="menuSectionSeperator"></div>
                <div class="menuSectionIcon" onclick="{!c.gotoKeyContacts}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/KeyContactsIcon.svg" class="menuIcons"/>  
                    <div class="menuText"> Key-contacts </div>
                </div>
            </div>
            <div class="menuSectionBar">
                 <div class="menuSectionIcon" onclick="{!c.gotoLocalGroups}">
                     <img src="/resource/CORE_WP_WorkplaceStyles/Icons/groups.svg" class="menuIcons"/> 
                     <div class="menuText"> Local groups </div>
                 </div>
                <div class="menuSectionSeperator"></div>
                <div class="menuSectionIcon" onclick="{!c.gotoDepartmentsByFloor}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/DepartmentsByFloorIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Departments by floor </div>
                </div>
            </div>
            <div class="menuSectionBar">
                <div class="menuSectionIcon" onclick="{!c.gotoSustainability}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/SustainabilityIcon1.svg" class="menuIcons"/> 
                    <div class="menuText"> Sustainability </div>
                </div>
                <div class="menuSectionSeperator"></div>
                <div class="menuSectionIcon" onclick="{!c.gotoHealthAndSafety}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/HealthandSafetyIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Health &amp; Safety </div>
                </div>
            </div>
            <div class="menuSectionBar">
                <div class="menuSectionIcon" onclick="{!c.gotoGymSchedule}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/GymScheduleIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Gym-schedule </div>
                </div>                
                <div class="menuSectionSeperator"></div>
                <div class="menuSectionIcon" onclick="{!c.gotoCafeteriaMenu}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/CafeteriaMenuIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Cafeteria menu </div>
                </div>
            </div>
            <div class="menuSectionBar">
                <div class="menuSectionIcon" onclick="{!c.gotoShopTimings}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/ShopTimingsIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Shop-timings </div>
                </div>
                <div class="menuSectionSeperator"></div>
                <div class="menuSectionIcon" onclick="{!c.gotoTransport}">
                    <img src="/resource/CORE_WP_WorkplaceStyles/Icons/TransportIcon.svg" class="menuIcons"/> 
                    <div class="menuText"> Transport </div>
                </div>
            </div>
        </div>
        <div class="allPadding addressText largePadding">   
            ADDRESS<br/>
        	<aura:unescapedHtml value="{!v.workplaceLocationDetails.Address__c}"/>
        </div>
        <div class="map" id="map"></div>
        
        <aura:set attribute="else">
        	Please Refresh The App And Try Again...
        </aura:set>
    </aura:if>
</aura:component>