<aura:component controller="Core_WP_WorkPlaceController" implements="force:appHostable,flexipage:availableForAllPageTypes">
    <ltng:require styles="/resource/CORE_WP_WorkplaceStyles/mapJs/leaflet.css" />      
    <!--  ,/resource/CORE_NC_JsFiles/lightningBootstrapMin.css-->
    <ltng:require scripts="/resource/CORE_WP_WorkplaceStyles/mapJs/leaflet.js" 
                  styles="/resource/CORE_NC_JsFiles/lightningBootStrap.css"                  
                  afterScriptsLoaded="{!c.getWorkplaceLocationId}"/>    
    <aura:handler event="c:CORE_WP_WorkplaceEvent" action="{!c.navigateWithinComponent}" />
    <!--Applying background color for the base page-->
    <style>
        body {
        	background: #F5F6F7 !important;  
        }
    </style> 
    <div class="container">
        <div id="list" class="row">  
            <div aura:id="WorkplacePannel"></div>
        </div>
    </div>
</aura:component>