<aura:component >
    <aura:attribute name="activeTopic" type="Boolean"/>
    <aura:attribute name="topicName" type="String"/>
    <aura:if isTrue="{!v.activeTopic}">
        <div class="activeFilterOption"> {!v.topicName}</div>
        <aura:set attribute="else">
            <div class="inactiveFilterOption" onclick="{!c.sendSelectedTopic}"> {!v.topicName}</div>
        </aura:set>
    </aura:if>
</aura:component>