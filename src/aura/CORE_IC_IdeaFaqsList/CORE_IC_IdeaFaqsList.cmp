<aura:component >
        
     <aura:attribute name="faqListItem" type="Core_CA_BaseApplicationWrapper"/>
     <aura:attribute name="showDiv" type="boolean" default="false"/> 
         <div class="itemPanel" > 
                <div id="clicker" class="slds-text-body--regular title" onclick="{!c.showDiv}">
                         {!v.faqListItem.Question} 
                    <img class="backImageStyle" aura:id="myimg" src="/resource/CORE_IC_IdeasLigthtning/utility/downFaq.svg"/> 
                    <img class="backImageStyle toggle " aura:id="myimg2" src="/resource/CORE_IC_IdeasLigthtning/utility/upFaq.svg" /> 
                 </div>
             <aura:if isTrue="{!v.showDiv}">
                    <div   aura:id="text" class="slds-text-body--regular bodyText " >
                          {!v.faqListItem.Answer} 
                   </div>
             </aura:if>
            <hr></hr>
         </div>
        
     </aura:component>