<aura:component controller="EA_ControllerClass" > 
    <aura:attribute name="activityRating" type="Map"/> 
    <aura:attribute name="EAactivityid" type="String"/>
    <aura:attribute name="rating_value" type="Map"/>
    <aura:attribute name="booleanValue" type="List"/>
    <aura:attribute name="check_image" type="Boolean" default="false"/>
    <aura:attribute name="activity" type="EA_Wrapper_Class.EA_RecentlyCompletedUsers"/>
    <aura:attribute name="showcontent" type="boolean" default="true"/>
    <aura:attribute name="index" type="Integer" />
    <aura:attribute name="pageIndex" type="Integer" />
    <aura:attribute name="themeColors" type="Map"/>
    <aura:attribute name="themecolor" type="String" />
    <aura:attribute name="themerecordtype" type="String" default="{!v.activity.themeName}"/>
    <aura:attribute name="numbers" type="integer[]"/>
    <aura:attribute name="remain" type="integer[]" default="[]"/>
    <aura:attribute name="showdetail" type="boolean" default="true"/>
    <aura:attribute name="showchatter" type="boolean" default="false"/>
    <aura:attribute name="showfeedback" type="boolean" default="false"/>
    <aura:attribute name="showtodoactpage" type="boolean" default="false"/>
    <aura:attribute name="themeName" type="boolean" default="true"/>
    <aura:attribute name="showswipecard" type="boolean" default="true"/>
    <aura:attribute name="detailPage" type="boolean" default="false"/>
    <aura:attribute name="ActivityDesc" type="string" default=""/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds">
        <div  style="margin-top:12px;">
            <div onclick="{!c.callShowDetailCard}" >
                <div class="container">
                    <c:EA_ActivityHeader_Common themeName="{!v.activity.themeName}" themeColors="{!v.themecolor}"
                                                activityName="{!v.activity.activityName}"  check_image="{!v.check_image}"  
                                                activityRating="{!v.rating_value}"  numbers="{!v.numbers}" remain="{!v.remain}"/>
                    <div class="section">
                        <c:EA_Activity_Completion_Detail minutestoComplete="{!v.activity.minutestoComplete}"  peopleRequired="{!v.activity.peopleRequired}" activityPoints="{!v.activity.activityPoints}"/>
                        <div style="margin-left:5px;">
                            <p class="desc slds-text-body--regular" >
                                <ui:outputText value="{!v.ActivityDesc}"/>
                            </p>
                            <span class="slds-text-heading--regular see_more" onclick="{!c.callShowDetailCard}" >
                                See more...
                            </span>
                        </div>
                        <div style="margin-left:5px;height:72px;margin-top: 10px;">
                            <p class="slds-text-heading--label recent">Recently completed by</p>
                            <div>
                                <c:ImageComponent recentactivityid="{!v.activity.Id}" recentUsers="{!v.activity.userPhotoUrl1}"/>
                            </div>
                        </div>
                        <c:EA_Footer_Common activity="{!v.activity.activityId}" themeColors="{!v.themecolor}" pagename="swipe" index="{!v.index}" pageIndex="{!v.pageIndex}"/>
                    </div>   
                </div> 
            </div>  
            <aura:if isTrue="{!v.showtodoactpage}">
                <c:EA_ToDoActivityPage activityId="{!v.activity.activityId}" themeColors="{!v.themeColors}"></c:EA_ToDoActivityPage>
            </aura:if>
        </div>
    </div>
</aura:component>