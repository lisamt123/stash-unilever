<aura:component >
    <aura:attribute name="inventory" type="ICB_Wrapper_Cockpit_CC"  description="inventory Item" />
    <aura:attribute name="contact" type="ICB_Wrapper_Cockpit_CC"  description="contact Item" />
    <aura:attribute name="operation" type="String" default="open" description="type operation" />
    
        <td>
            <img  src="{!$Resource.ICB_SLDS202_CSS +'/assets/images/'+v.inventory.invetoryItem.ICB_Product__r.Product_Image__c}" class="Image" />
        </td>
        <td>
            <ui:outputText value="{!v.inventory.invetoryItem.ICB_Product__r.Name}" />
        </td>
        <td class="colum-padding BorderWhite">
        </td>
        <td class="colum-padding BorderWhite"></td>
        
        <td>
            <div class="slds-grid slds-grid--pull-padded Align" >
                <aura:if isTrue="{!v.contact.oppItem.StageName == 'Available' || v.contact.oppItem == null}">
                    <div  class="slds-truncate ButtonInventory" data-record="{!index}" onclick="{!c.decrementValue}">
                        <ui:button >
                            <img src="{!$Resource.ICB_SLDS202_CSS +'/assets/icons/utility/dash_60.png'}"  class="buttons-left" />
                        </ui:button>
                    </div>
                </aura:if>
                <div> &nbsp;&nbsp;</div>
                <div align="center" class="border-div" data-label="{!$Label.c.ICB_ENTRY}">
                    <!--<aura:renderIf isTrue="{!wrapper.oppItem.StageName == 'Available' || wrapper.oppItem == null}">-->
                    <br /><ui:outputNumber class="input-size" aura:id="QuantityUnitIn" 
                                           value="{!v.inventory.quantity}"  />
                    <!--<aura:set attribute="else">
                                             <br /><ui:outputNumber class="input-size" aura:id="QuantityUnitOut" 
                                                            value="{!inventory.quantity}" />
                                            </aura:set>
                                        </aura:renderIf>-->
                 </div>
                <aura:if isTrue="{!v.contact.oppItem.StageName == 'Available' || v.contact.oppItem == null}">
                    <div  class="slds-truncate ButtonInventory" data-record="{!index}" onclick="{!c.incrementValue}">
                        <ui:button aura:id="pos" >
                            <img src="{!$Resource.ICB_SLDS202_CSS +'/assets/icons/utility/add_60.png'}"  class="buttons-left" />
                        </ui:button>
                    </div>
                </aura:if>
            </div>
        </td>
</aura:component>