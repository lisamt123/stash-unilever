}
img.user_badge.active {
    display: block;
}
 
  
    
</style>
  
    
 
  <div class="Container" style="background-color: white; height: 100%;">  
      
      <ul >
          <li class="slds-list__item">
              <aura:if isTrue="{!v.showbody}">
            
           <div class="regular_font" onclick="{!c.gotoDetail}"><ui:outputText value="{!v.activity.theme_name}"/></div>
              
             <div class="list_name" onclick="{!c.gotoDetail}"><ui:outputText value="{!v.activity.activity_name}"/></div>
              <aura:if isTrue="{!v.showfeedback}">
                  <div class="feedback" onclick="{!c.gotofeedback}"><img class="feed_img" src="/resource/EA_StaticResource/assets/images/feedback.svg" alt="person name"/>
				Provide Feedback</div>              </aura:if>
              <aura:if isTrue="{!v.showInvitation}">
                   <div class="invitation" onclick="{!c.gotoInvitation}"><img class="inv_img" src="/resource/EA_StaticResource/assets/images/preview.svg" alt="person name" onclick="{!c.gotoDetail}"/>
					View Invitatation</div>
              </aura:if>
            <span class="right_arrow_img">
              <img class="right_arrow" src="/resource/EA_StaticResource/assets/images/chevronright_60.png" alt="person name" onclick="{!c.gotoDetail}"/>
            </span>
                  </aura:if> 
		</li>
          </ul>
      <div class="divider"></div>
    
        </div>
   
      

</aura:component>