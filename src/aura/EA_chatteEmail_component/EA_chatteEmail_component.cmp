<aura:component controller="EA_ControllerClass">
   
    <aura:attribute name="activityDetail" type="Everyday_Activity__c"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
     <aura:attribute name="activityId" type="String"/>
    <aura:attribute name="MailToBody" type="String" default="https://unilever--chazwa.lightning.force.com/c/EverydayAction_App.app"/>
    <aura:attribute name="MailSubject" type="String"/>
    <ltng:require styles="/resource/EA_StaticResource/css/bootstrap.3.3.css" />
    
    <ltng:require styles="/resource/EA_StaticResource/css/bootstrap.3.3.css" />
    
    <ltng:require styles="/resource/EA_StaticResource/assets/styles/salesforce-lightning-design-system-vf.css" />
 <ltng:require styles="/resource/EA_StaticResource/slick/slick.css,/resource/EA_StaticResource/slick/slick-theme.css"	
                   scripts="/resource/EA_StaticResource/jquery/jquery.js,/resource/EA_StaticResource/slick/slick.min.js"/>
     <style>
         .slds .slds-modal {
         position:relative;
         }
.slds .slds-fade-in-open {
  background-color: black;
  opacity: 0.5;
  visibility: visible;
  -webkit-transition: opacity 0.1s linear;
  transition: opacity 0.1s linear;

}
    </style>
    
    <div class="slds">
      <div aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open">
    <div class="slds-modal__container">
        <div class="chat_btn">
        <div><button  class="chatter" onclick="{!c.chatterfeeditem1}"> Chatter</button></div>
          <div class="divider"></div>
        <div><button  class="email"> <a  href="{!'mailto:?subject='+v.MailSubject+'&amp;body='+v.MailToBody}" style="color: #344A5F" >
                         <div class="anchor" >Email</div>
                     </a></button></div>
          <div><button  onclick="{!c.cancelShare}" class="cancel">Cancel</button></div>  
        </div>
    
    </div>
        </div>
    </div>
    
    
</aura:component>