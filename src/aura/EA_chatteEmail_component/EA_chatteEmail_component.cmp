<aura:component controller="EA_ControllerClass">
    <aura:attribute name="activityDetail" type="Everyday_Activity__c"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> 
    <aura:attribute name="activityId" type="String"/>
    <aura:attribute name="MailToBody1" type="String" />
    <aura:attribute name="MailToBody2" type="String" />
    <aura:attribute name="MailToBody4" type="String" />
    <aura:attribute name="MailSubject" type="String"/>
    <aura:attribute name="pagename" type="String" />
    <aura:attribute name="index" type="integer"/>
    <aura:attribute name="pageIndex" type="Integer" />
   <!-- <aura:attribute name="showspinner" type="Boolean" default="true"/>-->
    <aura:attribute name="showData" type="Boolean" default="false"/>
 
        <div class="slds">
            <div aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open" >
                <div class="slds-modal__container">
                    <div class="chat_btn">
                        <div>
                            <button  class="slds-button--neutral Chatter slds-button--brand" onclick="{!c.chatterfeeditem1}"> Chatter</button>
                        </div>
                        <div>
                            <button  class="slds-button--neutral email slds-button--brand" onclick="{!c.gotoDetail}">
                                <a href="{!'mailto:?subject='+v.MailSubject+'&amp;body='+v.MailToBody1+'%20%22'+v.activityDetail.Name+'%22%20'+v.MailToBody2+'%20'+v.MailToBody4}" style="color: white;text-decoration: none;" >
                                    <div>Email</div>
                                </a>
                            </button>
                        </div>
                        <div><button  onclick="{!c.cancelShare}" class="slds-button--neutral cancel">Cancel</button></div>  
                    </div>
                </div>
            </div>
        </div>
   </aura:component>