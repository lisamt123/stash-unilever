<aura:component implements="force:appHostable" controller="CORE_Feedback_App_Controller">
    <ltng:require styles="/resource/Lightning_designing_style/assets/styles/salesforce-lightning-design-system.min.css" />
    <ltng:require styles="/resource/Lightning_designing_style/assets/styles/salesforce-lightning-design-system-ltng.min.css" />
    <ltng:require styles="/resource/Feedback_App/assets/styles/star-css.css" />
    <ltng:require styles="/resource/Lightning_designing_style/assets/fonts/" />
    <ltng:require styles="/resource/Lightning_designing_style/assets/fonts/webfonts" />
    <aura:attribute name="success_toast" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Appname" type="string"></aura:attribute>
    <aura:attribute name="Pagename" type="string"></aura:attribute>
    <aura:attribute name="EventName" type="string"></aura:attribute>
    <aura:attribute name="tabName" type="string"></aura:attribute>
    <aura:attribute name="recordId" type="string"></aura:attribute>
    <!-- <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> -->
    <aura:attribute name="showdevices" type="boolean"></aura:attribute>
    <aura:attribute name="showError" type="boolean"></aura:attribute>
    <aura:attribute name="showspinner" type="boolean" default="false"/> 
    <aura:attribute name="showTranslation" type="boolean" default="false"/>
    <aura:attribute name="selectedMonth" type="string" />
    <style>
        body{
        	font: 100%/1.5 "Salesforce Sans",Arial,sans-serif !important;
        }
        ::-webkit-input-placeholder {
        	color: #A8B8D0;
        }
        
        :-moz-placeholder { /* Firefox 18- */
        	color: #A8B8D0;  
        }
        
        ::-moz-placeholder {  /* Firefox 19+ */
        	color: #CFDA8B8D07E6;  
        }
        
        :-ms-input-placeholder {  
        	color: #A8B8D0;  
        }
    </style>
    <div class="close-button" onclick="{!c.close}"><img src="/resource/Lightning_designing_style/assets/icons/utility/close_60.png"></img></div>
    <div class="feedback_container">
      <aura:if isTrue="{!v.showspinner}"><center><img class="spinner-img" src="/resource/Lightning_designing_style/assets/images/spinners/slds_spinner.gif"></img></center></aura:if> 
      <aura:if isTrue="{!v.showTranslation==true}">
    	<div class="slds-text-heading--small feedback-header">{!$Label.c.CORE_FB_App_Name}</div>
        <hr></hr>
     	<div class="slds-text-body--regular feedback-text">
           {!$Label.c.CORE_FB_MESSAGE}
            
        </div>
        <div class="feedback-rate">
        	<div class="slds-text-heading--small feedback-rate-text">{!$Label.c.CORE_FB_Rate_App}</div>
        	<div class="feedback-rate-star">
            <form id="ratingsForm">
                <div class="stars"> 
                    <input type="radio" name="star" class="star-1" id="star-1" value="1"/>
                    <label class="star-1" for="star-1">1</label>
                    <input type="radio" name="star" class="star-2" id="star-2" value="2" />
                    <label class="star-2" for="star-2">2</label>
                    <input type="radio" name="star" class="star-3" id="star-3" value="3" />
                    <label class="star-3" for="star-3">3</label>
                    <input type="radio" name="star" class="star-4" id="star-4" value="4" />
                    <label class="star-4" for="star-4">4</label>
                    <input type="radio" name="star" class="star-5" id="star-5" value="5" />
                    <label class="star-5" for="star-5">5</label>
                    <span></span>
                </div>              
            </form>
            </div>
        </div>
        
        <div class="feedback-comment">
        	<div class="slds-text-heading--small feedback-comment-text" style="margin-top:0px;">{!$Label.c.CORE_FB_Comment}</div>
            <div class="feedback-comment-textarea">
            	<div class="slds-form-element">
                    <div class="slds-form-element__control">
                      <textarea id="textarea-input-02" class="slds-textarea" placeholder="{!$Label.c.CORE_FB_Comment_Box}" ></textarea>
                    </div>
  				</div>
            </div> 
        </div>
        <hr></hr>
        <div class="feedback-buttons"  >
        	<button class="slds-button slds-button--neutral slds-not-selected" aria-live="assertive" onclick="{!c.rateLater}" >
    			<span class="slds-text-not-selected">
      				{!$Label.c.CORE_FB_Rate_Later}
                </span>
            </button>
            <div  style="float:right;">
                <button class="slds-button slds-button--brand slds-button--neutral slds-not-selected" aria-live="assertive" onclick="{!c.submitFeedback}">
                    <span class="slds-text-not-selected">
                       {!$Label.c.CORE_FB_Submit}
                    </span>
                </button>
            </div>
             <aura:if isTrue="{!v.success_toast}">
    <div >
    <div aria-hidden="false" role="dialog" class="slds-modal slds-modal--prompt slds-fade-in-open">
      <div class="slds-modal__container slds-modal--prompt">
          <div class="slds-box slds-theme--success">
            <p style="text-align:left;width:100%;">{!$Label.c.CORE_FB_Thanks} <a href=""><img style="float:right;width:8%;" src="/resource/Lightning_designing_style/assets/icons/utility/close.svg" onclick="{!c.close}"></img></a></p>
          </div>
      </div>
    </div>
    <div class="slds-backdrop slds-backdrop--open"></div>
  </div>
    </aura:if>
     <aura:if isTrue="{!v.showError}">
        <div>
    <div aria-hidden="false" role="dialog" class="slds-modal slds-modal--prompt slds-fade-in-open">
      <div class="slds-modal__container slds-modal--prompt">
        <div class="slds-modal__header slds-theme--error slds-theme--alert-texture">
          <button class="slds-button slds-button--icon-inverse slds-modal__close">
            <span class="slds-assistive-text">{!$Label.c.CORE_FB_Cancel}</span>
          </button>
          <h2 class="slds-text-heading--medium">{!$Label.c.CORE_FB_Error}</h2>
        </div>
        <div class="slds-modal__content slds-p-around--medium">
          <div>
            <p>{!$Label.c.CORE_FB_Error_Alert}</p>
          </div>
        </div>
        <div class="slds-modal__footer slds-theme--default">
          <button class="slds-button slds-button--neutral" onclick="{!c.closeError}">Okay</button>
        </div>
      </div>
    </div>
    <div class="slds-backdrop slds-backdrop--open"></div>
  </div>
    </aura:if>
        </div>
     </aura:if>
     
     <aura:if isTrue="{!v.showTranslation==false}">
    	<div class="slds-text-heading--small feedback-header">App Feedback </div>
        <hr></hr>
     	<div class="slds-text-body--regular feedback-text">
           Please rate and comment on your experience of using this app. 
            
        </div>
        <div class="feedback-rate">
        	<div class="slds-text-heading--small feedback-rate-text">Rate this app </div>
        	<div class="feedback-rate-star">
            <form id="ratingsForm">
                <div class="stars"> 
                    <input type="radio" name="star" class="star-1" id="star-1" value="1"/>
                    <label class="star-1" for="star-1">1</label>
                    <input type="radio" name="star" class="star-2" id="star-2" value="2" />
                    <label class="star-2" for="star-2">2</label>
                    <input type="radio" name="star" class="star-3" id="star-3" value="3" />
                    <label class="star-3" for="star-3">3</label>
                    <input type="radio" name="star" class="star-4" id="star-4" value="4" />
                    <label class="star-4" for="star-4">4</label>
                    <input type="radio" name="star" class="star-5" id="star-5" value="5" />
                    <label class="star-5" for="star-5">5</label>
                    <span></span>
                </div>              
            </form>
            </div>
        </div>
        
        <div class="feedback-comment">
        	<div class="slds-text-heading--small feedback-comment-text" style="margin-top:0px;">Comment </div>
            <div class="feedback-comment-textarea">
            	<div class="slds-form-element">
                    <div class="slds-form-element__control">
                      <textarea id="textarea-input-02" class="slds-textarea" placeholder="Type your comments here, be as descriptive as you can be. was this app Easy, Fast, Intuitive? " ></textarea>
                    </div>
  				</div>
            </div> 
        </div>
        <hr></hr>
        <div class="feedback-buttons"  >
        	<button class="slds-button slds-button--neutral slds-not-selected" aria-live="assertive" onclick="{!c.rateLater}" >
    			<span class="slds-text-not-selected">
      				Rate Later 
                </span>
            </button>
            <div  style="float:right;">
                <button class="slds-button slds-button--brand slds-button--neutral slds-not-selected" aria-live="assertive" onclick="{!c.submitFeedback}">
                    <span class="slds-text-not-selected">
                       Submit 
                    </span>
                </button>
            </div>
             <aura:if isTrue="{!v.success_toast}">
    <div >
    <div aria-hidden="false" role="dialog" class="slds-modal slds-modal--prompt slds-fade-in-open">
      <div class="slds-modal__container slds-modal--prompt" onclick="{!c.close}">
          <div class="slds-box slds-theme--success">
            <p style="text-align:left;width:100%;">Thanks for the feedback<img style="float:right;width:8%;" src="/resource/Lightning_designing_style/assets/icons/utility/close.svg" ></img></p>
          </div>
      </div>
    </div>
    <div class="slds-backdrop slds-backdrop--open"></div>
  </div>
    </aura:if>
     <aura:if isTrue="{!v.showError}">
        <div>
    <div aria-hidden="false" role="dialog" class="slds-modal slds-modal--prompt slds-fade-in-open">
      <div class="slds-modal__container slds-modal--prompt">
        <div class="slds-modal__header slds-theme--error slds-theme--alert-texture">
          <button class="slds-button slds-button--icon-inverse slds-modal__close">
            <span class="slds-assistive-text">Close</span>
          </button>
          <h2 class="slds-text-heading--medium">Error</h2>
        </div>
        <div class="slds-modal__content slds-p-around--medium">
          <div>
            <p>Please rate the app to submit your feedback</p>
          </div>
        </div>
        <div class="slds-modal__footer slds-theme--default">
          <button class="slds-button slds-button--neutral" onclick="{!c.closeError}">Okay</button>
        </div>
      </div>
    </div>
    <div class="slds-backdrop slds-backdrop--open"></div>
  </div>
    </aura:if>
        </div>
     </aura:if>
      
        
    </div>
    
</aura:component>