<aura:component controller="MB_Controller_Charts" >
    <ltng:require styles="/resource/charts/slick/slick.css,/resource/charts/slick/slick-theme.css"
                  scripts="/resource/charts/jquery-1.11.1.min.js,/resource/charts/canvasjs-1.8.0/jquery.canvasjs.min.js,
                           /resource/charts/slick/slick.min.js"  afterScriptsLoaded="{!c.doinit}"/>
    
     <style>
        body{
            background:#D1D1D1; 
        }
        a.canvasjs-chart-credit,.canvasjs-chart-tooltip>div {
           display: none;
        }
        .canvasjs-chart-container,.canvasjs-chart-tooltip{
           position: initial !important;
        } 
         .main_carousel {
            border-radius: 5px;
        }	
    </style>
   <aura:attribute name="showspinner" type="boolean" default="true"/>
    <aura:attribute name="deviceName" type="String"/>
    <aura:attribute name="CurrentMonth" type="String"/>
    <aura:attribute name="deviceId" type="String"/>
    <aura:if isTrue="{!v.showspinner=='false'}">
    <div>
        <img class="back-button" src="/resource/Lightning_designing_style/assets/icons/utility/back_60.png" onclick="{!c.gotoDevices}"></img>
        <div class="sectiona_a">
            <div class="slds-text-heading--small head_c-1">{!v.deviceName}</div>
            <div class="head_d-1">
                <div>
                    <div><img class="icon-styles-1" src="/resource/TEM_icons/TEM_Icons/chart_60.png" /></div>
                    <div onclick="{!c.gotoDetailesText}"><img class="icon-styles-2" src="/resource/TEM_icons/TEM_Icons/list_60.png" /></div>
                </div>
            </div><div style="clear:both"></div>
        </div>
  <!-- code for pie charts -->
        <div class="slds-text-heading--small usage">
        Usage
        </div>
        <div class="main_carousel">
            <div class="carousel">
                
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">DATA (in mb)</div>
                    <div class="slds-text-body--regular chart_sub">Domestic -vs- Roaming</div>
                    <div id="pie1" class="sub_carousel">
                    </div>
                </div>
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">VOICE (in min)</div>
                    <div class="slds-text-body--regular chart_sub">Domestic -vs- Roaming</div>
                    <div id="pie2" class="sub_carousel">
                    </div>
                </div>
                
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">SMS (Count)</div>
                    <div class="slds-text-body--regular chart_sub">Domestic -vs- Roaming</div>
                    <div id="pie3" class="sub_carousel">
                    </div>
                </div>
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">I-PASS (in mb)</div>
                    <div class="slds-text-body--regular chart_sub">Domestic -vs- Roaming</div>
                    <div id="pie4" class="sub_carousel">
                    </div>
                </div>              
            </div>
        </div>
  <!-- code for column charts -->
        <div class="slds-text-heading--small insights">
        Insights
        </div>
        <div class="main_carousel">
            <div class="carousel_column">
                
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">DATA  (in mb)</div>
                    <div class="slds-text-body--regular chart_sub">You -vs- Your Colleagues</div>
                    <div id="column1" class="sub_carousel">
                    </div>
                </div>
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">VOICE  (in min)</div>
                    <div class="slds-text-body--regular chart_sub">You -vs- Your Colleagues</div>
                    <div id="column2" class="sub_carousel">
                    </div>
                </div>
                
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">SMS  (Count)</div>
                    <div class="slds-text-body--regular chart_sub">You -vs- Your Colleagues</div>
                    <div id="column3" class="sub_carousel">
                    </div>
                </div>
                <div class="car_main">
                    <div class="slds-text-body--small chart_main">I-PASS  (in mb)</div>
                    <div class="slds-text-body--regular chart_sub">Roaming Data -vs- Roaming iPass</div>
                    <div id="column4" class="sub_carousel">
                    </div>
                </div>              
            </div>
        </div><br/> 
        <c:MB_Action_bar componentName="MB_Devices" selectedMonth="{!v.CurrentMonth}"/>
    </div>
    <aura:set attribute="else">
               <div class="slds-spinner_container">
                  <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                     <div class="slds-spinner__dot-a"></div>
                     <div class="slds-spinner__dot-b"></div>
                 </div>
               </div>
         </aura:set>
    </aura:if>	
    
</aura:component>