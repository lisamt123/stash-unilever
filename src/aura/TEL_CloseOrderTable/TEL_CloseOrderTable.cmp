<aura:component >
    <aura:attribute name="wrapperProductsList" type="TEL_TelesalesWrapper.ProductInfo[]" description="Wrapper product list" />
    
    <div>     
        <table class="slds-table slds-table--bordered slds-table--cell-buffer slds-table--fixed-layout">
            <thead>
                <tr class="slds-text-title--caps">
                    <th scope="col">
                        <center><div class="slds-truncate" title="productName">Product Name</div></center>
                    </th>
                    <th scope="col">
                        <center><div class="slds-truncate" title="quantity">Quantity</div></center>
                    </th>
                    <th scope="col">
                        <center><div class="slds-truncate" title="price">Price</div></center>
                    </th>
                    <th scope="col">
                        <center><div class="slds-truncate" title="campaign">Campaign</div></center>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration var="product" items="{!v.wrapperProductsList}" indexVar="index">
                    <tr>
                        <td data-label="productName" title="{!product.name}">
                            <div class="slds-truncate"><ui:outputText value="{!product.name}"/></div>
                        </td>
                        <td data-label="quantity">
                            <center><div class="slds-truncate"><ui:outputNumber value="{!product.amount}"/></div></center>
                        </td>
                        <td data-label="price">
                            <center><div class="slds-truncate"><ui:outputText value="{!product.price}"/></div></center>
                        </td>
                        <td data-label="campaign">
                            <aura:renderIf isTrue="{!product.activeCampaign}">
                                <center>
                                    <div class="slds-truncate" title="{!product.campaignName}">
                                        <img alt="{!product.campaignName}" src="{!$Resource.TEL_TelesalesCSS + '/assets/icons/utility/bookmark_60.png'}" width="30" height="30" />
                                    </div>
                                </center>
                            </aura:renderIf>
                        </td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>  
    </div>
    
</aura:component>