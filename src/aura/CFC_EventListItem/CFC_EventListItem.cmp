     <div class="itemPanel" > 
        <table width="100%" value="{!v.eventItem}" onclick="{!c.loadEventDetail}">
            <tr>
                <td width="40%">
                   <img src="{!v.eventBannerImage}" class="bannerImage"></img>
                </td>
                <td width="60%" style="vertical-align:middle;">                    
                    <div style="padding-left:5px;font-weight: bold;">
                         {!v.eventItem.Name}&nbsp;
                    </div> 
                    <div style="padding-bottom:3px;padding-left:5px;font-size: 12px;">
                        <br/> 
                        Start Date : <ui:outputText value="{!v.FromDate}"/><br/>
                        End Date &nbsp;: <ui:outputText value="{!v.ToDate}"/>
                    </div>         
                </td>
            </tr>
        </table>
