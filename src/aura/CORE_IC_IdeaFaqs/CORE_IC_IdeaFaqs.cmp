<aura:component controller="Core_IC_IdeaController" >

     <aura:attribute name="pannelType" type="String"/>
     <aura:handler name="init" value="{!this}" action="{!c.getFaqListData}"/>
     <aura:attribute name="faqList" type="Core_CA_BaseApplicationWrapper"/>
     <aura:attribute name="showspinner" type="boolean" default="true"/>
      
     <style>
       .main-content{
           margin: 0%;
           margin-top: 0px;
            
       }
         @media only screen and (min-width:768px){
         .main-content{
             height: 693px;
           }
         }
    </style>
      <aura:if isTrue="{!v.showspinner=='false'}">  
        <div class="main-content" style="width:100%;">
               <div class="headerBarRowAlign" ><img class="backImageStyle-new" src="/resource/CORE_IC_IdeasLigthtning/img/back.svg" onclick="{!c.navigateToIdeaHome}"/>
                   <div class="slds-text-heading--medium homePageSectionTitle">{!$Label.c.CORE_IC_FAQ}</div>               	                                             
               </div> 
              <hr/>
               <div class="test"   >  					
                     <aura:iteration items="{!v.faqList}" var="faqListItem">
                         <c:CORE_IC_IdeaFaqsList faqListItem="{!faqListItem}"/>
                    </aura:iteration>
               </div> 
        </div>
         <aura:set attribute="else">
           <!--  <center><img class="spinner-img " src="/resource/EA_StaticResource/assets/images/spinners/slds_spinner.gif"></img></center>-->
               <div class="slds-spinner_container">
                  <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                     <div class="slds-spinner__dot-a"></div>
                     <div class="slds-spinner__dot-b"></div>
                 </div>
               </div>
         </aura:set>
    </aura:if>	
    
</aura:component>