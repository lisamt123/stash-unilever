<aura:component implements="force:appHostable" controller="MB_Controller_Class">
    <aura:attribute name="showspinner" type="boolean" default="true"/>
    <style>
        body{
        background:#D1D1D1;
        }
        .head_a-1{
        float:left;
        color:#033A69;
        }
        .head_b-1{
        float:right;
        color:#033A69;
        }
        .head_a{
        float:left;
        color:#033A69;
        }
        .head_b{
        float:right;
        color:#033A69;
        text-align: right;	
        margin-right:35px;
        }
        .head_d{
            float: left;
            margin-left: 12px;
            margin-top: 0px;
            margin-bottom: 4px;
        }
        .head_e{
        float: right;
        text-align: right;
        margin-right:35px;
        }
        .trend{
        width: 20px;
        margin-right:10px;
        }
        .section_a{
			padding: 1rem;
    		border-bottom: 1px solid #CFD7E6;
    		padding-bottom: 1.9rem;
            position:relative;
        }
        .section_a-new{
        clear: both;
    	margin-bottom: -24px;
            padding-top: 8px;
        }
        .icon-style-1{
    width: 40px;
    float: left;
    background: #fff;
    border: 1px solid #cfd7e6;
    border-right: 0;
    padding: 8.5px;
    border-radius: 5px 0 0 5px;
        }
        .icon-style-2{
    width: 41px;
    float: left;
    background: transparent;
    border: 1px solid #cfd7e6;
    padding: 9.5px;
    border-radius: 0 5px 5px 0;
        }	
    </style>
    
    <aura:attribute name="deviceName" type="String"/>
    <aura:attribute name="CurrentMonth" type="String"/>
    <aura:attribute name="deviceId" type="String"/>
    <aura:attribute name="spendDetails" type="MB_Wrapper_Class"/>
    <aura:attribute name="nonUsageChargeDetails" type="MB_Wrapper_Class"/>
    <aura:attribute name="deviceDetails" type="MB_Wrapper_Class.MB_Device_Wrapper_Class"/>
    <aura:attribute name="nonUsageDetails" type="MB_Wrapper_Class.MB_Device_Wrapper_Class"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:if isTrue="{!v.showspinner=='false'}">
        
    <div>
        
               <div onclick="{!c.gotoDevices}"> <img  class="back-button" src="/resource/Lightning_designing_style/assets/icons/utility/back_60.png" ></img></div> 
         
        <div class="sectiona_a">
            <div class="slds-text-heading--small head_c-1">iPass</div>
            <div class="head_d-1">
                <div> 
                    <div onclick="{!c.iPass_charts}"><img class="icon-style-1" src="/resource/MB_Icons/MB_Icons/chart_60.png" /></div>
                    <div><img class="icon-style-2" src="/resource/MB_Icons/MB_Icons/list_60.png" /></div>
                </div>
            </div><div style="clear:both"></div>
        </div>
        <div class="section_a" style="border-top: 1px solid #CFD7E6;">
            <div class="slds-text-body--regular head_a">Total</div>
            <div class="slds-text-body--regular head_b">
              <aura:if isTrue="{!v.deviceDetails.totalSpendVariance==true}"> 
                <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Up.svg" /></span>
              </aura:if>
              <aura:if isTrue="{!v.deviceDetails.totalSpendVariance==false}"> 
                <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Down.svg" /></span>
              </aura:if>
                {!v.deviceDetails.userCurrency}{!v.deviceDetails.totalUsage}
            </div>
                
        </div>
    
      <aura:if isTrue="{!v.deviceDetails.totalIpassUsage > 0}">
          <div onclick="{!c.gotoDetailSummaryIpass}" data-deviceName="Data"  id="outerdiv">
          <div class="section_a">
              <div class="slds-text-body--regular head_a">iPass</div>
              <div class="slds-text-body--regular head_b">
                  <aura:if isTrue="{!v.deviceDetails.ipassVariance==true}"> 
                      <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Up.svg" /></span>
                  </aura:if>
                  <aura:if isTrue="{!v.deviceDetails.ipassVariance==false}"> 
                      <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Down.svg" /></span>
                  </aura:if>
                  {!v.deviceDetails.userCurrency}{!v.deviceDetails.totalIpassUsage}
              </div>
              <div class="section_a-new">
                  <aura:iteration items="{!v.spendDetails.ipassWrapperList}" var="data">
                    <aura:if isTrue="{!data.totalSpend >0}">
                      <div class="slds-text-body--small head_d">{!data.chargeTypeName}</div>
                      <div class="slds-text-body--small head_e">{!v.deviceDetails.userCurrency}{!data.totalSpend}</div>
                      <div style="clear:both"></div>
                   </aura:if>
                  </aura:iteration> 
              </div>
           <div class="Right_cevro">
             <img src="/resource/MB_Icons/MB_Icons/chevronnext-13.svg"></img>  
           </div>
          </div>

          </div>
       </aura:if>
        <aura:if isTrue="{!v.deviceDetails.totalIpassUsage == 0}">
          <div  data-deviceName="Data"  id="outerdiv">
          <div class="section_a">
              <div class="slds-text-body--regular head_a">iPass</div>
              <div class="slds-text-body--regular head_b">
                  <aura:if isTrue="{!v.deviceDetails.ipassVariance==true}"> 
                      <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Up.svg" /></span>
                  </aura:if>
                  <aura:if isTrue="{!v.deviceDetails.ipassVariance==false}"> 
                      <span><img class="trend trend-down" src="/resource/MB_Icons/MB_Icons/Trend_Down.svg" /></span>
                  </aura:if>
                  {!v.deviceDetails.userCurrency}0.00
              </div>
              <div class="section_a-new">
                  <aura:iteration items="{!v.spendDetails.ipassWrapperList}" var="data">
                    <aura:if isTrue="{!data.totalSpend >0}">
                      <div class="slds-text-body--small head_d">{!data.chargeTypeName}</div>
                      <div class="slds-text-body--small head_e">{!v.deviceDetails.userCurrency}0.00</div>
                      <div style="clear:both"></div>
                   </aura:if>
                  </aura:iteration> 
              </div>
          </div>

          </div>
       </aura:if>
        <c:MB_Action_bar componentName="MB_Devices" selectedMonth="{!v.CurrentMonth}"/>
    </div>
 <aura:set attribute="else">
               <div class="slds-spinner_container">
                  <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                     <div class="slds-spinner__dot-a"></div>
                     <div class="slds-spinner__dot-b"></div>
                 </div>
               </div>
         </aura:set>
    </aura:if>	
    
</aura:component>