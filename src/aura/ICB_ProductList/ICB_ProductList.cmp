<aura:component controller="ICB_InventoryProducts_CC" implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global" >
	
    <!-- Handlers --> 
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    
    <!-- Events --> 
    <aura:registerEvent name="lineItemList" type="c:ICB_Static_LineItem_Inventory"/>
    
    <!-- Attributes --> 
    <aura:attribute name="Inventory" type="ICB_Inventory_Line_Item__c[]"/>
    <aura:attribute name="Image" type="String"/>
    <aura:attribute name="buttonValue" type="String" default="/" />
    <aura:attribute name="boxNumber" type="Integer" default="0" />
    
    <!-- Component Page --> 
    <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal">
		<thead>
        	<tr class="slds-text-heading--label">
                <th class="slds-cell-shrink"/>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">Produto
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">Descrição
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">Saldo(Cx.)
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">Saldo(Unid.)
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">negativo
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">Entrada(Cx.)
                        </div>
                    </th>
                    <th class="slds-is-sortable" scope="col">
                        <div class="slds-truncate">positivo
                        </div>
                    </th>
                    <th class="slds-cell-shrink"></th>
                </tr>
            </thead>
            <tbody>
               <aura:iteration items="{!v.Inventory}" var="item" indexVar="index"> 
                   
                <tr class="slds-hint-parent">
                    <td class="slds-cell-shrink" data-label="Select Row">
                    </td>
                    <th class="slds-truncate" scope="row" data-label="Product Name">
                        <!--<img src="/resource/1463160585000/agf__ADM_WithComments"/>-->
                        
                    </th>
                    <td class="slds-truncate" data-label="Description">
                        <ui:outputText aura:id="ProductDescription"
                                       value="{!item.ICB_Product__r.Name}"/>
                    </td>
                    <td class="slds-truncate" data-label="Saldo(Cx.)"> 
                    <ui:outputNumber aura:id="ProductQuantityBoxes"
                                       value="{!item.ICB_Quantity_Boxes__c}"/>
                    </td>
                    <td class="slds-truncate" data-label="Saldo">
                        <ui:outputNumber aura:id="ProductUnitOut"
                                       value="{!item.ICB_Quantity_Unit__c}"/>
                    </td>
                    <td class="slds-truncate" data-label="Saldo">
                        <ui:outputNumber aura:id="operatorValue"
                                       value="{!v.buttonValue}"/>
                    </td>
                    <td class="slds-truncate" data-label=" negativo"> 
                    <ui:button label="Negativo"/>
                    </td>
                    <td class="slds-truncate" data-label=" Entrada(Cx.)">
                        <ui:inputNumber aura:id="ProductUnit" value="{!item.ICB_Quantity_ToBe_Updated__c}"/>
                    </td>
                    <td class="slds-truncate" data-label=" positivo" data-record="{!index}" onclick="{!c.addQuantity}">
                    <ui:button aura:id="pos" label="Positivo" press="{!c.setButtonValue}"/>
                    </td>
                    <td class="slds-cell-shrink" data-label="Actions">
                    </td>
                </tr>
                </aura:iteration>
            </tbody>
        </table>
</aura:component>