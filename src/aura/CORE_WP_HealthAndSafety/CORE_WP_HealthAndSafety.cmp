<aura:component controller="Core_WP_WorkPlaceController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="workplaceLocationId" type="String"/>
    <aura:attribute name="healthAndSafety" type="string" />
    <aura:attribute name="displayErrorMessage" type="Boolean" default="false"/>
    
    <!--make the richtext information as responsive -->
    <style>
        .responsiveRichText div, .responsiveRichText span, .responsiveRichText table {
            height: 100% !important;
            width: 100% !important;
        }
    </style>  
    <div class="topBarStyle">
        <div onclick="{!c.gotoPreviousPage}" class="topBackBar">
            <img src="/resource/NewsCenterIcons/back.svg" class="topBackBarIcon"></img>
        </div>
    </div> 
    <div class="allPadding">    
        <img src="/resource/CORE_WP_WorkplaceStyles/Icons/HealthandSafety.svg" class="smallIcons"/>
        <div class="allPadding pageTitle">Health &amp; Safety</div><br/>
        <div class="responsiveRichText">
        	<aura:unescapedHtml value="{!v.healthAndSafety}" /> 
            <aura:if isTrue="{!v.noDataErrorMessage}">
                There is no data available currently to display for this section.
            </aura:if> 
        </div>
    </div>
</aura:component>