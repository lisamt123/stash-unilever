<aura:component controller="EA_Notification_Controller">
    <aura:attribute name="NewBee_badge" type="boolean" default="false"/>
    <aura:attribute name="Bronze_badge" type="boolean" default="false"/>
    <aura:attribute name="Silver_badge" type="boolean" default="false"/>
    <aura:attribute name="Gold_badge" type="boolean" default="false"/>
    <aura:attribute name="shownewbee2" type="boolean" default="false"/>
    <aura:attribute name="teamid" type="String"/>
    <aura:attribute name="activityId" type="String"/>
    <aura:attribute name="check_image" type="Boolean" default="false"/>
    <aura:attribute name="activity" type="Everyday_Activity__c"/>
    <aura:attribute name="userDetail" type="Object[]"/>
    <aura:attribute name="themecolor" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.getactivities2}"/>  
    <aura:attribute name="participant_rating" type="integer"/>
    <aura:attribute name="showInvitation" type="boolean" default="false"/>
    <aura:attribute name="showInvitationcomp" type="boolean" default="false"/>
    <aura:attribute name="themerecordtype" type="String" default="{!v.activity.RecordType.Name}"/>     
    <aura:attribute name="numbers" type="integer[]"/>
    <aura:attribute name="remain" type="integer[]" default="[]"/>
    <aura:attribute name="rating_value" type="string"></aura:attribute>
    <aura:attribute name="numberfound" type="string"></aura:attribute>
    <aura:attribute name="remainfound" type="string"></aura:attribute>
    <aura:attribute name="themeColorsForFeedback" type="string"/>
    
    <div class="slds container">
        <div class="cross_img">
            <img   value="" class="close_btn" src="/resource/Lightning_designing_style/assets/icons/utility/close_60.png"  onclick="{!c.redirect}" alt="person name" />
        </div>
        <aura:iteration items="{!v.activity}" var="act">
            <c:EA_ActivityHeader_Common themeName="{!act.EaRecordtype}" themeColors="{!v.themeColorsForFeedback}"
                                        activityName="{!act.Eaname}"  check_image=""  
                                        activityRating="{!act.participant_rating}"  numbers="{!v.numberfound}" remain="{!v.remainfound}"/>
            <div class="section_acc">
                <br></br>
                <div class="slds-text-heading--medium"><p>You have a new Activity request from</p></div>
                <div class="prof_pic">
                    <div>
                        <img class="img_profile"  src="{!act.userPhotoUrl}" />
                        <aura:if isTrue="{!v.NewBee_badge}"><img style="width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
                        <aura:if isTrue="{!v.Bronze_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
                        <aura:if isTrue="{!v.Silver_badge}"><img style="width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
                        <aura:if isTrue="{!v.Gold_badge}"><img 	style="width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>
                    </div>
                </div>
                <div class="slds-text-heading--medium"><p><ui:outputText value="{!act.userName}"/></p></div>
                <br></br>
                <div><button  onclick="{!c.Acceptmethod1}"  class="slds-button--neutral slds-button--brand  submit">Accept</button></div>
                <div><button  onclick="{!c.declinemethod1}" class="slds-button--neutral cancel"> Decline</button></div>        
                
            </div>
        </aura:iteration>
    </div>
</aura:component>