<aura:component controller="EA_ControllerClass">
    <aura:attribute name="acivities" type="EA_Wrapper_Class.EA_UserProfile_Wrapper[]"/>
    <aura:attribute name="Active_activities" type="EA_Wrapper_Class.EA_UserProfile_Wrapper[]"/>
    <aura:attribute name="Inactive_acivities" type="EA_Wrapper_Class.EA_UserProfile_Wrapper[]"/>
    <aura:attribute name="invitedActivities" type="EA_Wrapper_Class.EA_UserProfile_Wrapper[]"/>
    <aura:attribute name="Active_activities1" type="string[]"/>
    <aura:attribute name="showmessage" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="showspinner" type="boolean" default="false"/>
    
    <div>
        <aura:if isTrue="{!v.showspinner}"><center><img style="width:10%;position: absolute;top:50%;" src="/resource/Lightning_designing_style/assets/images/spinners/slds_spinner.gif"></img></center></aura:if>
        <!--<c:EA_UserProfile_Component />-->
        <c:EA_UserProfile_New_Component />
    </div>
    <div><span class="heading">Provide Feedback</span>
        
        <aura:iteration items="{!v.Active_activities}" var="activity">
            <c:EA_Activity_Dashboard_Component activity="{!activity}"/>
        </aura:iteration> 
    </div>
    <div>
        <p class="heading">View Invitations</p>
        <aura:iteration items="{!v.invitedActivities}" var="activity">
            <c:EA_InvitedActivities_Comp activity="{!activity}"/>
        </aura:iteration>
    </div>
    <aura:if isTrue="{!v.showmessage}">
        <div class="slds">
            <div style="margin:10px 20px;font-size:1.4rem;"> Try out some development activities in "All Themes" tab and earn points!  </div>
        </div>
    </aura:if>
    <div>
        <p class="heading">Enrolled Activities</p>
        <aura:iteration items="{!v.Inactive_acivities}" var="activity">
            <c:EA_InactiveActivity_comp activity="{!activity}"/>
        </aura:iteration> 
    </div>
</aura:component>