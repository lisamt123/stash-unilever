<aura:component > 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="detailVal" type="Core_CA_WrapperUtility.RequestDetailResponseAribaGTES[]"/>
    <style>
        .action_bar{
        background: #fff;
        height: 50px;
        Position: fixed;
        bottom: 0;
        width: 100%;
        }
        .icons{ 
        width: 20%;
        text-align:center;
        float: left;
        } 
        .alignCenter{
        text-align:center;       
        }
        .actionBarWidth {
        width: 100%;
        }
        .img{    
        width: 40px;
        }
        .actionBarHeight {
        padding-top: 5px;
        padding-bottom: 5px;
        text-align:center; 
        }
        
    </style>
    <div class="action_bar">
        <div class="actionBarHeight">                  
            <table class="actionBarWidth">
                <tr class="alignCenter">               
                    <!-- Feed Back -->
                    <td class="alignCenter" onclick="{!c.gotoFeedback}"><img class="img" src="/resource/ApprovalsLightning/images/feedbackIcon.svg"/></td>
                   
                    <!-- Feed -->
                    <aura:if isTrue="{!v.showFeed}">
                    	<td class="alignCenter" ><img class="img" src="/resource/ApprovalsLightning/images/Comment.svg"/></td>
                    </aura:if>
                    
                    <!--Query with Vendor  -->
                    <aura:if isTrue="{!v.showQwv}">
                        <td class="alignCenter" onclick ="{!c.return1}"><img class="img" src="/resource/ApprovalsLightning/images/querywithvendor.png"/></td>
                    </aura:if>
                    
                    <!--Rework -->
                    <aura:if isTrue="{!v.showReWork}">
                        <td class="alignCenter" onclick ="{!c.reWork1}"><img class="img" src="/resource/ApprovalsLightning/images/rework.png"/></td>
                    </aura:if>
                   
                    <!-- Return to AP -->
                    <aura:if isTrue="{!v.showRtap}">                     
                        <td class="alignCenter" onclick ="{!c.returntoAP}"><img class="img" src="/resource/ApprovalsLightning/images/rework.png"/></td>                    
                    </aura:if>
                    
                    <!--Reject  -->
                    <aura:if isTrue="{!v.showReject}">                     
                        <td class="alignCenter" onclick ="{!c.return}"><img class="img" src="/resource/ApprovalsLightning/images/Return.svg"/></td>                    
                    </aura:if>
                    
                    <!-- Approve -->
                    <aura:if isTrue="{!v.showApprove}">
                        <td class="alignCenter" onclick ="{!c.ApproveScreen}"><img class="img" src="/resource/ApprovalsLightning/images/Approve.svg" /></td> 
                    </aura:if>  
                </tr>
            </table>
        </div>  
    </div>        
    
    
