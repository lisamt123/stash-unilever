<aura:component >
   <!-- Attributes for the button Ok -->
   <aura:attribute name="nblButtonOk" type="Boolean" description="Define when the button Ok is enable"/>
   <aura:attribute name="label" type="String" description="This is the button label"/>
   <aura:attribute name="class" type="String" description="SLDS class"/>
   <aura:attribute name="onclick" type="Aura.Action" default="{!c.myAction}" description="This allows handling onClick events"/>
   <aura:attribute name="data" type="String" description="Any data to be passed via html5 data- attribute"/>

   <!-- Attributes for the button Cancel -->
   <aura:attribute name="nblButtonCl" type="Boolean" description="Define when the button Ok is enable"/>
   <aura:attribute name="labelCl" type="String" description="This is the button label"/>
   <aura:attribute name="classCl" type="String" description="SLDS class"/>
   <aura:attribute name="onclickCl" type="Aura.Action" default="{!c.myAction}" description="This allows handling onClick events"/>
   <aura:attribute name="dataCl" type="String" description="Any data to be passed via html5 data- attribute"/>
   
   <!-- Attributes for Message --> 
    <aura:attribute name="divClass" type="String" description="Define div class container" />
    <aura:attribute name="divClassRole" type="String" description="Define div class role" />
    <aura:attribute name="role" type="String" description="Define the role div class" />
    <aura:attribute name="msgShow" type="String" description="Define the message return action" />
    <aura:attribute name="spanClass" type="String" description="Define span class" />
    <aura:attribute name="spanMsg" type="String" description="Define span class message" />
    <aura:attribute name="nblMsgHeader" type="Boolean" description="Define if the message will be on header or footer" default="true" />
    
   <!-- Attributes for SVG -->
   <aura:attribute name="svgXlinkHref" type="String" description="svgIcon's xlink-href"/>
   <aura:attribute name="svgClass" type="String" description="svgIcon CSS classname"/>
   <aura:attribute name="nblSVG" type="String" description="Define if SVG will be applied" default="false"/>
   
   <!-- Attributes for SVG Cancel -->
   <aura:attribute name="svgXlinkHrefCl" type="String" description="svgIcon's xlink-href"/>
   <aura:attribute name="svgClassCl" type="String" description="svgIcon CSS classname"/>

   <!-- Buttons --> 
    
   <div class="{!v.divClass}">
   		<div class="{!v.divClassRole}" role="{!v.role}">
            <aura:renderIf isTrue="{!!v.nblMsgHeader}">
            	<div><h2>{!v.msgShow}</h2></div>
            </aura:renderIf>
			<!-- Ok Button --> 
           	<aura:renderIf isTrue="{!v.nblButtonOk}">
                <button class="{!v.class}" onclick="{!v.onclick}" data-data="{!v.data}">
                    <aura:renderIf isTrue="{!v.nblSVG}">
                    	<c:svg xlinkHref="{!v.svgXlinkHref}" class="{!v.svgClass}" />
                   	</aura:renderIf>
                    {!v.label}
                </button>
           	</aura:renderIf>
            
           	<!-- Cancel Button -->
           	<aura:renderIf isTrue="{!v.nblButtonCl}">
                <button class="{!v.classCl}" onclick="{!v.onclickCl}" data-data="{!v.dataCl}">
                    <aura:renderIf isTrue="{!v.nblSVG}">
                    	<c:svg xlinkHref="{!v.svgXlinkHrefCl}" class="{!v.svgClassCl}" />
                    </aura:renderIf>
                    {!v.labelCl}
                </button>
           	</aura:renderIf>
        	<span class="slds-assistive-text">{!v.spanMsg}</span>
            <aura:renderIf isTrue="{!v.nblMsgHeader}">
            	<h2>{!v.msgShow}</h2>
            </aura:renderIf>
        </div>
   </div>
   
</aura:component>