    <!-- style -->
    
    
	

	  <!-- REQUIRED SLDS WRAPPER -->
  <div class="slds">    
 <div class="dashboard">
   
  <div class="slds-text-heading--medium space_below">My DashBoard</div>
      
  
    <div class="slds-box">
          
             <aura:iteration items="{!v.userDetail}" var="user">
             <div class="main_badge">
          <div class="main_badge_image">       
                   <span class="slds-avatar slds-avatar--circle slds-avatar--medium" >

                       <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                 </span>
<aura:if isTrue="{!v.NewBee_badge}"><img src="/resource/EA_Badges/images/NewBee.svg" /></aura:if>
<aura:if isTrue="{!v.Bronze_badge}"><img src="/resource/EA_Badges/images/Bronze.svg" /></aura:if>
<aura:if isTrue="{!v.Silver_badge}"><img src="/resource/EA_Badges/images/Silver.svg" /></aura:if>
<aura:if isTrue="{!v.Gold_badge}"><img src="/resource/EA_Badges/images/Gold.svg" /></aura:if>              
                   
                 </div></div>
        </aura:iteration>     
        <!-- badge code -->
     
      
        <div class="progress_bar">
            <aura:if isTrue="{!v.shownewbee1}">
                <img src="/resource/EA_BadgeImages/EA_BadgeImages/newbee1.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.shownewbee2}">
             <img src="/resource/EA_BadgeImages/EA_BadgeImages/newbee2.svg"></img>      
            </aura:if>
               <aura:if isTrue="{!v.showbronz1}">
              <img src="/resource/EA_BadgeImages/EA_BadgeImages/bronz1.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.showbronz2}">
              <img src="/resource/EA_BadgeImages/EA_BadgeImages/bronz2.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.showsilver1}">
             <img src="/resource/EA_BadgeImages/EA_BadgeImages/silver1.svg"></img>
            </aura:if>
               <aura:if isTrue="{!v.showsilver2}">
            <img src="/resource/EA_BadgeImages/EA_BadgeImages/silver2.svg"></img>
            </aura:if>
               <aura:if isTrue="{!v.showgold}">
            <img src="/resource/EA_BadgeImages/EA_BadgeImages/gold.svg"></img>
            </aura:if>
            
        </div>
