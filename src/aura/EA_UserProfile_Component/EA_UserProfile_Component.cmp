<aura:component controller="EA_ControllerClass">
    <aura:attribute name="userDetail" type="EA_Wrapper_Class.EA_UserProfile_Wrapper"/>
    <aura:attribute name="shownewbee1" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="shownewbee2" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="showbronz1" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="showbronz2" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="showsilver1" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="showsilver2" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="showgold" type="boolean" default="false"></aura:attribute>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
   <!-- <aura:handler name="init" value="{!this}" action="{!c.removeCSS}"/>-->
    <aura:attribute name="NewBee_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Bronze_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Silver_badge" type="boolean" default="false"></aura:attribute>
    <aura:attribute name="Gold_badge" type="boolean" default="false"></aura:attribute>
     <ltng:require styles="/resource/EA_StaticResource/assets/styles/salesforce-lightning-design-system-vf.css" />
    <!-- style -->
    <style>
        .spacer-pull-to-load-more{
          height:100% !important;
        }
    
        .slds .slds-tabs--scoped__nav a {
    color: white;
       
    
}
 .slds .slds-tabs--scoped__nav {
    background-color: #005FB2;
 
}
.progress_bar img  {
  
  width: 280px;
  margin-left:5px;

}
.slds .slds-tabs--scoped {
    border: solid;
    border-color: #005FB2;
}
    .slds .slds-tabs--scoped__nav .slds-tabs__item + .slds-tabs__item {
    margin-left: 22px;
}
.slds .slds-tabs--scoped__nav .slds-tabs__item a {
    line-height: 53px;
}
.slds .slds-text-body--regular {
    font-size: 14px;
    margin-top: 50px;
    padding-bottom: 20px;
    font-family: sans-serif;
    font-style: inherit;
    color: black;
    margin-left: 20px;
}
     .space_below{
         margin-top: 50px;
        }
    .slds .slds-box {
  padding: 16px;
  border-radius: 4px;
  background-clip: padding-box;
  border: 1px solid #d8dde6;
  margin-left: 5%;
  width: 90%;
  height: 200px;
  margin-top:20px;
}
    .slds-box .line{
    height:20px;
    }
.solid1.active,.solid2.active,.solid.active{
border-color:green;
} 
  .progress_bar p.brVal,p.brval {
    font-size: 10px;
    padding: 5px 4px;
}
  .active p.brval ,.progress_bar .active p.brVal{
    padding: 4px 5px;
    font-size: 15px;
    color: #fff;
}
.cEverydayActivity_Detailcard_component .section.cEverydayAction_Activity_Detail {
  padding: 0 24px 24px;
}
.profile_Image {
  width: 60px;
  height: 60px;
  margin-left: 10px;
}
        
        </style>
    <!-- style -->
	  <!-- REQUIRED SLDS WRAPPER -->
  <div class="slds">    
 <div class="dashboard">
   
  <div aura:id="dash" class="dashTitle">My Dashboard</div>
      
  
    <div class="slds-box">
          
             <aura:iteration items="{!v.userDetail}" var="user">
             <div class="main_badge">
          <div class="main_badge_image">       
                   <span class="profile_Image" >

                       <img aura:id="NewBeebadge" class="user_badge-New" src="{!user.userPhotoUrl}" ></img> 
                 </span>
<aura:if isTrue="{!v.NewBee_badge}"><img style="margin-left: 5px;width: 100px;" src="/resource/EA_Badges/NewBee.svg" /></aura:if>
<aura:if isTrue="{!v.Bronze_badge}"><img style="margin-left: 5px;width: 100px;" src="/resource/EA_Badges/Bronze.svg" /></aura:if>
<aura:if isTrue="{!v.Silver_badge}"><img style="margin-left: 5px;width: 100px;" src="/resource/EA_Badges/Silver.svg" /></aura:if>
<aura:if isTrue="{!v.Gold_badge}"><img 	style="margin-left: 5px;width: 100px;" src="/resource/EA_Badges/Gold.svg" /></aura:if>              
                   
                 </div></div>
        </aura:iteration>     
        <!-- badge code -->
     
      
        <div class="progress_bar">
            <aura:if isTrue="{!v.shownewbee1}">
                <img class="prg_image" src="/resource/EA_Badges/newbee1.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.shownewbee2}">
             <img class="prg_image" src="/resource/EA_Badges/newbee2.svg"></img>      
            </aura:if>
               <aura:if isTrue="{!v.showbronz1}">
              <img class="prg_image" src="/resource/EA_Badges/bronz1.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.showbronz2}">
              <img class="prg_image" src="/resource/EA_Badges/bronz2.svg"></img>     
            </aura:if>
               <aura:if isTrue="{!v.showsilver1}">
             <img class="prg_image" src="/resource/EA_Badges/silver1.svg"></img>
            </aura:if>
               <aura:if isTrue="{!v.showsilver2}">
            <img class="prg_image" src="/resource/EA_Badges/silver2.svg"></img>
            </aura:if>
               <aura:if isTrue="{!v.showgold}">
            <img class="prg_image" src="/resource/EA_Badges/gold1.svg"></img>
            </aura:if>
            
        </div>
       <!-- <ui:outputText value="{!user.userName}"/><br />
        
         <ui:outputText value="{!user.activity_points}"/><br /> -->
      
     </div>
     </div>  
      <div class="actionTitle">My Actions</div>
      <div class="act_space"></div>
    </div>
</aura:component>