<aura:component controller="CORE_LA_Controller">
    <aura:attribute name="selectedEventFilter" type="String"/>
    <aura:attribute name="showFilter" type="boolean" default="false"/>
    <aura:attribute name="showSort" type="boolean" default="false"/>
    <aura:attribute name="showShareList" type="boolean" default="false"/>
    <aura:attribute name="isCreateEventPopup" type="boolean" default="false" description="Flag to manage create event popup" />
    <aura:handler name="closeCreateEventPopup" event="c:CORE_LA_CloseCreatePopupEvent" action="{!c.handleCloseCreatePopupEvent}" />
    
    
    
    <style>
        .slds-button--icon-border1{
        width: 1rem;
        height: 1.2rem;
        }
    </style>
    <!--button class="slds-button slds-button neutral test">Create New Event</button -->
    <ui:button class="slds-button slds-button--neutral test" label="Create New Event" press="{!c.openCreateEventPopup}"></ui:button>
    <div class="heading">All Past Events
        <div>
            <div class="slds-button-group filter-sort" role="group">
                <button class="slds-button slds-button--icon-more" aria-haspopup="true" title="More Actions" onclick="{!c.showSortMenu}">
                    <img class="icons_group" src="/resource/Lightning_designing_style/assets/icons/utility/sort_60.png"></img>
                </button>
            </div>
            <aura:if isTrue="{!v.showSort}">
                <div  id="sortOptions" class="slds-dropdown slds-dropdown--right events-sortdropdown">
                    <ul class="slds-dropdown__list" role="menu" >
                        <li class="slds-dropdown__item events-bold" role="presentation">
                            <a href="javascript:void(0);" role="menuitem" tabindex="0">
                                <span class="slds-truncate">Date (Chronological)</span>
                            </a>
                        </li>
                        <li class="slds-dropdown__item" role="presentation">
                            <a href="javascript:void(0);" role="menuitem" tabindex="-1">
                                <span class="slds-truncate">Event name (A-Z)</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </aura:if>   
        </div>
    </div>
    <div  class="events-cards">
      
        
        Data Visualization 
        <span class="lang">(English)</span>
        <br></br>
        <!-- Start -->
        <aura:if isTrue="{!v.showShareList}">
            <div  id="ShareOptions" class="slds-dropdown slds-dropdown--right events-sharedropdown">
                <ul class="slds-dropdown__list" role="menu" >
                    <li class="slds-dropdown__item" role="presentation">
                        <a href="javascript:void(0);" role="menuitem" tabindex="0">
                            <span class="slds-truncate">Share on Chatter</span>
                        </a>
                    </li>
                    <li class="slds-dropdown__item" role="presentation">
                        <a href="javascript:void(0);" role="menuitem" tabindex="-1">
                            <span class="slds-truncate">Email</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aura:if>
        
