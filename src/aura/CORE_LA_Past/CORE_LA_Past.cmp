<aura:component controller="CORE_LA_Controller">
    <aura:attribute name="selectedEventFilter" type="String"/>
    <aura:attribute name="showFilter" type="boolean" default="false"/>
    <aura:attribute name="showSort" type="boolean" default="false"/>
    <aura:attribute name="showShareList" type="boolean" default="false"/>
    <aura:attribute name="isCreateEventPopup" type="boolean" default="false" description="Flag to manage create event popup" />
    <aura:handler name="closeCreateEventPopup" event="c:CORE_LA_CloseCreatePopupEvent" action="{!c.handleCloseCreatePopupEvent}" />
      <aura:handler name="init" value="{!this}" action="{!c.doinit}" />
    
    <style>
        .slds-button--icon-border1{
        width: 1rem;
        height: 1.2rem;
        }
    </style>
<div class="events-create-parent">
 <ui:button class="slds-button slds-button--neutral test" label="Create New Event" press="{!c.openCreateEventPopup}"></ui:button>  
  <lightning:tabset >
    <lightning:tab label="POSTED">
     <div class="events">Events Created</div>
     <c:CORE_LA_EventCardListComponent filterType="Saved" sortType="Date" limitRecords="10" offsetValue="0" eventStatus="Posted" showMoreStatus="false" trainerId="" />
    </lightning:tab>
    <lightning:tab label="DRAFTS" >
      <lightning:buttonMenu iconName="utility:filterList" iconSize="large" >
        <lightning:menuItem label="All Events "    value="1" onactive="{! c.handleClick }" />
        <lightning:menuItem label="Multi-event"   value="2" onactive="{! c.handleClick }" />
      </lightning:buttonMenu>
      <lightning:buttonMenu iconName="utility:sort" iconSize="large" menuAlignment="right">
        <lightning:menuItem label="Date (Chronological - default)"    value="1" onactive="{! c.handleClick }" />
        <lightning:menuItem label="Event name (A-Z)"   value="2" onactive="{! c.handleClick }" />
        <lightning:menuItem label="Number of attendees " value="3" onactive="{! c.handleClick }" />
      </lightning:buttonMenu>
    <c:CORE_LA_EventCardListComponent filterType="Saved" sortType="Date" limitRecords="10" offsetValue="0" eventStatus="Draft" showMoreStatus="false" trainerId="" />
    </lightning:tab>
  </lightning:tabset>
</div>  
    
    <!-- Create Event Popup -->
    <aura:if isTrue="{!v.isCreateEventPopup}">
        <div class="slds-backdrop slds-backdrop--open">
           <c:CORE_LA_event_popup isCreateEventPopup="{!v.isCreateEventPopup}"></c:CORE_LA_event_popup>
        </div>
    </aura:if>
  
    <!-- Create Event Popup -->
</aura:component>