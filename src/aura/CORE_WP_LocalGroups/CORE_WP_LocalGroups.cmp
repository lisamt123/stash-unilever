<aura:component controller="Core_WP_WorkPlaceController">
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="workplaceLocationId" type="String"/>
    <aura:attribute name="noDataErrorMessage" type="Boolean" default="false"/>
    <aura:attribute name="workplaceGroups" type="CollaborationGroup[]" /> 
    <div class="topBarStyle">
        <div onclick="{!c.gotoPreviousPage}" class="topBackBar">
            <img src="/resource/NewsCenterIcons/back.svg" class="topBackBarIcon"></img>
        </div>
    </div>
    <div class="allPadding">    
        <img src="/resource/CORE_WP_WorkplaceStyles/Icons/LocalGroups.svg" class="smallIcons"/>
        <div class="allPadding pageTitle">Groups</div><br/>
        <!--<aura:iteration items="{!v.workplaceGroups}" var="workplaceGroup">
            <div style="padding-left: 30px;padding-right:30px">
                <c:CORE_WP_WorkPlaceGroupDetail workplaceGroupDetail="{!workplaceGroup}"/>
                <br/>
                <br/>
            </div>    
        </aura:iteration>-->
        <div style="padding: 10px 0px 30px 20px;">
        	<aura:iteration items="{!v.workplaceGroups}" var="workplaceGroup">
                <div class="allPadding">
                    <c:CORE_WP_WorkPlaceGroupDetail workplaceGroupDetail="{!workplaceGroup}"/>
                </div>    
            </aura:iteration>
            <aura:if isTrue="{!v.noDataErrorMessage}">
                There is no data available currently to display for this section.
            </aura:if> 
        </div>
    </div> 
</aura:component>