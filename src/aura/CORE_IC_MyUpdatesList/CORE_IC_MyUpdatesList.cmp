<aura:component controller="Core_IC_IdeaController">
    <aura:handler name="init" value="{!this}" action="{!c.getMyUpdatesData}"/>
    <aura:attribute name="myUpdatesList" type="Core_CA_BaseApplicationWrapper"/>
    <aura:attribute name="displayErrorMessage" type="Boolean" default="false"/>
    <aura:attribute name="MyUpdatesType" type="String"/>
    <aura:attribute name="pannelType" type="String"/>
    <aura:attribute name="UpdateTitle" type="String"/>
    <aura:attribute name="showspinner" type="boolean" default="true"/>
    <aura:attribute name="recordDetail" type="Core_CA_BaseApplicationWrapper"/>
    <aura:attribute name="displayIdeasFlag" type="Boolean" default="true"/>
    <style>
        .main_content{    background-color: white;}
        .action_bar{
        background: #fff;
        height: 63px;
        Position: fixed;
        bottom: 0;
        width: 100%;
        }
        .font1{
        font-size:12px;
        }
    .action_bar>div {
        width: 50%;
        float: left;
        }
        .action_bar >div img {
            width: 40px;
    		padding-top: 6px;
        }
        .feedback,.question,.information{
        width:50%;
        text-align:center;
        }
    </style>
    <div class="main_content">
        <aura:if isTrue="{!v.showspinner}">
            <div class="slds-spinner_container">
                <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
            </div>
        </aura:if>
        <div class="slds-page-header update" role="banner">
            <h2 class="slds-text-heading--small themeHeight slds-truncate">{!v.UpdateTitle}</h2>
        </div>
        <div class="detailSection">
            <aura:if isTrue="{!v.displayIdeasFlag}">
                <aura:iteration items="{!v.myUpdatesList}" var="myUpdatesListItem">
                    <c:CORE_IC_MyUpdateListItem myUpdatesListItem="{!myUpdatesListItem}" pannelType="{!v.pannelType}"/>
                </aura:iteration>
            </aura:if>
        </div>
        <aura:if isTrue="{!v.displayErrorMessage}">
            <div class="slds-box slds-theme--shade">
                <p>There is no activity on your ideas for active campaigns, promote them through chatter...</p>
            </div>
        </aura:if>
         <aura:if isTrue="{!v.showspinner == true ? false : true}">
            <div class="action_bar">
               <div class="feedback" onclick="{!c.navigateToFeedback}"> <img src="/resource/CORE_IC_IdeasLigthtning/img/IDEA01.svg"/><div class="font1">App Feedback</div></div>
              <div class="information" onclick="{!c.navigateToFaq}"><img src="/resource/CORE_IC_IdeasLigthtning/img/IDEA02.svg"/><div class="font1">Information</div></div>
          </div>
         </aura:if> 
    </div>
</aura:component>