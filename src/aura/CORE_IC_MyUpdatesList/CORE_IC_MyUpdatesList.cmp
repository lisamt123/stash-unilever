    <style>
        .main_content{    background-color: white;}
    </style>
    
          <div class="main_content">
                      <div class="slds-page-header update" role="banner">
                        <h2 class="slds-text-heading--small themeHeight slds-truncate">{!v.UpdateTitle}</h2>
                      </div>
                         <div class="detailSection">
                             <aura:iteration items="{!v.myUpdatesList}" var="myUpdatesListItem"> 
                              <c:CORE_IC_MyUpdateListItem myUpdatesListItem="{!myUpdatesListItem}" pannelType="{!v.pannelType}"/>
                             </aura:iteration>
                        </div> 
                    <aura:if isTrue="{!v.displayErrorMessage}">
                         <div class="slds-box slds-theme--shade">
                           <p> There are no updates on your active idea campaigns...</p>
                          </div>
                   </aura:if>
                  <aura:if isTrue="{!v.showspinner == true ? false : true}">
                    <div class="fixedBottom">
                       <div class="feedback bottom" > <img src="/resource/CORE_IC_IdeasLigthtning/img/IDEA01.svg"/></div>
                       <div class="information bottom" onclick="{!c.navigateToFaq}"> <img src="/resource/CORE_IC_IdeasLigthtning/img/IDEA02.svg"/></div>
                  </div>
               </aura:if> 
     </div>   
</aura:component>