<aura:component controller="EA_ControllerClass" >
    <aura:attribute name="EAactivityid" type="String"/>
    <aura:attribute name="check_image" type="Boolean" default="false"/>
    <aura:attribute name="activity" type="Everyday_Activity__c"/>
    <aura:attribute name="showcontent" type="boolean" default="true"/> 
    <aura:attribute name="themeColors" type="Map"/>
    <aura:attribute name="rating_value" type="Map"/>
    <aura:attribute name="themecolor" type="String" />
    <aura:attribute name="themerecordtype" type="String" default="{!v.activity.RecordType.Name}"/>
    <aura:attribute name="numbers" type="integer[]"/>
    <aura:attribute name="remain" type="integer[]" default="[]"/>
    <aura:attribute name="showdetail" type="boolean" default="true"/>
    <aura:attribute name="showchatter" type="boolean" default="false"/>
    <aura:attribute name="showfeedback" type="boolean" default="false"/>
    <!--<aura:attribute name="showtodoactpage" type="boolean" default="false"/>-->
    <aura:attribute name="themeName" type="boolean" default="true"/> 
    <aura:attribute name="showswipecard" type="boolean" default="true"/>
    <aura:attribute name="detailPage" type="boolean" default="false"/>
    <aura:attribute name="pagename" type="string"/>
    <aura:attribute name="index" type="integer"/>
    <aura:attribute name="pageIndex" type="integer"/>
    <aura:attribute name="ShowDetailCard" type="boolean" default="false"/>
    <aura:attribute name="booleanValue" type="List"/>
    <aura:attribute name="showspinner" type="Boolean" default="false"/>
    <aura:attribute name="isHomepage" type="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="slds">
        <div> 
            <aura:if isTrue="{!v.ShowDetailCard}">
                <span class="back_image_icon"><img class="back_image"  onclick="{!c.gotoPrevious}" src="/resource/Lightning_designing_style/assets/icons/utility/back_60.png"></img></span>
                <div class="container">  
                    <c:EA_ActivityHeader_Common themeName="{!v.activity.RecordType.Name}" themeColors="{!v.themecolor}"
                                                activityName="{!v.activity.Name}"  check_image="{!v.check_image}" 
                                                activityRating="{!v.rating_value}" numbers="{!v.numbers}" remain="{!v.remain}" />
                    <div class="section">
                        <c:EA_Activity_Completion_Detail minutestoComplete="{!v.activity.Minutes_to_Complete_Action__c}"  peopleRequired="{!v.activity.Participants_Required__c}" activityPoints="{!v.activity.Activity_Points__c}"/>   
                        <div style="margin-left:5px;margin-top: 5px;">
                            <p class="slds-text-body--medium desc"><ui:outputText value="{!v.activity.Description__c}"/></p>
                        </div>
                        <div style="height:85px;margin-bottom: 7px;">
                            <p class="slds-text-heading--label recent">Recently completed by</p>
                            <div>
                                <c:EA_RecentUsers_comp recentactivityid="{!v.EAactivityid}"/>
                                <!-- <c:ImageComponent recentactivityid="{!v.EAactivityid}"/> -->
                                <!-- <c:ImageComponent recentactivityid="{!v.activity.Id}" recentUsers="{!v.activity.userPhotoUrl1}"/> -->
                            </div>
                        </div>
                        <div class="min-sec ">     
                            <div class="divider"></div>
                            <div>
                                <p class="slds-text-body--medium topTip"> TOP TIP :</p>
                            </div>
                            <div>
                                <p class="slds-text-body--small topTip_para"> <ui:outputText value="{!v.activity.Top_Tip__c}"/></p>
                            </div>
                        </div>                                              
                        <c:EverydayAction_Faturedcontent_component EAactivityid="{!v.EAactivityid}"/>
                        <c:EA_Footer_Common activity="{!v.activity.Id}" themeColors="{!v.themecolor}" pagename="{!v.pagename}" index="{!v.index}" navigatePageIndex="{!v.pageIndex}" />
                    </div>
                </div>
            </aura:if>
        </div>
        <!--<aura:if isTrue="{!v.showtodoactpage}">
            <c:EA_ToDoActivityPage activityId="{!v.activity.Id}" themeColors="{!v.themeColors}"  pageIndex="{!v.pageIndex}"></c:EA_ToDoActivityPage>
        </aura:if>-->
    </div>
</aura:component>