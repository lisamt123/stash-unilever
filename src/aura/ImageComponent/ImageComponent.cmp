<aura:component controller="EA_ControllerClass">
    <aura:attribute name="users" type="EA_Wrapper_Class.EA_RecentlyCompletedUsers"/>
    <aura:attribute name="recentactivityid" type="string"/>
    <aura:attribute name="recentUsers" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.getUsersPics}"/>
    <aura:attribute name="showrecentUsers" type="boolean" default="false"/>
      <aura:attribute name="showmessage" type="boolean" default="false"/>
    <ul class="piclist-inline">
     
       <aura:if isTrue="{!v.showrecentUsers}">
        <aura:iteration items="{!v.recentUsers}" var="User">
        
          
             
    	<li style="width: 100%;">
        <img src="{!User}" class="recent_profile_img"/> 
    	</li>
          
            </aura:iteration>
         </aura:if>   
        <aura:if isTrue="{!v.showmessage}">
            <span> You can be the first one to do this activity!</span>
        </aura:if>
       
        
    </ul>

</aura:component>