<aura:component implements="flexipage:availableForAllPageTypes,force:appHostable" controller="CORE_Feedback_App_Controller">
    <ltng:require scripts="/resource/CORE_IC_IdeasLigthtning/js/jquery.js,/resource/CORE_IC_IdeasLigthtning/js/jqueryUiJs.js"                   
                  styles="/resource/CORE_IC_IdeasLigthtning/js/jqueryUiCss.css, /resource/Lightning_designing_style/assets/styles/salesforce-lightning-design-system.min.css,/resource/Lightning_designing_style/assets/fonts"                  
                  afterScriptsLoaded="{!c.loadIdeaHome}"/> 
    <aura:handler event="c:CORE_IC_IdeaTemplateEvent" action="{!c.navigateWithinComponent}" />
    <aura:attribute name="articleId" type="String"/>
    <aura:attribute name="articleType" type="String"/>
    <aura:attribute name="pannelType" type="String" default="campaignsListPannel"/>
    <aura:attribute name="appName" type="String" default="Ideas"/>
    <aura:attribute name="pageName" type="String" default="CORE_IC_IdeaHome"/>
    <aura:attribute name="showspinner" type="Boolean" default="false"/>
    
    
    <!--<aura:handler event="c:Feedback_Event" action="{!c.handleEventTest}" />-->    
    <!--Applying background color for the base page-->
    <style>
        body, .container.cCORE_IC_IdeaTemplate, .forceStyle.desktop .asyncCarouselIndicator, .forceStyle.desktop .forceDetailPanel, .forceStyle.desktop .forceRecordHome, .forceStyle.desktop .oneContent{
        	background: #F5F6F7 !important;  
        }
    </style> 
    <div class="container">
        <div id="list" class="row">  
            <div aura:id="IdeasPannel"></div>       
        </div>
    </div>
  
</aura:component>